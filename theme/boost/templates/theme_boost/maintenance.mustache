{{!
    @template theme_boost/maintenance

    Maintenance mode layout.

    Context variables required:
    * sitename - Site name
    * output - Output renderer
    * bodyattributes - Body HTML attributes
    * wwwroot - Site base URL
}}
{{{ output.doctype }}}
<html {{{ output.htmlattributes }}}>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{#str}}sitemaintenance, admin{{/str}} - {{sitename}}</title>
    <link rel="stylesheet" href="{{wwwroot}}/theme/boost/style/boost.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    {{{ output.standard_head_html }}}
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background: var(--gradient-primary);
        }
        .maintenance-container {
            text-align: center;
            padding: 3rem;
            background: white;
            border-radius: var(--bs-border-radius-xl);
            box-shadow: var(--bs-box-shadow-lg);
            max-width: 500px;
            width: 90%;
        }
        .maintenance-icon {
            font-size: 4rem;
            color: var(--bs-warning);
            margin-bottom: 1.5rem;
        }
        .progress-bar {
            height: 4px;
            background: var(--bs-light);
            border-radius: 2px;
            overflow: hidden;
            margin-top: 2rem;
        }
        .progress-fill {
            width: 30%;
            height: 100%;
            background: var(--gradient-primary);
            animation: progress 2s ease-in-out infinite;
        }
        @keyframes progress {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(400%); }
        }
    </style>
</head>
<body {{{ bodyattributes }}}>
{{{ output.standard_top_of_body_html }}}

<div class="maintenance-container">
    <div class="maintenance-icon">
        <i class="fas fa-tools"></i>
    </div>
    <h1 class="h2 mb-3">{{#str}}sitemaintenance, admin{{/str}}</h1>

    {{{ output.main_content }}}

    <div class="progress-bar">
        <div class="progress-fill"></div>
    </div>

    <p class="text-muted mt-3 mb-0 fs-sm">
        {{#str}}pleasewait, core{{/str}}
    </p>
</div>

{{{ output.standard_end_of_body_html }}}
</body>
</html>
