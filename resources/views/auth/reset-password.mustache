<!-- Reset Password Form -->
<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>{{#__}}auth.reset_password{{/__}}</h2>
            <p>{{#__}}auth.reset_password_instruction{{/__}}</p>
        </div>

        {{#error}}
        <div class="alert alert-error">
            <i class="bi bi-exclamation-circle"></i>
            {{error}}
        </div>
        {{/error}}

        <!-- Password Requirements Info -->
        <div class="password-requirements">
            <h4>{{#__}}auth.password_requirements{{/__}}</h4>
            <ul>
                <li>
                    <i class="bi bi-check-circle"></i>
                    {{#__}}auth.password_min_length{{/__}}
                </li>
                <li>
                    <i class="bi bi-check-circle"></i>
                    {{#__}}auth.password_recommendation{{/__}}
                </li>
            </ul>
        </div>

        <form method="POST" action="/reset-password" class="auth-form">
            <!-- Hidden token field -->
            <input type="hidden" name="token" value="{{token}}">

            <div class="form-group">
                <label for="email">
                    <i class="bi bi-envelope"></i>
                    {{#__}}auth.email{{/__}}
                </label>
                <input type="email" id="email" name="email" value="{{email}}" readonly
                       class="readonly-input">
            </div>

            <div class="form-group">
                <label for="password">
                    <i class="bi bi-lock"></i>
                    {{#__}}auth.new_password{{/__}}
                </label>
                <input type="password" id="password" name="password" required autofocus
                       placeholder="{{#__}}auth.new_password_placeholder{{/__}}"
                       minlength="8">
            </div>

            <div class="form-group">
                <label for="password_confirm">
                    <i class="bi bi-lock-fill"></i>
                    {{#__}}auth.confirm_password{{/__}}
                </label>
                <input type="password" id="password_confirm" name="password_confirm" required
                       placeholder="{{#__}}auth.confirm_password_placeholder{{/__}}"
                       minlength="8">
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-block">
                    <i class="bi bi-key"></i>
                    {{#__}}auth.reset_password{{/__}}
                </button>
            </div>
        </form>

        <div class="auth-footer">
            <a href="/login">
                <i class="bi bi-arrow-left"></i>
                {{#__}}auth.back_to_login{{/__}}
            </a>
        </div>
    </div>
</div>

