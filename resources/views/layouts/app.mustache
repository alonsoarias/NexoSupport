<!DOCTYPE html>
<html lang="{{locale}}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{#page_title}}{{page_title}}{{/page_title}}{{^page_title}}{{app_name}}{{/page_title}}</title>

    <!-- ISER Theme CSS -->
    <link rel="stylesheet" href="{{#asset}}css/iser-theme.css{{/asset}}">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Navigation CSS -->
    <link rel="stylesheet" href="{{#asset}}css/navigation.css{{/asset}}">
    <link rel="stylesheet" href="{{#asset}}css/sidebar.css{{/asset}}">
    <link rel="stylesheet" href="{{#asset}}css/responsive.css{{/asset}}">
    <link rel="stylesheet" href="{{#asset}}css/dark-mode.css{{/asset}}">

    <!-- Admin Views CSS -->
    <link rel="stylesheet" href="{{#asset}}css/admin-views.css{{/asset}}">

    {{#include_charts}}
    <!-- Chart.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    {{/include_charts}}

    {{#additional_css}}
    {{#.}}
    <link rel="stylesheet" href="{{.}}">
    {{/.}}
    {{/additional_css}}

    {{#custom_css}}
    <style>
        {{{custom_css}}}
    </style>
    {{/custom_css}}
</head>
<body class="app-layout">
    <!-- Topbar -->
    {{> components/navigation/topbar}}

    <div class="app-container">
        <!-- Sidebar -->
        {{> components/navigation/sidebar}}

        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Breadcrumbs -->
            {{#navigation.breadcrumbs}}
            {{> components/navigation/breadcrumbs}}
            {{/navigation.breadcrumbs}}

            <!-- Stats (opcional) -->
            {{#show_stats}}
            {{> components/stats}}
            {{/show_stats}}

            <!-- Page Content -->
            <div class="content">
                {{{content}}}
            </div>

            <!-- Footer -->
            {{> components/footer}}
        </main>
    </div>

    <!-- ISER Theme JS -->
    <script src="{{#asset}}js/iser-theme.js{{/asset}}"></script>

    <!-- Navigation JS -->
    <script src="{{#asset}}js/navigation.js{{/asset}}"></script>

    {{#additional_js}}
    {{#.}}
    <script src="{{.}}"></script>
    {{/.}}
    {{/additional_js}}

    {{#custom_js}}
    <script>
        {{{custom_js}}}
    </script>
    {{/custom_js}}
</body>
</html>
