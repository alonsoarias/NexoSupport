<!DOCTYPE html>
<html lang="{{locale}}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{#page_title}}{{page_title}}{{/page_title}}{{^page_title}}{{app_name}}{{/page_title}}</title>

    <!-- ISER Theme CSS -->
    <link rel="stylesheet" href="{{#asset}}css/iser-theme.css{{/asset}}">

    {{#include_charts}}
    <!-- Chart.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    {{/include_charts}}

    {{#additional_css}}
    {{#.}}
    <link rel="stylesheet" href="{{.}}">
    {{/.}}
    {{/additional_css}}

    {{#custom_css}}
    <style>
        {{{custom_css}}}
    </style>
    {{/custom_css}}
</head>
<body>
    <div class="container">
        <!-- Header -->
        {{> components/header}}

        <!-- Stats (opcional) -->
        {{#show_stats}}
        {{> components/stats}}
        {{/show_stats}}

        <!-- Content -->
        <div class="content">
            {{{content}}}
        </div>

        <!-- Footer -->
        {{> components/footer}}
    </div>

    <!-- ISER Theme JS -->
    <script src="{{#asset}}js/iser-theme.js{{/asset}}"></script>

    {{#additional_js}}
    {{#.}}
    <script src="{{.}}"></script>
    {{/.}}
    {{/additional_js}}

    {{#custom_js}}
    <script>
        {{{custom_js}}}
    </script>
    {{/custom_js}}
</body>
</html>
