<!-- Search Results Page (FASE 8) -->
<div class="search-results-container">
    <!-- Header and Query -->
    <div class="results-header">
        <h2>{{header_title}}</h2>
        <div class="results-meta">
            <strong>{{total_results}}</strong> {{#locale}}{{#eq locale 'es'}}resultado{{#eq total_results 1}}{{/eq}}{{^eq total_results 1}}s{{/eq}}{{/eq}}{{#eq locale 'en'}}result{{#eq total_results 1}}{{/eq}}{{^eq total_results 1}}s{{/eq}}{{/eq}}{{#eq locale 'pt'}}resultado{{#eq total_results 1}}{{/eq}}{{^eq total_results 1}}s{{/eq}}{{/eq}}
            {{#locale}}{{#eq locale 'es'}}para {{/eq}}{{#eq locale 'en'}}for {{/eq}}{{#eq locale 'pt'}}para {{/eq}}{{/locale}}"<strong>{{query}}</strong>"
        </div>
    </div>

    <!-- Active Filters Display -->
    {{#filters_applied}}
    <div class="active-filters">
        <div class="filters-label">{{#locale}}{{#eq locale 'es'}}Filtros Activos:{{/eq}}{{#eq locale 'en'}}Active Filters:{{/eq}}{{#eq locale 'pt'}}Filtros Ativos:{{/eq}}{{/locale}}</div>
        {{#active_filters}}
        <span class="filter-badge">
            <strong>{{label}}:</strong> {{value}}
            <a href="#" data-param="{{param}}" class="remove-filter">
                <i class="bi bi-x-circle"></i>
            </a>
        </span>
        {{/active_filters}}
        <a href="/search/results?q={{query}}" class="clear-all">{{#locale}}{{#eq locale 'es'}}Limpiar Todos{{/eq}}{{#eq locale 'en'}}Clear All{{/eq}}{{#eq locale 'pt'}}Limpar Todos{{/eq}}{{/locale}}</a>
    </div>
    {{/filters_applied}}

    <!-- No Results Message -->
    {{^has_results}}
    <div class="no-results">
        <div class="no-results-icon">
            <i class="bi bi-search"></i>
        </div>
        <h3>{{#locale}}{{#eq locale 'es'}}Sin Resultados{{/eq}}{{#eq locale 'en'}}No Results{{/eq}}{{#eq locale 'pt'}}Nenhum Resultado{{/eq}}{{/locale}}</h3>
        <p>{{#locale}}{{#eq locale 'es'}}No se encontraron resultados para "{{query}}". Intenta con otros términos.{{/eq}}{{#eq locale 'en'}}No results found for "{{query}}". Try with different terms.{{/eq}}{{#eq locale 'pt'}}Nenhum resultado encontrado para "{{query}}". Tente com termos diferentes.{{/eq}}{{/locale}}</p>
        <a href="/search" class="btn btn-primary">
            <i class="bi bi-search"></i>
            {{#locale}}{{#eq locale 'es'}}Nueva Búsqueda{{/eq}}{{#eq locale 'en'}}New Search{{/eq}}{{#eq locale 'pt'}}Nova Pesquisa{{/eq}}{{/locale}}
        </a>
    </div>
    {{/has_results}}

    <!-- Results Display -->
    {{#has_results}}
    <div class="results-section">
        <!-- Grouped Results -->
        {{#grouped_results}}
        <div class="results-group">
            <h3 class="group-title">
                <i class="bi bi-folder"></i>
                {{label}} <span class="group-count">({{count}})</span>
            </h3>

            <div class="results-list">
                {{#results}}
                <div class="result-item">
                    <div class="result-icon">
                        <i class="bi bi-{{icon_class}}"></i>
                    </div>

                    <div class="result-content">
                        <div class="result-title">
                            <a href="{{url}}">{{title}}</a>
                            {{#badge}}
                            <span class="result-badge">{{badge}}</span>
                            {{/badge}}
                        </div>

                        {{#subtitle}}
                        <div class="result-subtitle">{{subtitle}}</div>
                        {{/subtitle}}

                        {{#description}}
                        <div class="result-description">{{description}}</div>
                        {{/description}}

                        <div class="result-meta">
                            {{#date_formatted}}
                            <span class="meta-item">
                                <i class="bi bi-calendar-event"></i>
                                {{date_formatted}}
                            </span>
                            {{/date_formatted}}

                            {{#status}}
                            <span class="meta-item">
                                <i class="bi bi-info-circle"></i>
                                <span class="{{status_badge}}">{{status}}</span>
                            </span>
                            {{/status}}

                            {{#views}}
                            <span class="meta-item">
                                <i class="bi bi-eye"></i>
                                {{views}} views
                            </span>
                            {{/views}}

                            {{#relevance_score}}
                            <span class="meta-item relevance">
                                <i class="bi bi-star"></i>
                                {{relevance_score}}% Match
                            </span>
                            {{/relevance_score}}
                        </div>
                    </div>
                </div>
                {{/results}}
            </div>
        </div>
        {{/grouped_results}}
    </div>

    <!-- Pagination -->
    {{#has_previous|has_next}}
    <div class="pagination-section">
        <nav class="pagination">
            {{#has_previous}}
            <a href="/search/results?q={{query}}&page={{previous_page}}" class="pagination-btn">
                <i class="bi bi-chevron-left"></i>
                {{#locale}}{{#eq locale 'es'}}Anterior{{/eq}}{{#eq locale 'en'}}Previous{{/eq}}{{#eq locale 'pt'}}Anterior{{/eq}}{{/locale}}
            </a>
            {{/has_previous}}

            <div class="pagination-pages">
                {{#page_links}}
                {{#active}}
                <span class="page-current">{{page}}</span>
                {{/active}}
                {{^active}}
                <a href="{{url}}" class="page-link">{{page}}</a>
                {{/active}}
                {{/page_links}}
            </div>

            {{#has_next}}
            <a href="/search/results?q={{query}}&page={{next_page}}" class="pagination-btn">
                {{#locale}}{{#eq locale 'es'}}Siguiente{{/eq}}{{#eq locale 'en'}}Next{{/eq}}{{#eq locale 'pt'}}Próximo{{/eq}}{{/locale}}
                <i class="bi bi-chevron-right"></i>
            </a>
            {{/has_next}}
        </nav>

        <div class="pagination-info">
            {{#locale}}{{#eq locale 'es'}}Página {{current_page}} de {{total_pages}}{{/eq}}{{#eq locale 'en'}}Page {{current_page}} of {{total_pages}}{{/eq}}{{#eq locale 'pt'}}Página {{current_page}} de {{total_pages}}{{/eq}}{{/locale}}
        </div>
    </div>
    {{/has_previous|has_next}}

    <!-- Back to Search Link -->
    <div class="back-to-search">
        <a href="/search">
            <i class="bi bi-arrow-left"></i>
            {{#locale}}{{#eq locale 'es'}}Volver a Búsqueda{{/eq}}{{#eq locale 'en'}}Back to Search{{/eq}}{{#eq locale 'pt'}}Voltar para Pesquisa{{/eq}}{{/locale}}
        </a>
    </div>
    {{/has_results}}
</div>

<style>
.search-results-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 20px;
}

.results-header {
    margin-bottom: 25px;
    padding-bottom: 20px;
    border-bottom: 2px solid #f0f0f0;
}

.results-header h2 {
    margin: 0 0 10px 0;
    color: #333;
}

.results-meta {
    color: #666;
    font-size: 14px;
}

.results-meta strong {
    color: #1B9E88;
}

/* Active Filters */
.active-filters {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 20px;
    padding: 15px;
    background: #f5f5f5;
    border-radius: 6px;
}

.filters-label {
    font-weight: bold;
    color: #333;
}

.filter-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: white;
    padding: 6px 12px;
    border-radius: 20px;
    border: 1px solid #ddd;
    font-size: 13px;
}

.filter-badge strong {
    color: #333;
}

.remove-filter {
    color: #999;
    text-decoration: none;
    cursor: pointer;
}

.remove-filter:hover {
    color: #d32f2f;
}

.clear-all {
    font-size: 13px;
    color: #1B9E88;
    text-decoration: none;
    cursor: pointer;
}

.clear-all:hover {
    text-decoration: underline;
}

/* No Results */
.no-results {
    text-align: center;
    padding: 60px 20px;
}

.no-results-icon {
    font-size: 64px;
    color: #ccc;
    margin-bottom: 20px;
}

.no-results h3 {
    color: #333;
    margin-bottom: 10px;
}

.no-results p {
    color: #666;
    margin-bottom: 20px;
}

/* Results Section */
.results-section {
    margin-bottom: 30px;
}

.results-group {
    margin-bottom: 30px;
}

.group-title {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 16px;
    color: #333;
    margin-bottom: 15px;
    padding-bottom: 10px;
    border-bottom: 2px solid #1B9E88;
}

.group-count {
    background: #1B9E88;
    color: white;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 12px;
}

.results-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

/* Result Item */
.result-item {
    display: flex;
    gap: 15px;
    padding: 15px;
    background: white;
    border: 1px solid #eee;
    border-radius: 6px;
    transition: all 0.3s ease;
    cursor: pointer;
}

.result-item:hover {
    border-color: #1B9E88;
    box-shadow: 0 2px 8px rgba(27, 158, 136, 0.1);
    transform: translateX(2px);
}

.result-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f0f0f0;
    border-radius: 6px;
    color: #1B9E88;
    font-size: 20px;
}

.result-content {
    flex: 1;
    min-width: 0;
}

.result-title {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 5px;
}

.result-title a {
    color: #1B9E88;
    text-decoration: none;
    font-weight: 500;
    word-break: break-word;
}

.result-title a:hover {
    text-decoration: underline;
}

.result-badge {
    display: inline-block;
    background: #FFD800;
    color: #333;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 11px;
    font-weight: bold;
    white-space: nowrap;
}

.result-subtitle {
    color: #999;
    font-size: 13px;
    margin-bottom: 3px;
}

.result-description {
    color: #666;
    font-size: 14px;
    margin-bottom: 8px;
    line-height: 1.4;
    word-break: break-word;
}

.result-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    font-size: 12px;
    color: #999;
}

.meta-item {
    display: flex;
    align-items: center;
    gap: 4px;
    white-space: nowrap;
}

.meta-item i {
    font-size: 11px;
}

.relevance {
    color: #FFD800;
    font-weight: bold;
}

/* Badges */
.badge {
    display: inline-block;
    padding: 2px 6px;
    border-radius: 3px;
    font-size: 11px;
    font-weight: bold;
    white-space: nowrap;
}

.badge-success {
    background: #d4edda;
    color: #155724;
}

.badge-secondary {
    background: #e2e3e5;
    color: #383d41;
}

.badge-danger {
    background: #f8d7da;
    color: #721c24;
}

.badge-warning {
    background: #fff3cd;
    color: #856404;
}

.badge-info {
    background: #d1ecf1;
    color: #0c5460;
}

/* Pagination */
.pagination-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 30px 0;
    padding-top: 20px;
    border-top: 1px solid #eee;
}

.pagination {
    display: flex;
    align-items: center;
    gap: 5px;
}

.pagination-btn {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    padding: 8px 12px;
    background: white;
    border: 1px solid #ddd;
    border-radius: 4px;
    color: #1B9E88;
    text-decoration: none;
    font-size: 14px;
    transition: all 0.3s ease;
}

.pagination-btn:hover {
    background: #1B9E88;
    color: white;
}

.pagination-pages {
    display: flex;
    gap: 5px;
}

.page-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: white;
    border: 1px solid #ddd;
    border-radius: 4px;
    color: #1B9E88;
    text-decoration: none;
    font-size: 14px;
    transition: all 0.3s ease;
}

.page-link:hover {
    background: #1B9E88;
    color: white;
}

.page-current {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: #1B9E88;
    color: white;
    border-radius: 4px;
    font-size: 14px;
    font-weight: bold;
}

.pagination-info {
    color: #999;
    font-size: 13px;
    white-space: nowrap;
}

/* Back to Search */
.back-to-search {
    text-align: center;
    margin-top: 30px;
}

.back-to-search a {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: #1B9E88;
    text-decoration: none;
    font-size: 14px;
    transition: all 0.3s ease;
}

.back-to-search a:hover {
    gap: 12px;
    text-decoration: underline;
}

/* Responsive */
@media (max-width: 768px) {
    .result-item {
        flex-direction: column;
    }

    .result-icon {
        width: 100%;
        border-radius: 6px 6px 0 0;
    }

    .active-filters {
        flex-direction: column;
        align-items: flex-start;
    }

    .pagination-section {
        flex-direction: column;
        gap: 15px;
    }

    .pagination {
        width: 100%;
        justify-content: center;
    }

    .pagination-pages {
        width: 100%;
        justify-content: center;
    }
}
</style>
