<!-- Advanced Search Page (FASE 8) -->
<div class="search-container">
    <div class="search-header">
        <div>
            <h2>{{header_title}}</h2>
            <p class="text-muted">{{#locale}}{{#eq locale 'es'}}Busca en usuarios, tickets, base de conocimiento y archivos{{/eq}}{{#eq locale 'en'}}Search across users, tickets, knowledge base and files{{/eq}}{{#eq locale 'pt'}}Pesquise em usuários, tickets, base de conhecimento e arquivos{{/eq}}{{/locale}}</p>
        </div>
        <div class="search-stats">
            <div class="stat-item">
                <strong>{{stats.total}}</strong>
                <small>{{#locale}}{{#eq locale 'es'}}Elementos{{/eq}}{{#eq locale 'en'}}Items{{/eq}}{{#eq locale 'pt'}}Itens{{/eq}}{{/locale}}</small>
            </div>
        </div>
    </div>

    <!-- Search Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card stat-info">
            <div class="stat-icon">
                <i class="bi bi-person"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{stats.users}}</div>
                <div class="stat-label">{{#locale}}{{#eq locale 'es'}}Usuarios{{/eq}}{{#eq locale 'en'}}Users{{/eq}}{{#eq locale 'pt'}}Usuários{{/eq}}{{/locale}}</div>
            </div>
        </div>

        <div class="stat-card stat-primary">
            <div class="stat-icon">
                <i class="bi bi-ticket"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{stats.tickets}}</div>
                <div class="stat-label">{{#locale}}{{#eq locale 'es'}}Tickets{{/eq}}{{#eq locale 'en'}}Tickets{{/eq}}{{#eq locale 'pt'}}Tickets{{/eq}}{{/locale}}</div>
            </div>
        </div>

        <div class="stat-card stat-success">
            <div class="stat-icon">
                <i class="bi bi-book"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{stats.knowledge_base}}</div>
                <div class="stat-label">{{#locale}}{{#eq locale 'es'}}Base de Conocimiento{{/eq}}{{#eq locale 'en'}}Knowledge Base{{/eq}}{{#eq locale 'pt'}}Base de Conhecimento{{/eq}}{{/locale}}</div>
            </div>
        </div>

        <div class="stat-card stat-warning">
            <div class="stat-icon">
                <i class="bi bi-file"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{stats.files}}</div>
                <div class="stat-label">{{#locale}}{{#eq locale 'es'}}Archivos{{/eq}}{{#eq locale 'en'}}Files{{/eq}}{{#eq locale 'pt'}}Arquivos{{/eq}}{{/locale}}</div>
            </div>
        </div>
    </div>

    <!-- Advanced Search Form -->
    <div class="search-form-section">
        <h3>{{#locale}}{{#eq locale 'es'}}Búsqueda Avanzada{{/eq}}{{#eq locale 'en'}}Advanced Search{{/eq}}{{#eq locale 'pt'}}Pesquisa Avançada{{/eq}}{{/locale}}</h3>

        <form method="GET" action="/search/results" class="search-form">
            <div class="form-group">
                <label for="search-query">{{#locale}}{{#eq locale 'es'}}Búsqueda (Mínimo 3 caracteres){{/eq}}{{#eq locale 'en'}}Search (Minimum 3 characters){{/eq}}{{#eq locale 'pt'}}Pesquisa (Mínimo 3 caracteres){{/eq}}{{/locale}}</label>
                <div class="search-input-wrapper">
                    <i class="bi bi-search"></i>
                    <input type="text" id="search-query" name="q" class="form-control" placeholder="{{#locale}}{{#eq locale 'es'}}Ingrese su búsqueda...{{/eq}}{{#eq locale 'en'}}Enter your search...{{/eq}}{{#eq locale 'pt'}}Digite sua pesquisa...{{/eq}}{{/locale}}" minlength="3" required>
                </div>
            </div>

            <!-- Filter Row 1: Entity Type and Status -->
            <div class="form-row">
                <div class="form-group">
                    <label for="entity-type">{{#locale}}{{#eq locale 'es'}}Tipo de Entidad{{/eq}}{{#eq locale 'en'}}Entity Type{{/eq}}{{#eq locale 'pt'}}Tipo de Entidade{{/eq}}{{/locale}}</label>
                    <select id="entity-type" name="entity_type" class="form-control">
                        {{#entity_types}}
                        <option value="{{value}}">{{label}} ({{count}})</option>
                        {{/entity_types}}
                    </select>
                </div>

                <div class="form-group">
                    <label for="status">{{#locale}}{{#eq locale 'es'}}Estado{{/eq}}{{#eq locale 'en'}}Status{{/eq}}{{#eq locale 'pt'}}Status{{/eq}}{{/locale}}</label>
                    <select id="status" name="status" class="form-control">
                        {{#status_options}}
                        <option value="{{value}}">{{label}}</option>
                        {{/status_options}}
                    </select>
                </div>
            </div>

            <!-- Filter Row 2: Date Range -->
            <div class="form-row">
                <div class="form-group">
                    <label for="date-from">{{#locale}}{{#eq locale 'es'}}Desde{{/eq}}{{#eq locale 'en'}}From{{/eq}}{{#eq locale 'pt'}}De{{/eq}}{{/locale}}</label>
                    <input type="date" id="date-from" name="date_from" class="form-control">
                </div>

                <div class="form-group">
                    <label for="date-to">{{#locale}}{{#eq locale 'es'}}Hasta{{/eq}}{{#eq locale 'en'}}To{{/eq}}{{#eq locale 'pt'}}Até{{/eq}}{{/locale}}</label>
                    <input type="date" id="date-to" name="date_to" class="form-control">
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i>
                    {{#locale}}{{#eq locale 'es'}}Buscar{{/eq}}{{#eq locale 'en'}}Search{{/eq}}{{#eq locale 'pt'}}Pesquisar{{/eq}}{{/locale}}
                </button>
                <button type="reset" class="btn btn-neutral">
                    <i class="bi bi-arrow-clockwise"></i>
                    {{#locale}}{{#eq locale 'es'}}Limpiar{{/eq}}{{#eq locale 'en'}}Clear{{/eq}}{{#eq locale 'pt'}}Limpar{{/eq}}{{/locale}}
                </button>
            </div>
        </form>
    </div>

    <!-- Tips Section -->
    <div class="search-tips">
        <h4>{{#locale}}{{#eq locale 'es'}}Consejos de Búsqueda{{/eq}}{{#eq locale 'en'}}Search Tips{{/eq}}{{#eq locale 'pt'}}Dicas de Pesquisa{{/eq}}{{/locale}}</h4>
        <ul>
            <li>{{#locale}}{{#eq locale 'es'}}Usa al menos 3 caracteres para comenzar la búsqueda{{/eq}}{{#eq locale 'en'}}Use at least 3 characters to start searching{{/eq}}{{#eq locale 'pt'}}Use pelo menos 3 caracteres para iniciar a pesquisa{{/eq}}{{/locale}}</li>
            <li>{{#locale}}{{#eq locale 'es'}}Los resultados se ordenan por relevancia automáticamente{{/eq}}{{#eq locale 'en'}}Results are automatically sorted by relevance{{/eq}}{{#eq locale 'pt'}}Os resultados são classificados automaticamente por relevância{{/eq}}{{/locale}}</li>
            <li>{{#locale}}{{#eq locale 'es'}}Usa los filtros avanzados para refinar los resultados{{/eq}}{{#eq locale 'en'}}Use advanced filters to refine results{{/eq}}{{#eq locale 'pt'}}Use filtros avançados para refinar resultados{{/eq}}{{/locale}}</li>
            <li>{{#locale}}{{#eq locale 'es'}}Busca por email, nombre de usuario, número de ticket, etc.{{/eq}}{{#eq locale 'en'}}Search by email, username, ticket number, etc.{{/eq}}{{#eq locale 'pt'}}Pesquise por email, nome de usuário, número de ticket, etc.{{/eq}}{{/locale}}</li>
        </ul>
    </div>
</div>

<style>
.search-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.search-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 2px solid #f0f0f0;
}

.search-stats {
    display: flex;
    gap: 20px;
}

.stat-item {
    text-align: center;
}

.stat-item strong {
    display: block;
    font-size: 24px;
    color: #1B9E88;
    margin-bottom: 5px;
}

.stat-item small {
    display: block;
    color: #999;
    font-size: 12px;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.stat-card {
    padding: 20px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 15px;
    color: white;
}

.stat-card.stat-info {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.stat-card.stat-primary {
    background: linear-gradient(135deg, #1B9E88 0%, #0d5d55 100%);
}

.stat-card.stat-success {
    background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
}

.stat-card.stat-warning {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.stat-icon {
    font-size: 28px;
}

.stat-value {
    font-size: 24px;
    font-weight: bold;
}

.stat-label {
    font-size: 12px;
    opacity: 0.9;
}

.search-form-section {
    background: white;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 30px;
}

.search-form-section h3 {
    margin-top: 0;
    margin-bottom: 20px;
    color: #333;
    font-size: 18px;
}

.search-input-wrapper {
    position: relative;
}

.search-input-wrapper i {
    position: absolute;
    left: 15px;
    top: 50%;
    transform: translateY(-50%);
    color: #999;
}

.search-input-wrapper input {
    padding-left: 40px !important;
    font-size: 16px;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 20px;
}

@media (max-width: 768px) {
    .form-row {
        grid-template-columns: 1fr;
    }
}

.form-actions {
    display: flex;
    gap: 10px;
    margin-top: 25px;
}

.form-actions button {
    flex: 1;
    max-width: 150px;
}

.search-tips {
    background: #f9f9f9;
    padding: 20px;
    border-radius: 8px;
    border-left: 4px solid #1B9E88;
}

.search-tips h4 {
    margin-top: 0;
    color: #1B9E88;
}

.search-tips ul {
    list-style-position: inside;
    margin: 0;
    padding: 0;
}

.search-tips li {
    padding: 8px 0;
    color: #555;
    font-size: 14px;
}

.text-muted {
    color: #999;
}
</style>
