<!-- Theme Preview System -->
<div class="theme-preview-container">
    <div class="page-header">
        <h2>{{#__}}theme.preview.title{{/__}}</h2>
        <p>{{#__}}theme.preview.description{{/__}}</p>
    </div>

    {{#message}}
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i>
        {{message}}
    </div>
    {{/message}}

    {{#error}}
    <div class="alert alert-error">
        <i class="bi bi-exclamation-circle"></i>
        {{error}}
    </div>
    {{/error}}

    <div class="theme-preview-grid">
        <!-- Theme Selector Panel -->
        <div class="theme-selector-panel">
            <h3>{{#__}}theme.preview.available_themes{{/__}}</h3>
            <p class="panel-description">{{#__}}theme.preview.select_theme{{/__}}</p>

            <div class="theme-list">
                {{#themes}}
                <div class="theme-item {{#is_current}}active{{/is_current}}" data-theme="{{id}}">
                    <div class="theme-thumbnail">
                        <img src="{{thumbnail}}" alt="{{name}}" loading="lazy">
                    </div>

                    <div class="theme-info">
                        <h4>{{name}}</h4>
                        <p class="theme-description">{{description}}</p>
                        <div class="theme-metadata">
                            <span class="author"><i class="bi bi-person"></i> {{author}}</span>
                            <span class="version"><i class="bi bi-tag"></i> v{{version}}</span>
                        </div>
                    </div>

                    <div class="theme-actions">
                        <button class="btn btn-sm btn-primary preview-btn" data-theme="{{id}}" title="{{#__}}theme.preview.select_theme{{/__}}">
                            <i class="bi bi-eye"></i>
                            {{#is_current}}
                            {{#__}}theme.preview.current{{/__}}
                            {{/is_current}}
                            {{^is_current}}
                            {{#__}}theme.preview.select{{/__}}
                            {{/is_current}}
                        </button>
                    </div>
                </div>
                {{/themes}}
            </div>
        </div>

        <!-- Live Preview Panel -->
        <div class="preview-panel">
            <div class="preview-header">
                <h3>{{#__}}theme.preview.live_preview{{/__}}</h3>
                <div class="preview-controls">
                    <button class="btn btn-sm btn-secondary reset-preview-btn" id="reset-preview-btn" title="{{#__}}theme.preview.reset{{/__}}">
                        <i class="bi bi-arrow-clockwise"></i>
                        {{#__}}theme.preview.reset{{/__}}
                    </button>
                </div>
            </div>

            <div class="preview-iframe-container">
                <iframe id="preview-iframe" src="{{preview_url}}" title="{{#__}}theme.preview.preview{{/__}}" class="preview-iframe"></iframe>
            </div>

            <!-- Theme Configuration Panel -->
            <div class="config-panel">
                <h4>{{#__}}theme.preview.configuration{{/__}}</h4>

                <!-- Colors Section -->
                <div class="config-section">
                    <h5><i class="bi bi-palette"></i> {{#__}}settings.groups.colors{{/__}}</h5>

                    <div class="color-grid">
                        {{#colors}}
                        <div class="form-group">
                            <label>{{@key}}</label>
                            <div class="color-input-wrapper">
                                <input type="color" name="colors[{{@key}}]" value="{{.}}" class="color-picker" data-color-name="{{@key}}">
                                <span class="color-value">{{.}}</span>
                            </div>
                        </div>
                        {{/colors}}
                    </div>
                </div>

                <!-- Typography Section -->
                <div class="config-section">
                    <h5><i class="bi bi-fonts"></i> {{#__}}settings.groups.typography{{/__}}</h5>

                    {{#fonts}}
                    <div class="form-group">
                        <label>{{@key}}</label>
                        <input type="text" name="fonts[{{@key}}]" value="{{.}}" class="form-control" readonly>
                    </div>
                    {{/fonts}}
                </div>

                <!-- Action Buttons -->
                <div class="config-actions">
                    <button type="button" class="btn btn-primary apply-theme-btn" id="apply-theme-btn" {{#has_unsaved_changes}}{{else}}disabled{{/has_unsaved_changes}}>
                        <i class="bi bi-check-circle"></i>
                        {{#__}}theme.preview.apply{{/__}}
                    </button>

                    <button type="button" class="btn btn-secondary cancel-preview-btn" id="cancel-preview-btn">
                        <i class="bi bi-x-circle"></i>
                        {{#__}}theme.preview.cancel{{/__}}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Get references to elements
    const previewItems = document.querySelectorAll('.theme-item');
    const previewBtns = document.querySelectorAll('.preview-btn');
    const applyBtn = document.getElementById('apply-theme-btn');
    const resetBtn = document.getElementById('reset-preview-btn');
    const cancelBtn = document.getElementById('cancel-preview-btn');
    const colorPickers = document.querySelectorAll('.color-picker');
    const previewIframe = document.getElementById('preview-iframe');

    const apiBaseUrl = '/admin/theme';

    // Color picker event listeners
    colorPickers.forEach(picker => {
        picker.addEventListener('input', (e) => {
            const valueSpan = e.target.parentElement.querySelector('.color-value');
            if (valueSpan) {
                valueSpan.textContent = e.target.value;
            }

            // Enable apply button when color changes
            enableApplyButton();

            // Reload iframe preview
            reloadPreview();
        });
    });

    // Theme preview button click handlers
    previewBtns.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            const themeName = this.getAttribute('data-theme');
            switchTheme(themeName);
        });
    });

    // Apply theme button
    applyBtn.addEventListener('click', function(e) {
        e.preventDefault();
        applyTheme();
    });

    // Reset preview button
    resetBtn.addEventListener('click', function(e) {
        e.preventDefault();
        resetPreview();
    });

    // Cancel preview button
    cancelBtn.addEventListener('click', function(e) {
        e.preventDefault();
        if (confirm('{{#__}}theme.preview.cancel_confirm{{/__}}')) {
            window.location.href = '/admin/appearance';
        }
    });

    /**
     * Switch to a different theme for preview
     */
    function switchTheme(themeName) {
        fetch(apiBaseUrl + '/switch', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify({ theme: themeName })
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Failed to switch theme');
            }
            return response.json();
        })
        .then(data => {
            if (data.success) {
                // Update active state
                previewItems.forEach(item => {
                    item.classList.remove('active');
                });
                document.querySelector(`.theme-item[data-theme="${themeName}"]`).classList.add('active');

                // Update button text
                previewBtns.forEach(btn => {
                    if (btn.getAttribute('data-theme') === themeName) {
                        btn.textContent = '{{#__}}theme.preview.current{{/__}}';
                        btn.disabled = true;
                    } else {
                        btn.textContent = '{{#__}}theme.preview.select{{/__}}';
                        btn.disabled = false;
                    }
                });

                // Enable apply button
                enableApplyButton();

                // Reload preview
                reloadPreview();

                // Show success message
                showNotification(data.message, 'success');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showNotification('{{#__}}theme.errors.internal{{/__}}', 'error');
        });
    }

    /**
     * Apply current preview theme to user account
     */
    function applyTheme() {
        if (!confirm('{{#__}}theme.preview.apply_confirm{{/__}}')) {
            return;
        }

        const colorData = {};
        colorPickers.forEach(picker => {
            const colorName = picker.getAttribute('data-color-name');
            colorData[colorName] = picker.value;
        });

        fetch(apiBaseUrl + '/apply', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify({
                colors: colorData
            })
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Failed to apply theme');
            }
            return response.json();
        })
        .then(data => {
            if (data.success) {
                showNotification(data.message, 'success');
                setTimeout(() => {
                    window.location.href = '/admin/appearance';
                }, 1500);
            } else {
                showNotification(data.error || '{{#__}}theme.errors.internal{{/__}}', 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showNotification('{{#__}}theme.errors.internal{{/__}}', 'error');
        });
    }

    /**
     * Reset preview to original theme
     */
    function resetPreview() {
        fetch(apiBaseUrl + '/reset-preview', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify({})
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Failed to reset preview');
            }
            return response.json();
        })
        .then(data => {
            if (data.success) {
                location.reload();
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showNotification('{{#__}}theme.errors.internal{{/__}}', 'error');
        });
    }

    /**
     * Enable apply button
     */
    function enableApplyButton() {
        applyBtn.disabled = false;
    }

    /**
     * Reload preview iframe
     */
    function reloadPreview() {
        // Add timestamp to prevent caching
        previewIframe.src = '{{preview_url}}?t=' + new Date().getTime();
    }

    /**
     * Show notification message
     */
    function showNotification(message, type) {
        // Create alert div
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type === 'error' ? 'error' : 'success'} notification`;
        alertDiv.innerHTML = `<i class="bi bi-${type === 'error' ? 'exclamation-circle' : 'check-circle'}"></i> ${message}`;

        // Insert at top of container
        const container = document.querySelector('.theme-preview-container');
        container.insertBefore(alertDiv, container.firstChild);

        // Auto-remove after 5 seconds
        setTimeout(() => {
            alertDiv.remove();
        }, 5000);
    }
});
</script>

