<!-- Gestión de Usuarios -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>Gestión de Usuarios</h2>
            <p class="text-muted">Administración de cuentas de usuario</p>
        </div>
        <div class="user-actions">
            <a href="/admin" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <!-- Estadísticas de Usuarios (DATOS REALES) -->
    <div class="stats-grid">
        <div class="stat-card stat-primary">
            <div class="stat-icon">
                <i class="bi bi-people-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{stats.total}}</div>
                <div class="stat-label">Total de Usuarios</div>
            </div>
        </div>

        <div class="stat-card stat-success">
            <div class="stat-icon">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{stats.active}}</div>
                <div class="stat-label">Usuarios Activos</div>
            </div>
        </div>

        <div class="stat-card stat-warning">
            <div class="stat-icon">
                <i class="bi bi-pause-circle-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{stats.inactive}}</div>
                <div class="stat-label">Inactivos</div>
            </div>
        </div>

        <div class="stat-card stat-danger">
            <div class="stat-icon">
                <i class="bi bi-x-circle-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{stats.suspended}}</div>
                <div class="stat-label">Suspendidos</div>
            </div>
        </div>
    </div>

    <!-- Lista de Usuarios (DATOS REALES) -->
    <div class="users-table-section">
        <div class="table-header">
            <h3>Lista de Usuarios</h3>
        </div>
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Usuario</th>
                        <th>Email</th>
                        <th>Nombre Completo</th>
                        <th>Estado</th>
                        <th>Registrado</th>
                        <th>Último Login</th>
                    </tr>
                </thead>
                <tbody>
                    {{#users}}
                    <tr>
                        <td><strong>#{{id}}</strong></td>
                        <td>
                            <div class="user-cell">
                                <i class="bi bi-person-circle"></i>
                                <strong>{{username}}</strong>
                            </div>
                        </td>
                        <td>{{email}}</td>
                        <td>{{full_name}}</td>
                        <td>
                            <span class="badge badge-{{status}}">
                                {{status_label}}
                            </span>
                        </td>
                        <td>{{created_at}}</td>
                        <td>
                            {{#last_login}}
                            <span class="last-login">{{last_login}}</span>
                            {{/last_login}}
                            {{^last_login}}
                            <span class="text-muted">Nunca</span>
                            {{/last_login}}
                        </td>
                    </tr>
                    {{/users}}
                    {{^users}}
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            No hay usuarios registrados
                        </td>
                    </tr>
                    {{/users}}
                </tbody>
            </table>
        </div>
    </div>
</div>

