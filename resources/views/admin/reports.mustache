<!-- Reportes del Sistema -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>Reportes y Estadísticas</h2>
            <p class="text-muted">Análisis de actividad del sistema</p>
        </div>
        <div class="user-actions">
            <a href="/admin" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <!-- Estadísticas de Login por Día (DATOS REALES) -->
    <div class="reports-section">
        <h3><i class="bi bi-graph-up"></i> Estadísticas de Login (Últimos 7 Días)</h3>
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Total de Intentos</th>
                        <th>Intentos Exitosos</th>
                        <th>Intentos Fallidos</th>
                        <th>Tasa de Éxito</th>
                    </tr>
                </thead>
                <tbody>
                    {{#login_stats}}
                    <tr>
                        <td><strong>{{date}}</strong></td>
                        <td>{{total}}</td>
                        <td>
                            <span class="badge badge-success">
                                <i class="bi bi-check-circle"></i> {{successful}}
                            </span>
                        </td>
                        <td>
                            {{#total}}
                            <span class="badge badge-danger">
                                <i class="bi bi-x-circle"></i> {{failed}}
                            </span>
                            {{/total}}
                            {{^total}}
                            <span class="text-muted">0</span>
                            {{/total}}
                        </td>
                        <td>
                            {{#total}}
                            <div class="progress-bar-container">
                                <div class="progress-bar" style="width: {{success_rate}}%"></div>
                                <span class="progress-label">{{success_rate}}%</span>
                            </div>
                            {{/total}}
                            {{^total}}
                            <span class="text-muted">N/A</span>
                            {{/total}}
                        </td>
                    </tr>
                    {{/login_stats}}
                    {{^login_stats}}
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            No hay datos disponibles
                        </td>
                    </tr>
                    {{/login_stats}}
                </tbody>
            </table>
        </div>

        <!-- Totales -->
        <div class="totals-grid">
            <div class="total-card total-primary">
                <div class="total-icon">
                    <i class="bi bi-bar-chart-fill"></i>
                </div>
                <div class="total-content">
                    <div class="total-value">{{total_attempts}}</div>
                    <div class="total-label">Total de Intentos</div>
                </div>
            </div>

            <div class="total-card total-success">
                <div class="total-icon">
                    <i class="bi bi-check-circle-fill"></i>
                </div>
                <div class="total-content">
                    <div class="total-value">{{total_successful}}</div>
                    <div class="total-label">Exitosos</div>
                </div>
            </div>

            <div class="total-card total-danger">
                <div class="total-icon">
                    <i class="bi bi-x-circle-fill"></i>
                </div>
                <div class="total-content">
                    <div class="total-value">{{total_failed}}</div>
                    <div class="total-label">Fallidos</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top IPs por Intentos (DATOS REALES) -->
    <div class="reports-section">
        <h3><i class="bi bi-shield-exclamation"></i> Top IPs por Intentos de Login</h3>
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Dirección IP</th>
                        <th>Total de Intentos</th>
                        <th>Nivel de Actividad</th>
                    </tr>
                </thead>
                <tbody>
                    {{#top_ips}}
                    <tr>
                        <td><strong>{{rank}}</strong></td>
                        <td><code>{{ip_address}}</code></td>
                        <td>
                            <span class="attempts-badge">{{attempts}} intentos</span>
                        </td>
                        <td>
                            <div class="activity-level activity-{{level}}">
                                <div class="activity-bar" style="width: {{percentage}}%"></div>
                                <span>{{level_label}}</span>
                            </div>
                        </td>
                    </tr>
                    {{/top_ips}}
                    {{^top_ips}}
                    <tr>
                        <td colspan="4" class="text-center text-muted">
                            No hay datos de IPs disponibles
                        </td>
                    </tr>
                    {{/top_ips}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
