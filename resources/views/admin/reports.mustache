    color: var(--text-primary);
    margin: 0 0 5px 0;
}

.text-muted {
    color: var(--text-secondary);
    margin: 0;
}

.user-actions {
    display: flex;
    gap: 10px;
}

.btn-sm {
    padding: 8px 16px;
    font-size: 0.875rem;
}

.btn-secondary {
    background: var(--bg-secondary);
    color: var(--text-primary);
}

.btn-secondary:hover {
    background: var(--border-color);
}

