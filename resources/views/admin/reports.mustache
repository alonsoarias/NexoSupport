    display: flex;
    align-items: center;
    gap: 10px;
    padding: 5px 10px;
    border-radius: 4px;
    position: relative;
}

.activity-bar {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    opacity: 0.2;
    border-radius: 4px;
    transition: width 0.3s ease;
}

.activity-level span {
    position: relative;
    z-index: 1;
    font-weight: 600;
    font-size: 0.85rem;
}

.activity-level.activity-low {
    background: rgba(40, 167, 69, 0.1);
    color: #28a745;
}

.activity-level.activity-low .activity-bar {
    background: #28a745;
}

.activity-level.activity-medium {
    background: rgba(255, 193, 7, 0.1);
    color: #ffc107;
}

.activity-level.activity-medium .activity-bar {
    background: #ffc107;
}

.activity-level.activity-high {
    background: rgba(220, 53, 69, 0.1);
    color: #dc3545;
}

.activity-level.activity-high .activity-bar {
    background: #dc3545;
}
</style>

<script>
// Calcular datos derivados para login_stats
document.addEventListener('DOMContentLoaded', function() {
    const rows = document.querySelectorAll('.data-table tbody tr');
    let totalAttempts = 0;
    let totalSuccessful = 0;
    let totalFailed = 0;

    rows.forEach(row => {
        const cells = row.querySelectorAll('td');
        if (cells.length >= 3) {
            const total = parseInt(cells[1].textContent) || 0;
            const successful = parseInt(cells[2].textContent.match(/\d+/)?.[0]) || 0;
            const failed = total - successful;

            totalAttempts += total;
            totalSuccessful += successful;
            totalFailed += failed;

            // Agregar celda de fallidos si no existe
            if (cells[3]) {
                cells[3].innerHTML = failed > 0
                    ? `<span class="badge badge-danger"><i class="bi bi-x-circle"></i> ${failed}</span>`
                    : '<span class="text-muted">0</span>';
            }

            // Calcular tasa de éxito
            if (total > 0 && cells[4]) {
                const successRate = Math.round((successful / total) * 100);
                cells[4].innerHTML = `
                    <div class="progress-bar-container">
                        <div class="progress-bar" style="width: ${successRate}%"></div>
                        <span class="progress-label">${successRate}%</span>
                    </div>
                `;
            }
        }
    });

    // Actualizar totales (si existen elementos con estas clases)
    const totalAttemptsEl = document.querySelector('.total-primary .total-value');
    const totalSuccessfulEl = document.querySelector('.total-success .total-value');
    const totalFailedEl = document.querySelector('.total-danger .total-value');

    if (totalAttemptsEl) totalAttemptsEl.textContent = totalAttempts;
    if (totalSuccessfulEl) totalSuccessfulEl.textContent = totalSuccessful;
    if (totalFailedEl) totalFailedEl.textContent = totalFailed;

    // Agregar ranking y calcular nivel de actividad para IPs
    const ipRows = document.querySelectorAll('.data-table tbody tr');
    let maxAttempts = 0;

    // Encontrar máximo de intentos
    ipRows.forEach(row => {
        const attemptsCell = row.querySelector('.attempts-badge');
        if (attemptsCell) {
            const attempts = parseInt(attemptsCell.textContent.match(/\d+/)?.[0]) || 0;
            if (attempts > maxAttempts) maxAttempts = attempts;
        }
    });

    // Calcular niveles y porcentajes
    ipRows.forEach((row, index) => {
        const rankCell = row.querySelector('td:first-child strong');
        const attemptsCell = row.querySelector('.attempts-badge');
        const activityCell = row.querySelector('.activity-level');

        if (rankCell) {
            rankCell.textContent = index + 1;
        }

        if (attemptsCell && activityCell) {
            const attempts = parseInt(attemptsCell.textContent.match(/\d+/)?.[0]) || 0;
            const percentage = maxAttempts > 0 ? Math.round((attempts / maxAttempts) * 100) : 0;

            let level = 'low';
            let levelLabel = 'Bajo';

            if (percentage >= 70) {
                level = 'high';
                levelLabel = 'Alto';
            } else if (percentage >= 40) {
                level = 'medium';
                levelLabel = 'Medio';
            }

            activityCell.className = `activity-level activity-${level}`;
            activityCell.innerHTML = `
                <div class="activity-bar" style="width: ${percentage}%"></div>
                <span>${levelLabel}</span>
            `;
        }
    });
});
</script>
