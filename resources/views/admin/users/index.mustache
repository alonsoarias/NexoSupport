<!-- Gestión de Usuarios -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>Gestión de Usuarios</h2>
            <p class="text-muted">Administra usuarios, roles y permisos del sistema</p>
        </div>
        <div class="user-actions">
            <a href="/admin/users/create" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Usuario
            </a>
            <a href="/admin" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <!-- Mensajes de éxito/error -->
    {{#success}}
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i>
        {{#success.created}}Usuario creado correctamente{{/success.created}}
        {{#success.updated}}Usuario actualizado correctamente{{/success.updated}}
        {{#success.deleted}}Usuario eliminado correctamente{{/success.deleted}}
    </div>
    {{/success}}

    <!-- Filtros -->
    <div class="filters-section">
        <form method="GET" action="/admin/users" class="filters-form">
            <div class="filter-group">
                <input type="text" name="search" placeholder="Buscar por usuario, email o nombre..."
                       value="{{filters.search}}" class="form-input">
            </div>
            <div class="filter-group">
                <select name="status" class="form-select">
                    <option value="">Todos los estados</option>
                    <option value="active">Activos</option>
                    <option value="suspended">Suspendidos</option>
                </select>
            </div>
            <div class="filter-group">
                <label class="checkbox-label">
                    <input type="checkbox" name="deleted" value="1" {{#showing_deleted}}checked{{/showing_deleted}}>
                    Mostrar eliminados
                </label>
            </div>
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="bi bi-search"></i> Filtrar
            </button>
            <a href="/admin/users" class="btn btn-sm btn-secondary">
                <i class="bi bi-x-circle"></i> Limpiar
            </a>
        </form>
    </div>

    <!-- Tabla de usuarios -->
    <div class="table-section">
        <div class="table-header">
            <h3>
                <i class="bi bi-people-fill"></i> Usuarios
                <span class="count-badge">{{total_users}} total</span>
            </h3>
        </div>

        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Usuario</th>
                        <th>Email</th>
                        <th>Nombre Completo</th>
                        <th>Roles</th>
                        <th>Estado</th>
                        <th>Creado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#users}}
                    <tr class="{{#is_deleted}}deleted-row{{/is_deleted}}">
                        <td>{{id}}</td>
                        <td>
                            <div class="user-cell">
                                <i class="bi bi-person-circle"></i>
                                <strong>{{username}}</strong>
                            </div>
                        </td>
                        <td>{{email}}</td>
                        <td>{{first_name}} {{last_name}}</td>
                        <td>
                            <div class="roles-list">
                                {{#role_names}}
                                <span class="role-badge">{{.}}</span>
                                {{/role_names}}
                                {{^role_names}}
                                <span class="text-muted">Sin roles</span>
                                {{/role_names}}
                            </div>
                        </td>
                        <td>
                            {{#is_deleted}}
                            <span class="badge badge-danger">Eliminado</span>
                            {{/is_deleted}}
                            {{^is_deleted}}
                                {{#is_active}}
                                <span class="badge badge-success">Activo</span>
                                {{/is_active}}
                                {{#is_suspended}}
                                <span class="badge badge-warning">Suspendido</span>
                                {{/is_suspended}}
                            {{/is_deleted}}
                        </td>
                        <td>{{created_at_formatted}}</td>
                        <td>
                            <div class="action-buttons">
                                {{^is_deleted}}
                                <a href="/admin/users/{{id}}/edit" class="btn-icon" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button onclick="deleteUser({{id}})" class="btn-icon btn-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </button>
                                {{/is_deleted}}
                                {{#is_deleted}}
                                <button onclick="restoreUser({{id}})" class="btn-icon btn-success" title="Restaurar">
                                    <i class="bi bi-arrow-counterclockwise"></i>
                                </button>
                                {{/is_deleted}}
                            </div>
                        </td>
                    </tr>
                    {{/users}}
                    {{^users}}
                    <tr>
                        <td colspan="8" class="text-center">
                            <div class="no-data">
                                <i class="bi bi-inbox"></i>
                                <p>No se encontraron usuarios</p>
                            </div>
                        </td>
                    </tr>
                    {{/users}}
                </tbody>
            </table>
        </div>

        <!-- Paginación -->
        {{#show_pagination}}
        <div class="pagination">
            {{#has_previous}}
            <a href="/admin/users?page={{previous_page}}" class="btn btn-sm btn-secondary">
                <i class="bi bi-chevron-left"></i> Anterior
            </a>
            {{/has_previous}}

            <span class="page-info">Página {{current_page}} de {{total_pages}}</span>

            {{#has_next}}
            <a href="/admin/users?page={{next_page}}" class="btn btn-sm btn-secondary">
                Siguiente <i class="bi bi-chevron-right"></i>
            </a>
            {{/has_next}}
        </div>
        {{/show_pagination}}
    </div>

    <!-- Links rápidos -->
    <div class="quick-links">
        <h3><i class="bi bi-link-45deg"></i> Acceso Rápido</h3>
        <div class="quick-links-grid">
            <a href="/admin/roles" class="quick-link-card">
                <i class="bi bi-shield-check"></i>
                <div>
                    <strong>Gestión de Roles</strong>
                    <p>Administrar roles del sistema</p>
                </div>
            </a>
            <a href="/admin/permissions" class="quick-link-card">
                <i class="bi bi-key"></i>
                <div>
                    <strong>Gestión de Permisos</strong>
                    <p>Administrar permisos por rol</p>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
