<script>
// Calcular número de cuentas bloqueadas
document.addEventListener('DOMContentLoaded', function() {
    const lockedCards = document.querySelectorAll('.locked-card');
    const alertBadge = document.querySelector('.alert-badge');

    if (alertBadge && lockedCards.length > 0) {
        alertBadge.textContent = `${lockedCards.length} ${lockedCards.length === 1 ? 'activa' : 'activas'}`;
    }
});
</script>
