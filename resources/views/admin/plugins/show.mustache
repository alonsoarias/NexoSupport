    const updateProgress = document.getElementById('update-progress');
    const updateProgressBar = document.getElementById('update-progress-bar');
    const updateProgressPercent = document.getElementById('update-progress-percent');

    if (!updateForm) return; // Exit if update form not present (core plugins)

    // Handle file selection
    updateFileInput.addEventListener('change', function(e) {
        const file = e.target.files[0];

        if (file) {
            // Validate file type
            if (!file.name.endsWith('.zip')) {
                alert('{{#__}}plugins.error_invalid_file{{/__}}');
                updateFileInput.value = '';
                return;
            }

            // Validate file size (100MB max)
            const maxSize = 100 * 1024 * 1024;
            if (file.size > maxSize) {
                alert('{{#__}}plugins.error_file_too_large{{/__}}');
                updateFileInput.value = '';
                return;
            }

            // Display filename
            updateFileName.textContent = file.name;
            updateSubmitBtn.disabled = false;
        } else {
            updateFileName.textContent = '';
            updateSubmitBtn.disabled = true;
        }
    });

    // Handle form submission
    updateForm.addEventListener('submit', function(e) {
        e.preventDefault();

        if (!updateFileInput.files[0]) {
            alert('{{#__}}plugins.error_no_file{{/__}}');
            return;
        }

        const formData = new FormData(updateForm);

        // Show progress bar
        updateProgress.style.display = 'block';
        updateSubmitBtn.disabled = true;
        updateFileInput.disabled = true;

        const xhr = new XMLHttpRequest();

        // Track upload progress
        xhr.upload.addEventListener('progress', function(e) {
            if (e.lengthComputable) {
                const percentComplete = Math.round((e.loaded / e.total) * 100);
                updateProgressBar.style.width = percentComplete + '%';
                updateProgressPercent.textContent = percentComplete + '%';
            }
        });

        // Handle successful upload
        xhr.addEventListener('load', function() {
            if (xhr.status === 200 || xhr.status === 201) {
                updateProgressBar.style.width = '100%';
                updateProgressPercent.textContent = '100%';

                try {
                    const response = JSON.parse(xhr.responseText);
                    if (response.success) {
                        alert('{{#__}}plugins.update_success{{/__}}');
                        setTimeout(() => {
                            window.location.reload();
                        }, 1000);
                    } else {
                        alert('{{#__}}plugins.error_update{{/__}}: ' + (response.message || 'Unknown error'));
                        resetUpdateForm();
                    }
                } catch (e) {
                    console.error('Parse error:', e);
                    alert('{{#__}}plugins.error_update{{/__}}');
                    resetUpdateForm();
                }
            } else {
                alert('{{#__}}plugins.error_upload{{/__}} (Status: ' + xhr.status + ')');
                resetUpdateForm();
            }
        });

        // Handle network errors
        xhr.addEventListener('error', function() {
            alert('{{#__}}plugins.error_network{{/__}}');
            resetUpdateForm();
        });

        // Handle timeout
        xhr.addEventListener('timeout', function() {
            alert('{{#__}}plugins.error_timeout{{/__}}');
            resetUpdateForm();
        });

        xhr.open('POST', '/admin/plugins/{{plugin.slug}}/update');
        xhr.timeout = 300000; // 5 minutes timeout
        xhr.send(formData);
    });

    function resetUpdateForm() {
        updateProgress.style.display = 'none';
        updateProgressBar.style.width = '0%';
        updateProgressPercent.textContent = '0%';
        updateSubmitBtn.disabled = false;
        updateFileInput.disabled = false;
        updateFileInput.value = '';
        updateFileName.textContent = '';
    }
});
</script>
