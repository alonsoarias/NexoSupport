<!-- Detalles del Plugin -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>{{plugin.name}}</h2>
            <p class="text-muted">Versión {{plugin.version}} por {{plugin.author}}</p>
        </div>
        <div class="plugin-actions">
            {{#plugin.enabled}}
            <button onclick="disablePlugin('{{plugin.slug}}')" class="btn btn-sm btn-warning">
                <i class="bi bi-pause"></i> Deshabilitar
            </button>
            {{/plugin.enabled}}
            {{^plugin.enabled}}
            <button onclick="enablePlugin('{{plugin.slug}}')" class="btn btn-sm btn-success">
                <i class="bi bi-play"></i> Habilitar
            </button>
            {{/plugin.enabled}}

            {{^plugin.is_core}}
            <button onclick="uninstallPlugin('{{plugin.slug}}')" class="btn btn-sm btn-danger">
                <i class="bi bi-trash"></i> Desinstalar
            </button>
            {{/plugin.is_core}}

            <a href="/admin/plugins" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <!-- Mensajes de éxito/error -->
    {{#success_message}}
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i>
        {{success_message}}
    </div>
    {{/success_message}}

    {{#error_message}}
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i>
        {{error_message}}
    </div>
    {{/error_message}}

    <!-- Plugin Information -->
    <div class="details-grid">
        <!-- Main Details Card -->
        <div class="details-card">
            <div class="card-header">
                <h3><i class="bi bi-info-circle"></i> Información General</h3>
            </div>

            <div class="plugin-detail-item">
                <label>Nombre del Plugin</label>
                <div class="detail-value">{{plugin.name}}</div>
            </div>

            <div class="plugin-detail-item">
                <label>Slug</label>
                <div class="detail-value"><code>{{plugin.slug}}</code></div>
            </div>

            <div class="plugin-detail-item">
                <label>Versión</label>
                <div class="detail-value">{{plugin.version}}</div>
            </div>

            <div class="plugin-detail-item">
                <label>Autor</label>
                <div class="detail-value">{{plugin.author}}</div>
            </div>

            <div class="plugin-detail-item">
                <label>Tipo</label>
                <div class="detail-value">
                    <span class="type-badge {{plugin.type}}">
                        {{#type_auth}}Autenticación{{/type_auth}}
                        {{#type_theme}}Tema{{/type_theme}}
                        {{#type_tool}}Herramienta{{/type_tool}}
                        {{#type_module}}Módulo{{/type_module}}
                        {{#type_integration}}Integración{{/type_integration}}
                        {{#type_report}}Reporte{{/type_report}}
                    </span>
                </div>
            </div>

            {{#plugin.description}}
            <div class="plugin-detail-item">
                <label>Descripción</label>
                <div class="detail-value description">{{plugin.description}}</div>
            </div>
            {{/plugin.description}}

            <div class="plugin-detail-item">
                <label>Estado</label>
                <div class="detail-value">
                    {{#plugin.enabled}}
                    <span class="badge badge-success">
                        <i class="bi bi-check-circle"></i> Habilitado
                    </span>
                    {{/plugin.enabled}}
                    {{^plugin.enabled}}
                    <span class="badge badge-warning">
                        <i class="bi bi-dash-circle"></i> Deshabilitado
                    </span>
                    {{/plugin.enabled}}
                </div>
            </div>

            {{#plugin.is_core}}
            <div class="plugin-detail-item">
                <label>Tipo de Plugin</label>
                <div class="detail-value">
                    <span class="badge badge-info">
                        <i class="bi bi-gear"></i> Plugin del Sistema
                    </span>
                </div>
            </div>
            {{/plugin.is_core}}
        </div>

        <!-- Dependencies Card -->
        <div class="details-card">
            <div class="card-header">
                <h3><i class="bi bi-diagram-3"></i> Dependencias</h3>
            </div>

            {{#manifest.dependencies}}
            <div class="dependencies-list">
                {{#manifest.dependencies}}
                <div class="dependency-item">
                    <i class="bi bi-arrow-right"></i>
                    <div>
                        <div class="dependency-name">{{name}}</div>
                        {{#version}}<div class="dependency-version">Versión: {{version}}</div>{{/version}}
                    </div>
                </div>
                {{/manifest.dependencies}}
            </div>
            {{/manifest.dependencies}}

            {{^manifest.dependencies}}
            <div class="no-data-small">
                <i class="bi bi-inbox"></i>
                <p>Este plugin no tiene dependencias</p>
            </div>
            {{/manifest.dependencies}}
        </div>
    </div>

    <!-- Dependents Card -->
    {{#dependents}}
    <div class="full-width-card">
        <div class="card-header">
            <h3><i class="bi bi-link"></i> Plugins Dependientes</h3>
            <p class="card-subtitle">Plugins que requieren este plugin para funcionar</p>
        </div>

        {{#dependents}}
        <div class="dependents-list">
            {{#dependents}}
            <div class="dependent-item">
                <div class="dependent-info">
                    <h4>{{name}}</h4>
                    <p>{{description}}</p>
                </div>
                <div class="dependent-status">
                    {{#enabled}}
                    <span class="badge badge-success">Activo</span>
                    {{/enabled}}
                    {{^enabled}}
                    <span class="badge badge-warning">Inactivo</span>
                    {{/enabled}}
                </div>
            </div>
            {{/dependents}}
        </div>
        {{/dependents}}

        {{^dependents}}
        <div class="no-data-small">
            <i class="bi bi-inbox"></i>
            <p>No hay plugins dependientes</p>
        </div>
        {{/dependents}}
    </div>
    {{/dependents}}

    <!-- Manifest Information -->
    {{#manifest}}
    <div class="full-width-card">
        <div class="card-header">
            <h3><i class="bi bi-file-earmark"></i> Información del Manifiesto</h3>
        </div>

        <div class="manifest-info">
            {{#manifest.license}}
            <div class="manifest-item">
                <label>Licencia</label>
                <div class="value">{{manifest.license}}</div>
            </div>
            {{/manifest.license}}

            {{#manifest.homepage}}
            <div class="manifest-item">
                <label>Sitio Web</label>
                <div class="value">
                    <a href="{{manifest.homepage}}" target="_blank" rel="noopener noreferrer">
                        {{manifest.homepage}} <i class="bi bi-box-arrow-up-right"></i>
                    </a>
                </div>
            </div>
            {{/manifest.homepage}}

            {{#manifest.documentation}}
            <div class="manifest-item">
                <label>Documentación</label>
                <div class="value">
                    <a href="{{manifest.documentation}}" target="_blank" rel="noopener noreferrer">
                        Ver documentación <i class="bi bi-box-arrow-up-right"></i>
                    </a>
                </div>
            </div>
            {{/manifest.documentation}}

            {{#manifest.repository}}
            <div class="manifest-item">
                <label>Repositorio</label>
                <div class="value">
                    <a href="{{manifest.repository}}" target="_blank" rel="noopener noreferrer">
                        {{manifest.repository}} <i class="bi bi-box-arrow-up-right"></i>
                    </a>
                </div>
            </div>
            {{/manifest.repository}}
        </div>
    </div>
    {{/manifest}}

    <!-- Installation Info Card -->
    <div class="full-width-card">
        <div class="card-header">
            <h3><i class="bi bi-calendar"></i> Información de Instalación</h3>
        </div>

        <div class="info-grid">
            <div class="info-item">
                <label>Instalado el</label>
                <div class="value">{{plugin.created_at}}</div>
            </div>

            {{#plugin.updated_at}}
            <div class="info-item">
                <label>Última actualización</label>
                <div class="value">{{plugin.updated_at}}</div>
            </div>
            {{/plugin.updated_at}}
        </div>
    </div>
</div>

<style>
.admin-container {
    padding: 20px 0;
    max-width: 1200px;
    margin: 0 auto;
}

.admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 2px solid var(--border-color);
}

.admin-header h2 {
    color: var(--text-primary);
    margin: 0 0 5px 0;
}

.text-muted {
    color: var(--text-secondary);
    margin: 0;
    font-size: 0.95rem;
}

.plugin-actions {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
}

.btn {
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.2s;
}

.btn-sm {
    padding: 8px 16px;
    font-size: 0.875rem;
}

.btn-primary {
    background: var(--iser-red);
    color: white;
}

.btn-primary:hover {
    background: #c82333;
}

.btn-secondary {
    background: var(--bg-secondary);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
}

.btn-secondary:hover {
    background: var(--border-color);
}

.btn-success {
    background: #28a745;
    color: white;
}

.btn-success:hover {
    background: #218838;
}

.btn-warning {
    background: #ffc107;
    color: #333;
}

.btn-warning:hover {
    background: #e0a800;
}

.btn-danger {
    background: #dc3545;
    color: white;
}

.btn-danger:hover {
    background: #c82333;
}

/* Alerts */
.alert {
    padding: 15px 20px;
    border-radius: 8px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 12px;
    animation: slideDown 0.3s ease;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.alert-success {
    background: #d4edda;
    color: #155724;
    border-left: 4px solid #28a745;
}

.alert-danger {
    background: #f8d7da;
    color: #721c24;
    border-left: 4px solid #dc3545;
}

/* Details Grid */
.details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
}

.details-card, .full-width-card {
    background: var(--bg-secondary);
    border-radius: 12px;
    padding: 25px;
    border-left: 4px solid transparent;
}

.full-width-card {
    grid-column: 1 / -1;
}

.card-header {
    margin-bottom: 20px;
    border-bottom: 2px solid var(--border-color);
    padding-bottom: 15px;
}

.card-header h3 {
    color: var(--text-primary);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 1.2rem;
}

.card-subtitle {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin: 5px 0 0 0;
}

/* Plugin Details */
.plugin-detail-item {
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--border-color);
}

.plugin-detail-item:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
}

.plugin-detail-item label {
    display: block;
    color: var(--text-secondary);
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.detail-value {
    color: var(--text-primary);
    font-size: 1rem;
    line-height: 1.5;
}

.detail-value code {
    background: var(--bg-primary);
    padding: 4px 8px;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    color: var(--iser-green);
    font-size: 0.9rem;
}

.detail-value.description {
    line-height: 1.6;
    font-size: 0.95rem;
}

.type-badge {
    display: inline-block;
    padding: 6px 12px;
    border-radius: 6px;
    font-weight: 600;
    color: white;
}

.type-badge.auth {
    background: var(--iser-blue);
}

.type-badge.theme {
    background: #9b59b6;
}

.type-badge.tool {
    background: var(--iser-green);
}

.type-badge.module {
    background: #3498db;
}

.type-badge.integration {
    background: #e67e22;
}

.type-badge.report {
    background: #e74c3c;
}

/* Badges */
.badge {
    display: inline-block;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 0.85rem;
    font-weight: 600;
    color: white;
    display: inline-flex;
    align-items: center;
    gap: 6px;
}

.badge-success {
    background: #28a745;
}

.badge-warning {
    background: #ffc107;
    color: #333;
}

.badge-info {
    background: var(--iser-blue);
}

/* Dependencies */
.dependencies-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.dependency-item {
    background: var(--bg-primary);
    padding: 12px;
    border-radius: 6px;
    display: flex;
    gap: 12px;
    align-items: flex-start;
}

.dependency-item i {
    color: var(--iser-red);
    margin-top: 2px;
    flex-shrink: 0;
}

.dependency-name {
    color: var(--text-primary);
    font-weight: 600;
    font-size: 0.95rem;
}

.dependency-version {
    color: var(--text-secondary);
    font-size: 0.85rem;
    margin-top: 3px;
}

/* Dependents */
.dependents-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.dependent-item {
    background: var(--bg-primary);
    padding: 15px;
    border-radius: 6px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 15px;
    border-left: 4px solid var(--iser-blue);
}

.dependent-info h4 {
    color: var(--text-primary);
    margin: 0 0 5px 0;
    font-size: 0.95rem;
}

.dependent-info p {
    color: var(--text-secondary);
    margin: 0;
    font-size: 0.85rem;
    line-height: 1.4;
}

.dependent-status {
    flex-shrink: 0;
}

/* Manifest Info */
.manifest-info {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.manifest-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--border-color);
}

.manifest-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
    margin-bottom: 0;
}

.manifest-item label {
    color: var(--text-secondary);
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    white-space: nowrap;
}

.manifest-item .value {
    color: var(--text-primary);
    font-size: 0.95rem;
    text-align: right;
}

.manifest-item a {
    color: var(--iser-red);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    transition: all 0.2s;
}

.manifest-item a:hover {
    text-decoration: underline;
}

/* Info Grid */
.info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
}

.info-item {
    padding: 15px;
    background: var(--bg-primary);
    border-radius: 6px;
}

.info-item label {
    display: block;
    color: var(--text-secondary);
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.info-item .value {
    color: var(--text-primary);
    font-size: 0.95rem;
}

/* No Data Small */
.no-data-small {
    padding: 30px 20px;
    text-align: center;
}

.no-data-small i {
    font-size: 2.5rem;
    color: var(--text-secondary);
    opacity: 0.5;
    margin-bottom: 10px;
}

.no-data-small p {
    color: var(--text-secondary);
    margin: 0;
    font-size: 0.9rem;
}

/* Responsive */
@media (max-width: 768px) {
    .admin-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
    }

    .plugin-actions {
        width: 100%;
        flex-direction: column;
    }

    .btn-sm {
        width: 100%;
        justify-content: center;
    }

    .details-grid {
        grid-template-columns: 1fr;
    }

    .manifest-item {
        flex-direction: column;
        align-items: flex-start;
    }

    .manifest-item .value {
        text-align: left;
    }
}
</style>

<script>
function enablePlugin(slug) {
    if (!confirm('¿Habilitar este plugin?')) {
        return;
    }

    fetch('/admin/plugins/' + slug + '/enable', {
        method: 'PUT',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            window.location.reload();
        } else {
            alert(data.message || 'Error al habilitar plugin');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error al habilitar plugin');
    });
}

function disablePlugin(slug) {
    if (!confirm('¿Estás seguro de que deseas deshabilitar este plugin?')) {
        return;
    }

    fetch('/admin/plugins/' + slug + '/disable', {
        method: 'PUT',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            window.location.reload();
        } else {
            alert(data.message || 'Error al deshabilitar plugin');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error al deshabilitar plugin');
    });
}

function uninstallPlugin(slug) {
    if (!confirm('¿Estás seguro de que deseas desinstalar este plugin? Esta acción no se puede deshacer.')) {
        return;
    }

    fetch('/admin/plugins/' + slug, {
        method: 'DELETE',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            window.location.href = '/admin/plugins';
        } else {
            alert(data.message || 'Error al desinstalar plugin');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error al desinstalar plugin');
    });
}
</script>
