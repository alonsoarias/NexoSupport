<!-- Crear Rol -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>{{page_title}}</h2>
            <p class="text-muted">Crear nuevo rol en el sistema</p>
        </div>
        <div class="user-actions">
            <a href="/admin/roles" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    {{#errors}}
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i>
        <div><strong>Errores:</strong><ul>{{#errors}}<li>{{.}}</li>{{/errors}}</ul></div>
    </div>
    {{/errors}}

    <div class="form-section">
        <form method="POST" action="/admin/roles/store" class="role-form">
            <div class="form-card">
                <h3><i class="bi bi-shield"></i> Información del Rol</h3>
                <div class="form-group">
                    <label for="name">Nombre *</label>
                    <input type="text" id="name" name="name" class="form-input" value="{{form_data.name}}" required>
                </div>
                <div class="form-group">
                    <label for="slug">Slug *</label>
                    <input type="text" id="slug" name="slug" class="form-input" value="{{form_data.slug}}" required>
                    <small class="form-help">Identificador único (ej: moderator, editor)</small>
                </div>
                <div class="form-group">
                    <label for="level">Nivel *</label>
                    <input type="number" id="level" name="level" class="form-input" value="{{form_data.level}}" min="1" max="100" required>
                    <small class="form-help">1-100 (Admin=100, Moderator=50, User=10, Guest=1)</small>
                </div>
                <div class="form-group">
                    <label for="description">Descripción</label>
                    <textarea id="description" name="description" class="form-textarea" rows="3">{{form_data.description}}</textarea>
                </div>
            </div>

            <div class="form-card">
                <h3><i class="bi bi-key"></i> Permisos Asignados</h3>
                <p class="text-muted">Selecciona los permisos que tendrá este rol</p>
                {{#permissions_grouped}}
                <div class="permission-module">
                    <h4>{{@key}}</h4>
                    <div class="permissions-grid">
                        {{#.}}
                        <label class="permission-checkbox">
                            <input type="checkbox" name="permissions[]" value="{{id}}">
                            <div class="permission-info">
                                <strong>{{name}}</strong>
                                <small>{{description}}</small>
                            </div>
                        </label>
                        {{/.}}
                    </div>
                </div>
                {{/permissions_grouped}}
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Crear Rol
                </button>
                <a href="/admin/roles" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
