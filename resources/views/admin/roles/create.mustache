<!-- Crear Rol -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>{{page_title}}</h2>
            <p class="text-muted">Crear nuevo rol en el sistema</p>
        </div>
        <div class="user-actions">
            <a href="/admin/roles" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <!-- Errores -->
    {{#errors}}
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i>
        <div>
            <strong>Errores en el formulario:</strong>
            <ul>
                {{#errors}}
                <li>{{.}}</li>
                {{/errors}}
            </ul>
        </div>
    </div>
    {{/errors}}

    <!-- Formulario -->
    <div class="form-section">
        <form method="POST" action="/admin/roles/store" class="role-form">
            <div class="form-card">
                <h3><i class="bi bi-shield"></i> Información del Rol</h3>

                <div class="form-group">
                    <label for="name">Nombre del Rol *</label>
                    <input type="text" id="name" name="name" class="form-input"
                           value="{{form_data.name}}" required autofocus>
                    <small class="form-help">Ejemplo: Moderador, Editor, Supervisor</small>
                </div>

                <div class="form-group">
                    <label for="level">Nivel de Jerarquía *</label>
                    <input type="number" id="level" name="level" class="form-input"
                           value="{{form_data.level}}" min="1" max="100" placeholder="50" required>
                    <small class="form-help">1-100 (Admin=100, Moderador=50, Usuario=10, Invitado=1)</small>
                </div>

                <div class="form-group">
                    <label for="description">Descripción</label>
                    <textarea id="description" name="description" class="form-textarea"
                              rows="3" placeholder="Describe las responsabilidades y alcance de este rol...">{{form_data.description}}</textarea>
                    <small class="form-help">Opcional: Proporciona una descripción clara del propósito del rol</small>
                </div>
            </div>

            <!-- Permisos -->
            <div class="form-card">
                <h3><i class="bi bi-key"></i> Permisos del Rol</h3>
                <p class="text-muted">Selecciona los permisos que tendrá este rol. Los usuarios con este rol heredarán estos permisos.</p>

                {{#permissions_grouped}}
                <div class="permission-module">
                    <h4><i class="bi bi-folder"></i> {{@key}}</h4>
                    <div class="permissions-grid">
                        {{#.}}
                        <label class="permission-checkbox">
                            <input type="checkbox" name="permissions[]" value="{{id}}">
                            <div class="permission-info">
                                <strong>{{name}}</strong>
                                <small>{{description}}</small>
                            </div>
                        </label>
                        {{/.}}
                    </div>
                </div>
                {{/permissions_grouped}}

                {{^permissions_grouped}}
                <div class="empty-permissions">
                    <i class="bi bi-key-fill"></i>
                    <p>No hay permisos disponibles en el sistema</p>
                    <small>Crea permisos primero para poder asignarlos a los roles</small>
                </div>
                {{/permissions_grouped}}
            </div>

            <!-- Botones -->
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Crear Rol
                </button>
                <a href="/admin/roles" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

<style>
/* Container */
.admin-container {
    padding: 20px 0;
    max-width: 1200px;
    margin: 0 auto;
}

/* Header */
.admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 2px solid var(--border-color);
}

