.btn-icon:hover {
    background: var(--bg-secondary);
    color: var(--iser-red);
}

.btn-icon.btn-danger:hover {
    background: #f8d7da;
    color: #721c24;
}

/* No Data */
.no-data {
    padding: 60px 20px;
    text-align: center;
}

.no-data i {
    font-size: 4rem;
    color: var(--text-secondary);
    opacity: 0.5;
    margin-bottom: 20px;
}

.no-data p {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin: 0 0 20px 0;
}

.text-center {
    text-align: center;
}

/* Pagination */
.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
    margin-top: 30px;
    padding-top: 20px;
    border-top: 1px solid var(--border-color);
