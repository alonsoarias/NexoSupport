<!-- Gestión de Roles -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>Gestión de Roles</h2>
            <p class="text-muted">Administra roles y permisos del sistema</p>
        </div>
        <div class="user-actions">
            <a href="/admin/roles/create" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Rol
            </a>
            <a href="/admin" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <!-- Mensajes de éxito/error -->
    {{#success_message}}
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i>
        {{success_message}}
    </div>
    {{/success_message}}

    {{#error_message}}
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i>
        {{error_message}}
    </div>
    {{/error_message}}

    <!-- Tabla de roles -->
    <div class="table-section">
        <div class="table-header">
            <h3>
                <i class="bi bi-shield-check"></i> Roles del Sistema
                <span class="count-badge">{{total_roles}} total</span>
            </h3>
        </div>

        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Rol</th>
                        <th>Slug</th>
                        <th>Nivel</th>
                        <th>Permisos</th>
                        <th>Descripción</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#roles}}
                    <tr>
                        <td>
                            <div class="user-cell">
                                <i class="bi bi-shield-fill"></i>
                                <strong>{{name}}</strong>
                            </div>
                        </td>
                        <td><code>{{slug}}</code></td>
                        <td>
                            <span class="level-badge level-{{level}}">Nivel {{level}}</span>
                        </td>
                        <td>
                            <span class="count-badge-sm">{{permission_count}} permisos</span>
                        </td>
                        <td class="text-secondary">
                            {{#description}}{{description}}{{/description}}
                            {{^description}}<span class="text-muted">Sin descripción</span>{{/description}}
                        </td>
                        <td>
                            {{#is_system_role}}
                            <span class="badge badge-info">Sistema</span>
                            {{/is_system_role}}
                            {{^is_system_role}}
                            <span class="badge badge-success">Personalizado</span>
                            {{/is_system_role}}
                        </td>
                        <td>
                            <div class="action-buttons">
                                <form method="POST" action="/admin/roles/edit" style="display:inline;">
                                    <input type="hidden" name="role_id" value="{{role_id}}">
                                    <button type="submit" class="btn-icon" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                </form>
                                {{^is_system_role}}
                                <button onclick="deleteRole('{{role_id}}')" class="btn-icon btn-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </button>
                                {{/is_system_role}}
                            </div>
                        </td>
                    </tr>
                    {{/roles}}
                    {{^roles}}
                    <tr>
                        <td colspan="7" class="text-center">
                            <div class="no-data">
                                <i class="bi bi-inbox"></i>
                                <p>No se encontraron roles</p>
                                <a href="/admin/roles/create" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Crear primer rol
                                </a>
                            </div>
                        </td>
                    </tr>
                    {{/roles}}
                </tbody>
            </table>
        </div>

        <!-- Paginación -->
        {{#show_pagination}}
        <div class="pagination">
            {{#has_previous}}
            <a href="/admin/roles?page={{previous_page}}" class="btn btn-sm btn-secondary">
                <i class="bi bi-chevron-left"></i> Anterior
            </a>
            {{/has_previous}}

            <span class="page-info">Página {{current_page}} de {{total_pages}}</span>

            {{#has_next}}
            <a href="/admin/roles?page={{next_page}}" class="btn btn-sm btn-secondary">
                Siguiente <i class="bi bi-chevron-right"></i>
            </a>
            {{/has_next}}
        </div>
        {{/show_pagination}}
    </div>

    <!-- Links rápidos -->
    <div class="quick-links">
        <h3><i class="bi bi-link-45deg"></i> Acceso Rápido</h3>
        <div class="quick-links-grid">
            <a href="/admin/users" class="quick-link-card">
                <i class="bi bi-people"></i>
                <div>
                    <strong>Gestión de Usuarios</strong>
                    <p>Administrar usuarios del sistema</p>
                </div>
            </a>
            <a href="/admin/permissions" class="quick-link-card">
                <i class="bi bi-key"></i>
                <div>
                    <strong>Gestión de Permisos</strong>
                    <p>Administrar permisos por rol</p>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
