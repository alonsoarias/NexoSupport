<!-- Gestión de Roles -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>Gestión de Roles</h2>
            <p class="text-muted">Administra roles y permisos del sistema</p>
        </div>
        <div class="user-actions">
            <a href="/admin/roles/create" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Rol
            </a>
            <a href="/admin/users" class="btn btn-sm btn-secondary">
                <i class="bi bi-people"></i> Usuarios
            </a>
            <a href="/admin" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <!-- Mensajes -->
    {{#success_message}}
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i>
        <div>{{success_message}}</div>
    </div>
    {{/success_message}}

    {{#error_message}}
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i>
        <div>{{error_message}}</div>
    </div>
    {{/error_message}}

    <!-- Tabla de roles -->
    <div class="table-section">
        <div class="table-header">
            <h3>
                <i class="bi bi-shield-check"></i> Roles del Sistema
                <span class="count-badge">{{total_roles}} total</span>
            </h3>
        </div>

        <div class="roles-grid">
            {{#roles}}
            <div class="role-card {{#is_system_role}}system-role{{/is_system_role}}">
                <div class="role-header">
                    <div class="role-title">
                        <i class="bi bi-shield-fill"></i>
                        <div>
                            <h4>{{name}}</h4>
                            <p class="role-slug">{{slug}}</p>
                        </div>
                    </div>
                    <span class="role-level-badge">Nivel {{level}}</span>
                </div>

                <div class="role-body">
                    <p class="role-description">
                        {{#description}}{{description}}{{/description}}
                        {{^description}}Sin descripción{{/description}}
                    </p>

                    <div class="role-stats">
                        <div class="stat-item">
                            <i class="bi bi-key"></i>
                            <span><strong>{{permission_count}}</strong> permisos</span>
                        </div>
                    </div>

                    {{#is_system_role}}
                    <div class="system-badge">
                        <i class="bi bi-lock-fill"></i> Rol del sistema
                    </div>
                    {{/is_system_role}}
                </div>

                <div class="role-actions">
                    <form method="POST" action="/admin/roles/edit" style="display:inline;">
                        <input type="hidden" name="role_id" value="{{role_id}}">
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil"></i> Editar
                        </button>
                    </form>
                    {{^is_system_role}}
                    <button onclick="deleteRole('{{role_id}}')" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    {{/is_system_role}}
                </div>
            </div>
            {{/roles}}

            {{^roles}}
            <div class="empty-state">
                <i class="bi bi-shield-x"></i>
                <p>No hay roles registrados en el sistema</p>
                <a href="/admin/roles/create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Crear primer rol
                </a>
            </div>
            {{/roles}}
        </div>

        <!-- Paginación -->
        {{#show_pagination}}
        <div class="pagination">
            {{#has_previous}}
            <a href="/admin/roles?page={{previous_page}}" class="btn btn-sm btn-secondary">
                <i class="bi bi-chevron-left"></i> Anterior
            </a>
            {{/has_previous}}

            <span class="page-info">Página {{current_page}} de {{total_pages}}</span>

            {{#has_next}}
            <a href="/admin/roles?page={{next_page}}" class="btn btn-sm btn-secondary">
                Siguiente <i class="bi bi-chevron-right"></i>
            </a>
            {{/has_next}}
        </div>
        {{/show_pagination}}
    </div>

    <!-- Info -->
    <div class="info-section">
        <h3><i class="bi bi-info-circle"></i> Información sobre Roles</h3>
        <div class="info-cards">
            <div class="info-card">
                <i class="bi bi-shield-lock"></i>
                <div>
                    <strong>Roles del Sistema</strong>
                    <p>Los roles marcados como "del sistema" no pueden ser eliminados ni modificados completamente.</p>
                </div>
            </div>
            <div class="info-card">
                <i class="bi bi-sort-numeric-down"></i>
                <div>
                    <strong>Niveles de Rol</strong>
                    <p>El nivel determina la jerarquía: Admin (100), Moderator (50), User (10), Guest (1).</p>
                </div>
            </div>
            <div class="info-card">
                <i class="bi bi-key-fill"></i>
                <div>
                    <strong>Permisos</strong>
                    <p>Los permisos se asignan a roles, y los usuarios heredan los permisos de sus roles.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
