<!-- Admin Email Queue Manager -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>{{trans.title}}</h2>
            <p class="text-muted">Manage email queue and delivery status</p>
        </div>
        <div class="header-actions">
            {{#has_filters}}
            <a href="/admin/email-queue" class="btn btn-sm btn-secondary">
                <i class="bi bi-x-circle"></i> {{trans.clear_filters}}
            </a>
            {{/has_filters}}
            {{#stats.failed}}
            <button onclick="confirmClearQueue()" class="btn btn-sm btn-warning">
                <i class="bi bi-trash"></i> {{trans.clear}}
            </button>
            {{/stats.failed}}
            <a href="/admin" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> {{trans.back}}
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    {{#success}}
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i>
        {{success}}
    </div>
    {{/success}}

    {{#error}}
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-circle"></i>
        {{error}}
    </div>
    {{/error}}

    <!-- Statistics Section -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon" style="background-color: #ffc107;">
                <i class="bi bi-hourglass-split"></i>
            </div>
            <div class="stat-content">
                <p class="stat-label">{{trans.pending}}</p>
                <p class="stat-value">{{stats.pending}}</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background-color: #28a745;">
                <i class="bi bi-check-circle"></i>
            </div>
            <div class="stat-content">
                <p class="stat-label">{{trans.sent}}</p>
                <p class="stat-value">{{stats.sent}}</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background-color: #dc3545;">
                <i class="bi bi-exclamation-circle"></i>
            </div>
            <div class="stat-content">
                <p class="stat-label">{{trans.failed}}</p>
                <p class="stat-value">{{stats.failed}}</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background-color: #6c757d;">
                <i class="bi bi-envelope"></i>
            </div>
            <div class="stat-content">
                <p class="stat-label">Total</p>
                <p class="stat-value">{{stats.total}}</p>
            </div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="filters-section">
        <form method="GET" action="/admin/email-queue" class="filters-form">
            <div class="filter-row">
                <div class="filter-group">
                    <label>{{trans.status}}</label>
                    <select name="status" class="form-select">
                        <option value="">All Status</option>
                        <option value="pending" {{#filters.status}}{{#eq filters.status 'pending'}}selected{{/eq}}{{/filters.status}}>{{trans.pending}}</option>
                        <option value="sent" {{#filters.status}}{{#eq filters.status 'sent'}}selected{{/eq}}{{/filters.status}}>{{trans.sent}}</option>
                        <option value="failed" {{#filters.status}}{{#eq filters.status 'failed'}}selected{{/eq}}{{/filters.status}}>{{trans.failed}}</option>
                    </select>
                </div>
            </div>
            <div class="filter-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-funnel"></i> {{trans.filter}}
                </button>
            </div>
        </form>
    </div>

    <!-- Email Queue Table -->
    <div class="table-container">
        {{#emails}}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>{{trans.to_email}}</th>
                    <th>{{trans.subject}}</th>
                    <th>{{trans.status}}</th>
                    <th>{{trans.attempts}}</th>
                    <th>{{trans.created_at}}</th>
                    <th>{{trans.actions}}</th>
                </tr>
            </thead>
            <tbody>
                {{#emails}}
                <tr>
                    <td>{{to_email}}</td>
                    <td title="{{subject}}">
                        {{#subject}}
                            {{#if_length subject 40}}
                                {{substring subject 0 40}}...
                            {{else}}
                                {{subject}}
                            {{/if_length}}
                        {{/subject}}
                    </td>
                    <td>
                        <span class="badge {{status_badge_class}}">{{status_label}}</span>
                    </td>
                    <td>{{attempts}}</td>
                    <td>{{created_at}}</td>
                    <td class="action-buttons">
                        <a href="/admin/email-queue/view/{{id}}" class="btn btn-sm btn-info" title="{{trans.view}}">
                            <i class="bi bi-eye"></i>
                        </a>
                        {{#can_retry}}
                        <form method="POST" action="/admin/email-queue/retry/{{id}}" style="display: inline;">
                            <button type="submit" class="btn btn-sm btn-warning" title="{{trans.retry}}" onclick="return confirm('Retry this email?');">
                                <i class="bi bi-arrow-counterclockwise"></i>
                            </button>
                        </form>
                        {{/can_retry}}
                        <form method="POST" action="/admin/email-queue/delete/{{id}}" style="display: inline;">
                            <button type="submit" class="btn btn-sm btn-danger" title="{{trans.delete}}" onclick="return confirm('Delete this email permanently?');">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
                {{/emails}}
            </tbody>
        </table>
        {{else}}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            {{trans.no_emails}}
        </div>
        {{/emails}}
    </div>

    <!-- Pagination -->
    {{#pagination}}
    <div class="pagination-container">
        <div class="pagination-info">
            Showing {{pagination.showing_from}} to {{pagination.showing_to}} of {{pagination.total}} entries
        </div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                {{#pagination.has_prev}}
                <li class="page-item">
                    <a class="page-link" href="?page={{pagination.prev_page}}{{#filters.status}}&status={{filters.status}}{{/filters.status}}">Previous</a>
                </li>
                {{/pagination.has_prev}}

                {{#pagination.has_next}}
                <li class="page-item">
                    <a class="page-link" href="?page={{pagination.next_page}}{{#filters.status}}&status={{filters.status}}{{/filters.status}}">Next</a>
                </li>
                {{/pagination.has_next}}
            </ul>
        </nav>
    </div>
    {{/pagination}}
</div>

<script>
function confirmClearQueue() {
    if (confirm('This will delete all sent and failed emails older than 30 days. Continue?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/admin/email-queue/clear';
        document.body.appendChild(form);
        form.submit();
    }
}
</script>

