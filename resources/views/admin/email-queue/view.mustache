<!-- Admin Email Queue - View Details -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>{{trans.title}}</h2>
            <p class="text-muted">Email queue entry details</p>
        </div>
        <div class="header-actions">
            <a href="/admin/email-queue" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> {{trans.back}}
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    {{#success}}
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i>
        {{success}}
    </div>
    {{/success}}

    {{#error}}
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-circle"></i>
        {{error}}
    </div>
    {{/error}}

    <!-- Email Details Card -->
    <div class="email-details-card">
        <!-- Status Badge -->
        <div class="email-header">
            <h3>Email Details</h3>
            <span class="badge {{email.status_badge_class}}">{{email.status_label}}</span>
        </div>

        <!-- Main Details -->
        <div class="email-field-group">
            <div class="email-field">
                <label>{{trans.to_email}}</label>
                <p class="email-field-value">{{email.to_email}}</p>
            </div>

            <div class="email-field">
                <label>{{trans.subject}}</label>
                <p class="email-field-value">{{email.subject}}</p>
            </div>
        </div>

        <!-- Body -->
        <div class="email-field">
            <label>{{trans.body}}</label>
            <div class="email-body">
                {{{email.body}}}
            </div>
        </div>

        <!-- Metadata -->
        <div class="email-field-group">
            <div class="email-field">
                <label>{{trans.status}}</label>
                <p class="email-field-value">
                    <span class="badge {{email.status_badge_class}}">{{email.status_label}}</span>
                </p>
            </div>

            <div class="email-field">
                <label>{{trans.attempts}}</label>
                <p class="email-field-value">{{email.attempts}}</p>
            </div>
        </div>

        <div class="email-field-group">
            <div class="email-field">
                <label>{{trans.created_at}}</label>
                <p class="email-field-value">{{email.created_at}}</p>
            </div>

            <div class="email-field">
                <label>{{trans.updated_at}}</label>
                <p class="email-field-value">{{email.updated_at}}</p>
            </div>
        </div>

        <div class="email-field-group">
            <div class="email-field">
                <label>{{trans.last_attempt_at}}</label>
                <p class="email-field-value">{{email.last_attempt_at}}</p>
            </div>
        </div>

        <!-- Error Message -->
        {{#email.has_error}}
        <div class="email-field error-message">
            <label>{{trans.error_message}}</label>
            <div class="error-content">
                {{email.error_message}}
            </div>
        </div>
        {{/email.has_error}}

        <!-- Action Buttons -->
        <div class="action-section">
            {{#email.can_retry}}
            <form method="POST" action="/admin/email-queue/retry/{{email.id}}" style="display: inline;">
                <button type="submit" class="btn btn-warning" onclick="return confirm('Retry sending this email?');">
                    <i class="bi bi-arrow-counterclockwise"></i> {{trans.retry}}
                </button>
            </form>
            {{/email.can_retry}}

            <form method="POST" action="/admin/email-queue/delete/{{email.id}}" style="display: inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this email permanently?');">
                    <i class="bi bi-trash"></i> {{trans.delete}}
                </button>
            </form>
        </div>
    </div>
</div>

