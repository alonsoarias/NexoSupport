<!-- Appearance Settings -->
<div class="appearance-container">
    <div class="page-header">
        <h2>{{#__}}admin.menu.appearance{{/__}}</h2>
        <p>{{#__}}settings.appearance.description{{/__}}</p>
    </div>

    {{#success_message}}
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i>
        {{success_message}}
    </div>
    {{/success_message}}

    {{#error_message}}
    <div class="alert alert-error">
        <i class="bi bi-exclamation-circle"></i>
        {{error_message}}
    </div>
    {{/error_message}}

    <div class="appearance-grid">
        <!-- Configuration Form -->
        <div class="config-panel">
            <form id="appearance-form" method="POST" action="/admin/appearance/save">

                <!-- Colors Section -->
                <div class="config-section">
                    <h3><i class="bi bi-palette"></i> {{#__}}settings.groups.colors{{/__}}</h3>

                    <div class="color-grid">
                        <div class="form-group">
                            <label>{{#__}}settings.theme.primary_color{{/__}}</label>
                            <input type="color" name="colors[primary]" value="{{config.theme.primary_color}}" class="color-picker">
                            <span class="color-value">{{config.theme.primary_color}}</span>
                        </div>

                        <div class="form-group">
                            <label>{{#__}}settings.theme.secondary_color{{/__}}</label>
                            <input type="color" name="colors[secondary]" value="{{config.theme.secondary_color}}" class="color-picker">
                            <span class="color-value">{{config.theme.secondary_color}}</span>
                        </div>
                    </div>
                </div>

                <!-- Typography Section -->
                <div class="config-section">
                    <h3><i class="bi bi-fonts"></i> {{#__}}settings.groups.typography{{/__}}</h3>

                    <div class="form-group">
                        <label>{{#__}}settings.theme.font_headings{{/__}}</label>
                        <select name="fonts[headings]" class="form-control">
                            {{#allowed_fonts}}
                            <option value="{{.}}" {{#selected_heading}}selected{{/selected_heading}}>{{.}}</option>
                            {{/allowed_fonts}}
                        </select>
                    </div>

                    <div class="form-group">
                        <label>{{#__}}settings.theme.font_body{{/__}}</label>
                        <select name="fonts[body]" class="form-control">
                            {{#allowed_fonts}}
                            <option value="{{.}}" {{#selected_body}}selected{{/selected_body}}>{{.}}</option>
                            {{/allowed_fonts}}
                        </select>
                    </div>
                </div>

                <!-- Layout Section -->
                <div class="config-section">
                    <h3><i class="bi bi-layout-sidebar"></i> {{#__}}settings.groups.layouts{{/__}}</h3>

                    <div class="form-group">
                        <label>{{#__}}settings.theme.sidebar_position{{/__}}</label>
                        <select name="layout[sidebar_position]" class="form-control">
                            <option value="left" {{#sidebar_left}}selected{{/sidebar_left}}>{{#__}}settings.theme.sidebar_left{{/__}}</option>
                            <option value="right" {{#sidebar_right}}selected{{/sidebar_right}}>{{#__}}settings.theme.sidebar_right{{/__}}</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>{{#__}}settings.theme.container_width{{/__}}</label>
                        <select name="layout[container_width]" class="form-control">
                            <option value="fluid" {{#width_fluid}}selected{{/width_fluid}}>Fluid</option>
                            <option value="boxed-lg" {{#width_lg}}selected{{/width_lg}}>Boxed Large</option>
                            <option value="boxed-xl" {{#width_xl}}selected{{/width_xl}}>Boxed Extra Large</option>
                        </select>
                    </div>
                </div>

                <!-- Dark Mode Section -->
                <div class="config-section">
                    <h3><i class="bi bi-moon-stars"></i> {{#__}}settings.theme.dark_mode{{/__}}</h3>

                    <div class="form-group">
                        <label class="checkbox-label">
                            <input type="checkbox" name="dark_mode[enabled]" {{#dark_mode_enabled}}checked{{/dark_mode_enabled}}>
                            {{#__}}settings.theme.dark_mode_enable{{/__}}
                        </label>
                    </div>

                    <div class="form-group">
                        <label class="checkbox-label">
                            <input type="checkbox" name="dark_mode[auto]" {{#dark_mode_auto}}checked{{/dark_mode_auto}}>
                            {{#__}}settings.theme.dark_mode_auto{{/__}}
                        </label>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i>
                        {{#__}}admin.actions.save{{/__}}
                    </button>

                    <button type="button" class="btn btn-secondary" onclick="resetTheme()">
                        <i class="bi bi-arrow-counterclockwise"></i>
                        {{#__}}settings.restore_defaults{{/__}}
                    </button>
                </div>
            </form>
        </div>

        <!-- Preview Panel -->
        <div class="preview-panel">
            <h3>{{#__}}settings.appearance.preview{{/__}}</h3>
            <div class="preview-card">
                <p>{{#__}}settings.appearance.preview_description{{/__}}</p>
                <div class="preview-sample">
                    <button class="btn btn-primary">Primary Button</button>
                    <button class="btn btn-secondary">Secondary Button</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function resetTheme() {
    if (confirm('{{#__}}settings.appearance.reset_confirm{{/__}}')) {
        fetch('/admin/appearance/reset', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'}
        })
        .then(r => r.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert(data.message || 'Error');
            }
        });
    }
}

// Color picker sync
document.querySelectorAll('.color-picker').forEach(input => {
    input.addEventListener('input', (e) => {
        e.target.nextElementSibling.textContent = e.target.value;
    });
});
</script>

<style>
.appearance-container {
    padding: 20px;
}

.appearance-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 20px;
    margin-top: 20px;
}

.config-panel {
    background: var(--bg-secondary);
    padding: 20px;
    border-radius: 8px;
}

.config-section {
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 1px solid var(--border-color);
}

.config-section:last-of-type {
    border-bottom: none;
}

.config-section h3 {
    margin-bottom: 15px;
    font-size: 1.1rem;
}

.color-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
}

.color-picker {
    width: 60px;
    height: 40px;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    cursor: pointer;
}

.color-value {
    display: inline-block;
    margin-left: 10px;
    font-family: monospace;
    color: var(--text-secondary);
}

.preview-panel {
    background: var(--bg-secondary);
    padding: 20px;
    border-radius: 8px;
    position: sticky;
    top: 20px;
}

.preview-card {
    background: var(--bg-primary);
    padding: 20px;
    border-radius: 8px;
    margin-top: 15px;
}

.preview-sample {
    margin-top: 20px;
    display: flex;
    gap: 10px;
}

@media (max-width: 768px) {
    .appearance-grid {
        grid-template-columns: 1fr;
    }
}
</style>
