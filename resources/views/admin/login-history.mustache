<!-- Admin Login History View -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>{{trans.admin_login_history}}</h2>
            <p class="text-muted">Monitor all user logins and active sessions</p>
        </div>
        <div class="header-actions">
            <button onclick="exportCSV()" class="btn btn-sm btn-primary">
                <i class="bi bi-download"></i> {{trans.export_csv}}
            </button>
            <a href="/admin" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    {{#success}}
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i>
        {{success}}
    </div>
    {{/success}}

    {{#error}}
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-circle"></i>
        {{error}}
    </div>
    {{/error}}

    <!-- Statistics Section -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-clock-history"></i>
            </div>
            <div class="stat-content">
                <p class="stat-label">{{trans.total_logins}}</p>
                <p class="stat-value">{{total_logins}}</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-globe"></i>
            </div>
            <div class="stat-content">
                <p class="stat-label">{{trans.unique_ips}}</p>
                <p class="stat-value">{{unique_ips}}</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-timer"></i>
            </div>
            <div class="stat-content">
                <p class="stat-label">{{trans.avg_session_duration}}</p>
                <p class="stat-value">{{avg_session_duration}}</p>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="filters-section">
        <form method="GET" action="/admin/login-history" class="filters-form">
            <div class="filter-group">
                <label>{{trans.user}}</label>
                <select name="user_id" class="form-select">
                    <option value="">All Users</option>
                    {{#users}}
                    <option value="{{id}}" {{#selected}}selected{{/selected}}>{{username}} ({{email}})</option>
                    {{/users}}
                </select>
            </div>

            <div class="filter-group">
                <label>{{trans.ip_address}}</label>
                <input type="text" name="ip" placeholder="Search IP address..."
                       value="{{filters.ip}}" class="form-input">
            </div>

            <div class="filter-group">
                <label>Start Date</label>
                <input type="date" name="start_date" class="form-input"
                       value="{{filters.start_date}}">
            </div>

            <div class="filter-group">
                <label>End Date</label>
                <input type="date" name="end_date" class="form-input"
                       value="{{filters.end_date}}">
            </div>

            <div class="filter-actions">
                <button type="submit" class="btn btn-sm btn-primary">
                    <i class="bi bi-search"></i> {{trans.filter}}
                </button>
                <a href="/admin/login-history" class="btn btn-sm btn-secondary">
                    <i class="bi bi-x-circle"></i> {{trans.clear_filters}}
                </a>
            </div>
        </form>
    </div>

    <!-- Login History Table -->
    <div class="table-section">
        <div class="table-header">
            <h3>
                <i class="bi bi-list"></i> {{trans.filter_results}}
                <span class="count-badge">{{total_logins}} total</span>
            </h3>
        </div>

        {{#empty_history}}
        <div class="no-data">
            <i class="bi bi-inbox"></i>
            <p>{{trans.no_history}}</p>
        </div>
        {{/empty_history}}

        {{^empty_history}}
        <div class="table-responsive">
            <table class="data-table" id="loginHistoryTable">
                <thead>
                    <tr>
                        <th>{{trans.user}}</th>
                        <th>{{trans.email}}</th>
                        <th>{{trans.login_time}}</th>
                        <th>{{trans.logout_date}}</th>
                        <th>{{trans.ip_address}}</th>
                        <th>{{trans.session_status}}</th>
                        <th>{{trans.session_duration}}</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#login_history}}
                    <tr class="{{#is_active}}active-session{{/is_active}}">
                        <td>
                            <div class="user-cell">
                                <i class="bi bi-person-circle"></i>
                                <strong>{{username}}</strong>
                            </div>
                        </td>
                        <td>{{email}}</td>
                        <td>
                            <span class="login-time">{{login_at_formatted}}</span>
                        </td>
                        <td>
                            {{#logout_at_formatted}}
                            {{logout_at_formatted}}
                            {{/logout_at_formatted}}
                            {{^logout_at_formatted}}
                            <span class="text-muted">{{trans.no_logout}}</span>
                            {{/logout_at_formatted}}
                        </td>
                        <td>
                            <div class="ip-cell">
                                <i class="bi bi-globe2"></i>
                                <span>{{ip_address}}</span>
                            </div>
                        </td>
                        <td>
                            {{#is_active}}
                            <span class="badge badge-success">{{trans.active_session}}</span>
                            {{/is_active}}
                            {{^is_active}}
                            <span class="badge badge-secondary">{{trans.ended_session}}</span>
                            {{/is_active}}
                        </td>
                        <td>{{session_duration}}</td>
                        <td>
                            {{#can_terminate}}
                            <button onclick="adminTerminateSession({{id}}, '{{username}}')" class="btn-icon btn-danger" title="{{trans.terminate_session}}">
                                <i class="bi bi-x-circle"></i>
                            </button>
                            {{/can_terminate}}
                            {{^can_terminate}}
                            <span class="text-muted">â€”</span>
                            {{/can_terminate}}
                        </td>
                    </tr>
                    {{/login_history}}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        {{#show_pagination}}
        <div class="pagination">
            {{#has_previous}}
            <a href="/admin/login-history?page={{previous_page}}" class="btn btn-sm btn-secondary">
                <i class="bi bi-chevron-left"></i> Previous
            </a>
            {{/has_previous}}

            <span class="page-info">Page {{current_page}} of {{total_pages}}</span>

            {{#has_next}}
            <a href="/admin/login-history?page={{next_page}}" class="btn btn-sm btn-secondary">
                Next <i class="bi bi-chevron-right"></i>
            </a>
            {{/has_next}}
        </div>
        {{/show_pagination}}
        {{/empty_history}}
    </div>

    <!-- Quick Links -->
    <div class="quick-links">
        <h3><i class="bi bi-link-45deg"></i> Quick Access</h3>
        <div class="quick-links-grid">
            <a href="/admin/users" class="quick-link-card">
                <i class="bi bi-people-fill"></i>
                <div>
                    <strong>User Management</strong>
                    <p>Manage system users</p>
                </div>
            </a>
            <a href="/admin/security" class="quick-link-card">
                <i class="bi bi-shield-check"></i>
                <div>
                    <strong>Security</strong>
                    <p>System security settings</p>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
