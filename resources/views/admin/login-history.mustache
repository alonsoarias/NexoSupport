<script>
function adminTerminateSession(loginId, username) {
    if (!confirm('Are you sure you want to terminate the session for user ' + username + '?')) {
        return;
    }

    const formData = new FormData();
    formData.append('login_id', loginId);

    fetch('/login-history/terminate/' + loginId, {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Session terminated successfully');
            window.location.reload();
        } else {
            alert(data.error || 'Error terminating session');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error terminating session');
    });
}

function exportCSV() {
    const table = document.getElementById('loginHistoryTable');
    const csv = [];
    const rows = table.querySelectorAll('tr');

    rows.forEach(row => {
        const cols = row.querySelectorAll('td, th');
        const csvRow = [];
        cols.forEach((col, index) => {
            // Skip the last column (actions)
            if (index < cols.length - 1) {
                csvRow.push('"' + col.textContent.trim().replace(/"/g, '""') + '"');
            }
        });
        csv.push(csvRow.join(','));
    });

    const csvContent = 'data:text/csv;charset=utf-8,' + encodeURIComponent(csv.join('\n'));
    const link = document.createElement('a');
    link.setAttribute('href', csvContent);
    link.setAttribute('download', 'login_history_' + new Date().toISOString().split('T')[0] + '.csv');
    link.click();
}

// Set selected value in user filter
document.addEventListener('DOMContentLoaded', function() {
    const userSelect = document.querySelector('select[name="user_id"]');
    const userValue = '{{filters.user_id}}';
    if (userValue && userSelect) {
        userSelect.value = userValue;
    }
});
</script>
