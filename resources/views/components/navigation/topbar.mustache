<header class="topbar">
    <div class="topbar-container">
        <!-- Menu Toggle Button (Mobile) -->
        <button class="sidebar-toggle" id="sidebarToggle" aria-label="Toggle Sidebar">
            <i class="bi bi-list"></i>
        </button>

        <!-- Logo & Brand -->
        <div class="topbar-brand">
            <img src="{{#asset}}images/logo-iser.png{{/asset}}" alt="ISER" class="topbar-logo">
            <span class="topbar-title">{{app_name}}</span>
        </div>

        <!-- Right Section -->
        <div class="topbar-actions">
            <!-- Search (opcional - future) -->
            {{#show_search}}
            <div class="topbar-search">
                <i class="bi bi-search"></i>
                <input type="text" placeholder="Buscar..." class="search-input">
            </div>
            {{/show_search}}

            <!-- Notifications (opcional - future) -->
            {{#show_notifications}}
            <button class="topbar-btn notifications-btn" aria-label="Notificaciones">
                <i class="bi bi-bell"></i>
                {{#navigation.notifications_count}}
                <span class="badge">{{navigation.notifications_count}}</span>
                {{/navigation.notifications_count}}
            </button>
            {{/show_notifications}}

            <!-- User Menu -->
            {{#navigation.user}}
            {{> components/navigation/user-menu}}
            {{/navigation.user}}
        </div>
    </div>
</header>
