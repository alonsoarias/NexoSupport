<script>
function terminateSession(loginId) {
    if (!confirm('Are you sure you want to terminate this session?')) {
        return;
    }

    const formData = new FormData();
    formData.append('login_id', loginId);

    fetch('/login-history/terminate/' + loginId, {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Session terminated successfully');
            window.location.reload();
        } else {
            alert(data.error || 'Error terminating session');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error terminating session');
    });
}

// Show user agent details on row click
document.addEventListener('DOMContentLoaded', function() {
    const rows = document.querySelectorAll('.data-table tbody tr');
    const detailsDiv = document.getElementById('user-agent-details');

    rows.forEach(row => {
        row.addEventListener('click', function(e) {
            if (e.target.closest('button')) {
                return;
            }

            // Get user agent from hidden data or reconstruct from cells
            const cells = this.querySelectorAll('td');
            const userAgentCell = cells[5]; // Adjust index if needed
            const userAgentText = userAgentCell ? userAgentCell.textContent.trim() : 'No information';

            if (detailsDiv) {
                detailsDiv.innerHTML = '<strong>User Agent:</strong><br>' + userAgentText;
            }
        });
    });
});
</script>
