<!-- User Login History View -->
<div class="login-history-container">
    <div class="history-header">
        <div>
            <h2>{{trans.login_history_title}}</h2>
            <p class="text-muted">{{trans.login_history}}</p>
        </div>
        <div class="header-actions">
            <a href="/profile" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> {{trans.back}}
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    {{#success}}
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i>
        {{success}}
    </div>
    {{/success}}

    {{#error}}
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-circle"></i>
        {{error}}
    </div>
    {{/error}}

    <!-- Statistics Section -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-clock-history"></i>
            </div>
            <div class="stat-content">
                <p class="stat-label">{{trans.total_logins}}</p>
                <p class="stat-value">{{total_logins}}</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-globe"></i>
            </div>
            <div class="stat-content">
                <p class="stat-label">{{trans.unique_ips}}</p>
                <p class="stat-value">{{unique_ips}}</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-timer"></i>
            </div>
            <div class="stat-content">
                <p class="stat-label">{{trans.avg_session_duration}}</p>
                <p class="stat-value">{{avg_session_duration}}</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-activity"></i>
            </div>
            <div class="stat-content">
                <p class="stat-label">Active Sessions</p>
                <p class="stat-value">{{active_sessions_count}}</p>
            </div>
        </div>
    </div>

    <!-- Login History Table -->
    <div class="table-section">
        <div class="table-header">
            <h3>
                <i class="bi bi-list"></i> {{trans.login_history_title}}
                <span class="count-badge">{{total_logins}} total</span>
            </h3>
        </div>

        {{#empty_history}}
        <div class="no-data">
            <i class="bi bi-inbox"></i>
            <p>{{trans.no_history}}</p>
        </div>
        {{/empty_history}}

        {{^empty_history}}
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>{{trans.login_time}}</th>
                        <th>{{trans.logout_date}}</th>
                        <th>{{trans.ip_address}}</th>
                        <th>{{trans.session_status}}</th>
                        <th>{{trans.session_duration}}</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#login_history}}
                    <tr class="{{#is_current}}current-session{{/is_current}} {{#is_active}}active-session{{/is_active}}">
                        <td>
                            <div class="login-cell">
                                <span class="login-time">{{login_at_formatted}}</span>
                                {{#is_current}}
                                <span class="badge badge-current">{{trans.current_session}}</span>
                                {{/is_current}}
                            </div>
                        </td>
                        <td>
                            {{#logout_at_formatted}}
                            {{logout_at_formatted}}
                            {{/logout_at_formatted}}
                            {{^logout_at_formatted}}
                            <span class="text-muted">{{trans.no_logout}}</span>
                            {{/logout_at_formatted}}
                        </td>
                        <td>
                            <div class="ip-cell">
                                <i class="bi bi-globe2"></i>
                                <span>{{ip_address}}</span>
                            </div>
                        </td>
                        <td>
                            {{#is_active}}
                            <span class="badge badge-success">{{trans.active_session}}</span>
                            {{/is_active}}
                            {{^is_active}}
                            <span class="badge badge-secondary">{{trans.ended_session}}</span>
                            {{/is_active}}
                        </td>
                        <td>{{session_duration}}</td>
                        <td>
                            {{#can_terminate}}
                            <button onclick="terminateSession({{id}})" class="btn-icon btn-danger" title="{{trans.terminate_session}}">
                                <i class="bi bi-x-circle"></i>
                            </button>
                            {{/can_terminate}}
                            {{^can_terminate}}
                            <span class="text-muted">â€”</span>
                            {{/can_terminate}}
                        </td>
                    </tr>
                    {{/login_history}}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        {{#show_pagination}}
        <div class="pagination">
            {{#has_previous}}
            <a href="/login-history?page={{previous_page}}" class="btn btn-sm btn-secondary">
                <i class="bi bi-chevron-left"></i> Previous
            </a>
            {{/has_previous}}

            <span class="page-info">Page {{current_page}} of {{total_pages}}</span>

            {{#has_next}}
            <a href="/login-history?page={{next_page}}" class="btn btn-sm btn-secondary">
                Next <i class="bi bi-chevron-right"></i>
            </a>
            {{/has_next}}
        </div>
        {{/show_pagination}}
        {{/empty_history}}
    </div>

    <!-- User Agent Information -->
    <div class="info-section">
        <h3><i class="bi bi-info-circle"></i> Device Information</h3>
        <p class="text-muted">Click on a session row to see full user agent details</p>
        <div id="user-agent-details" class="user-agent-details">
            <p class="text-muted">Select a session to view device information</p>
        </div>
    </div>
</div>

