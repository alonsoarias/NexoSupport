<!-- User Preferences -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>{{#__}}profile.preferences_title{{/__}}</h2>
            <p class="text-muted">{{#__}}profile.preferences_description{{/__}}</p>
        </div>
    </div>

    {{#success_message}}
    <div class="alert alert-success" style="margin-bottom: 20px;">
        <i class="bi bi-check-circle"></i>
        {{success_message}}
    </div>
    {{/success_message}}

    {{#error_message}}
    <div class="alert alert-error" style="margin-bottom: 20px;">
        <i class="bi bi-exclamation-circle"></i>
        {{error_message}}
    </div>
    {{/error_message}}

    <form method="POST" action="/preferences" class="preferences-form">
        <!-- Regional Settings Section -->
        <div class="card" style="margin-bottom: 20px;">
            <div class="card-header">
                <h3><i class="bi bi-globe"></i> {{#__}}profile.regional_settings{{/__}}</h3>
            </div>
            <div class="card-body">
                <div class="form-grid">
                    <!-- Timezone -->
                    <div class="form-group">
                        <label for="timezone">{{#__}}profile.timezone{{/__}}</label>
                        <select id="timezone" name="timezone" class="form-control">
                            {{#timezones}}
                            <option value="{{value}}" {{#selected}}selected{{/selected}}>{{label}}</option>
                            {{/timezones}}
                        </select>
                        <small class="form-text">{{#__}}profile.timezone_help{{/__}}</small>
                    </div>

                    <!-- Locale -->
                    <div class="form-group">
                        <label for="locale">{{#__}}profile.locale_label{{/__}}</label>
                        <select id="locale" name="locale" class="form-control">
                            {{#locales}}
                            <option value="{{value}}" {{#selected}}selected{{/selected}}>{{label}}</option>
                            {{/locales}}
                        </select>
                        <small class="form-text">{{#__}}profile.locale_help{{/__}}</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Appearance Settings Section -->
        <div class="card" style="margin-bottom: 20px;">
            <div class="card-header">
                <h3><i class="bi bi-palette"></i> {{#__}}profile.appearance_settings{{/__}}</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="theme">{{#__}}profile.theme_label{{/__}}</label>
                    <div class="theme-selector">
                        {{#themes}}
                        <label class="theme-option">
                            <input type="radio" name="theme" value="{{value}}" {{#selected}}checked{{/selected}}>
                            <span class="theme-card theme-{{value}}">
                                <i class="bi bi-{{#isLight}}sun{{/isLight}}{{#isDark}}moon{{/isDark}}"></i>
                                <span class="theme-name">{{label}}</span>
                            </span>
                        </label>
                        {{/themes}}
                    </div>
                    <small class="form-text">{{#__}}profile.theme_help{{/__}}</small>
                </div>
            </div>
        </div>

        <!-- Notification Settings Section -->
        <div class="card" style="margin-bottom: 20px;">
            <div class="card-header">
                <h3><i class="bi bi-bell"></i> {{#__}}profile.notification_settings{{/__}}</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox" name="notifications_email" {{#notifications_email_checked}}checked{{/notifications_email_checked}}>
                        <span>
                            <strong>{{#__}}profile.email_notifications{{/__}}</strong>
                            <small class="d-block text-muted">{{#__}}profile.email_notifications_help{{/__}}</small>
                        </span>
                    </label>
                </div>

                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox" name="notifications_browser" {{#notifications_browser_checked}}checked{{/notifications_browser_checked}}>
                        <span>
                            <strong>{{#__}}profile.browser_notifications{{/__}}</strong>
                            <small class="d-block text-muted">{{#__}}profile.browser_notifications_help{{/__}}</small>
                        </span>
                    </label>
                </div>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i>
                {{#__}}profile.save_preferences{{/__}}
            </button>
            <a href="/dashboard" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i>
                {{#__}}common.cancel{{/__}}
            </a>
        </div>
    </form>
</div>

<style>
.preferences-form {
    max-width: 900px;
}

.form-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
}

.form-group {
    margin-bottom: 15px;
}

.form-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: 600;
    color: var(--text-primary);
}

.form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    background-color: var(--bg-primary);
    color: var(--text-primary);
    font-size: 14px;
}

.form-control:focus {
    outline: none;
    border-color: var(--iser-red);
    box-shadow: 0 0 0 2px rgba(206, 17, 38, 0.1);
}

.form-text {
    display: block;
    margin-top: 5px;
    font-size: 12px;
    color: var(--text-secondary);
}

.theme-selector {
    display: flex;
    gap: 15px;
    margin-top: 10px;
}

.theme-option {
    flex: 1;
    cursor: pointer;
}

.theme-option input[type="radio"] {
    display: none;
}

.theme-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
    border: 2px solid var(--border-color);
    border-radius: 8px;
    background-color: var(--bg-secondary);
    transition: all 0.3s ease;
}

.theme-card i {
    font-size: 2rem;
    margin-bottom: 10px;
    color: var(--text-secondary);
}

.theme-card .theme-name {
    font-weight: 500;
    color: var(--text-primary);
}

.theme-option input[type="radio"]:checked + .theme-card {
    border-color: var(--iser-red);
    background-color: rgba(206, 17, 38, 0.05);
}

.theme-option input[type="radio"]:checked + .theme-card i {
    color: var(--iser-red);
}

.theme-light {
    background-color: #ffffff;
}

.theme-dark {
    background-color: #2a2a2a;
}

.checkbox-label {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    padding: 10px;
    cursor: pointer;
    border-radius: 4px;
    transition: background-color 0.2s;
}

.checkbox-label:hover {
    background-color: var(--bg-secondary);
}

.checkbox-label input[type="checkbox"] {
    margin-top: 3px;
    width: 18px;
    height: 18px;
    cursor: pointer;
}

.checkbox-label span {
    flex: 1;
}

.checkbox-label small {
    margin-top: 4px;
}

.form-actions {
    display: flex;
    gap: 10px;
    margin-top: 30px;
    padding-top: 20px;
    border-top: 1px solid var(--border-color);
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s ease;
}

.btn-primary {
    background-color: var(--iser-red);
    color: white;
}

.btn-primary:hover {
    background-color: var(--iser-red-dark);
}

.btn-secondary {
    background-color: var(--bg-secondary);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
}

.btn-secondary:hover {
    background-color: var(--border-color);
}

.alert {
    padding: 12px 16px;
    border-radius: 4px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

.alert-error {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}

.alert i {
    font-size: 1.2rem;
}

@media (max-width: 768px) {
    .form-grid {
        grid-template-columns: 1fr;
    }

    .theme-selector {
        flex-direction: column;
    }

    .form-actions {
        flex-direction: column;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }
}
</style>
