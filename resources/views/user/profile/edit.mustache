<!-- Edit User Profile -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>{{trans.edit_profile}}</h2>
            <p class="text-muted">Actualiza tu información personal</p>
        </div>
        <div class="user-actions">
            <a href="/profile" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> {{trans.cancel}}
            </a>
        </div>
    </div>

    <!-- Errores -->
    {{#errors}}
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i>
        <div>
            <strong>Errores en el formulario:</strong>
            <ul>
                {{#errors}}
                <li>{{.}}</li>
                {{/errors}}
            </ul>
        </div>
    </div>
    {{/errors}}

    <!-- Formulario -->
    <div class="form-section">
        <form method="POST" action="/profile/edit" class="profile-form">
            <div class="form-grid">
                <!-- Contact Information Card -->
                <div class="form-card">
                    <h3><i class="bi bi-telephone"></i> Información de Contacto</h3>

                    <div class="form-group">
                        <label for="phone">{{trans.phone}}</label>
                        <input type="text" id="phone" name="phone" class="form-input"
                               value="{{profile.phone}}" placeholder="+1 234 567 8900"
                               maxlength="20">
                        <small class="form-help">Número de teléfono con código de área</small>
                    </div>

                    <div class="form-group">
                        <label for="address">{{trans.address}}</label>
                        <textarea id="address" name="address" class="form-textarea"
                                  rows="3" placeholder="Calle, número, edificio...">{{profile.address}}</textarea>
                    </div>

                    <div class="form-group">
                        <label for="city">{{trans.city}}</label>
                        <input type="text" id="city" name="city" class="form-input"
                               value="{{profile.city}}" placeholder="Ciudad"
                               maxlength="100">
                    </div>

                    <div class="form-group">
                        <label for="country">{{trans.country}}</label>
                        <input type="text" id="country" name="country" class="form-input"
                               value="{{profile.country}}" placeholder="País"
                               maxlength="100">
                    </div>

                    <div class="form-group">
                        <label for="postalcode">{{trans.postal_code}}</label>
                        <input type="text" id="postalcode" name="postalcode" class="form-input"
                               value="{{profile.postalcode}}" placeholder="12345"
                               maxlength="20">
                    </div>
                </div>

                <!-- Professional Information Card -->
                <div class="form-card">
                    <h3><i class="bi bi-briefcase"></i> Información Profesional</h3>

                    <div class="form-group">
                        <label for="institution">Institución</label>
                        <input type="text" id="institution" name="institution" class="form-input"
                               value="{{profile.institution}}" placeholder="Nombre de la institución"
                               maxlength="255">
                        <small class="form-help">Empresa u organización donde trabajas</small>
                    </div>

                    <div class="form-group">
                        <label for="department">Departamento</label>
                        <input type="text" id="department" name="department" class="form-input"
                               value="{{profile.department}}" placeholder="Departamento o área"
                               maxlength="255">
                    </div>

                    <div class="form-group">
                        <label for="position">Cargo</label>
                        <input type="text" id="position" name="position" class="form-input"
                               value="{{profile.position}}" placeholder="Tu posición o cargo"
                               maxlength="255">
                    </div>

                    <div class="form-group">
                        <label for="bio">{{trans.bio}}</label>
                        <textarea id="bio" name="bio" class="form-textarea"
                                  rows="5" placeholder="Cuéntanos sobre ti..."
                                  maxlength="1000">{{profile.bio}}</textarea>
                        <small class="form-help">Máximo 1000 caracteres</small>
                    </div>
                </div>

                <!-- Social Media & Web Card -->
                <div class="form-card">
                    <h3><i class="bi bi-globe"></i> Redes Sociales & Web</h3>

                    <div class="form-group">
                        <label for="website">{{trans.website}}</label>
                        <input type="url" id="website" name="website" class="form-input"
                               value="{{profile.website}}" placeholder="https://tu-sitio-web.com"
                               maxlength="255">
                        <small class="form-help">URL completa incluyendo https://</small>
                    </div>

                    <div class="form-group">
                        <label for="linkedin">{{trans.linkedin}}</label>
                        <input type="url" id="linkedin" name="linkedin" class="form-input"
                               value="{{profile.linkedin}}" placeholder="https://linkedin.com/in/tu-perfil"
                               maxlength="255">
                        <small class="form-help">URL de tu perfil de LinkedIn</small>
                    </div>

                    <div class="form-group">
                        <label for="twitter">{{trans.twitter}}</label>
                        <input type="text" id="twitter" name="twitter" class="form-input"
                               value="{{profile.twitter}}" placeholder="@tu_usuario"
                               maxlength="255">
                        <small class="form-help">Tu usuario de Twitter (opcional @)</small>
                    </div>
                </div>
            </div>

            <!-- Account Info (Read-only) -->
            <div class="form-card info-card">
                <h3><i class="bi bi-info-circle"></i> Información de Cuenta (Solo Lectura)</h3>
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">Usuario:</span>
                        <span class="info-value">{{user.username}}</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Email:</span>
                        <span class="info-value">{{user.email}}</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Nombre:</span>
                        <span class="info-value">{{user.first_name}} {{user.last_name}}</span>
                    </div>
                </div>
                <p class="text-muted" style="margin-top: 15px;">
                    <i class="bi bi-info-circle"></i>
                    Para cambiar tu nombre de usuario, email o nombre, contacta al administrador.
                </p>
            </div>

            <!-- Botones -->
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> {{trans.save_profile}}
                </button>
                <a href="/profile" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> {{trans.cancel}}
                </a>
            </div>
        </form>
    </div>
</div>

