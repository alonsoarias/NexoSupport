<!-- User Profile View -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>{{trans.personal_info}}</h2>
            <p class="text-muted">
                {{#user.first_name}}{{user.first_name}} {{user.last_name}}{{/user.first_name}}
            </p>
        </div>
        {{^is_admin_view}}
        <div class="user-actions">
            <a href="/profile/edit" class="btn btn-sm btn-primary">
                <i class="bi bi-pencil"></i> {{trans.edit_profile}}
            </a>
        </div>
        {{/is_admin_view}}
        {{#is_admin_view}}
        <div class="user-actions">
            <a href="/admin/users" class="btn btn-sm btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
        {{/is_admin_view}}
    </div>

    <!-- Success/Error Messages -->
    {{#success}}
    <div class="alert alert-success">
        <i class="bi bi-check-circle"></i>
        <div>{{success}}</div>
    </div>
    {{/success}}

    {{#error}}
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i>
        <div>{{error}}</div>
    </div>
    {{/error}}

    <!-- Profile Grid -->
    <div class="profile-grid">
        <!-- Account Information Card -->
        <div class="profile-card">
            <div class="card-header">
                <h3><i class="bi bi-person-circle"></i> {{trans.account_info}}</h3>
            </div>
            <div class="card-body">
                <div class="profile-info">
                    <div class="info-group">
                        <label>{{trans.username}}</label>
                        <p>{{user.username}}</p>
                    </div>
                    <div class="info-group">
                        <label>{{trans.email}}</label>
                        <p>{{user.email}}</p>
                    </div>
                    <div class="info-group">
                        <label>{{trans.first_name}}</label>
                        <p>{{user.first_name}}</p>
                    </div>
                    <div class="info-group">
                        <label>{{trans.last_name}}</label>
                        <p>{{user.last_name}}</p>
                    </div>
                    <div class="info-group">
                        <label>{{trans.status}}</label>
                        <p>
                            {{#user.status}}
                            <span class="badge badge-{{user.status}}">{{user.status}}</span>
                            {{/user.status}}
                            {{^user.status}}
                            <span class="badge badge-active">Active</span>
                            {{/user.status}}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Information Card -->
        <div class="profile-card">
            <div class="card-header">
                <h3><i class="bi bi-telephone"></i> Información de Contacto</h3>
            </div>
            <div class="card-body">
                <div class="profile-info">
                    {{#profile.phone}}
                    <div class="info-group">
                        <label>{{trans.phone}}</label>
                        <p>{{profile.phone}}</p>
                    </div>
                    {{/profile.phone}}
                    {{^profile.phone}}
                    <div class="info-group">
                        <label>{{trans.phone}}</label>
                        <p class="text-muted">No especificado</p>
                    </div>
                    {{/profile.phone}}

                    {{#profile.address}}
                    <div class="info-group">
                        <label>{{trans.address}}</label>
                        <p>{{profile.address}}</p>
                    </div>
                    {{/profile.address}}

                    {{#profile.city}}
                    <div class="info-group">
                        <label>{{trans.city}}</label>
                        <p>{{profile.city}}</p>
                    </div>
                    {{/profile.city}}

                    {{#profile.country}}
                    <div class="info-group">
                        <label>{{trans.country}}</label>
                        <p>{{profile.country}}</p>
                    </div>
                    {{/profile.country}}

                    {{#profile.postalcode}}
                    <div class="info-group">
                        <label>{{trans.postal_code}}</label>
                        <p>{{profile.postalcode}}</p>
                    </div>
                    {{/profile.postalcode}}
                </div>
            </div>
        </div>

        <!-- Additional Information Card -->
        <div class="profile-card">
            <div class="card-header">
                <h3><i class="bi bi-info-circle"></i> Información Adicional</h3>
            </div>
            <div class="card-body">
                <div class="profile-info">
                    {{#profile.bio}}
                    <div class="info-group">
                        <label>{{trans.bio}}</label>
                        <p class="bio-text">{{profile.bio}}</p>
                    </div>
                    {{/profile.bio}}

                    {{#profile.website}}
                    <div class="info-group">
                        <label>Sitio Web</label>
                        <p><a href="{{profile.website}}" target="_blank" class="link-primary">{{profile.website}}</a></p>
                    </div>
                    {{/profile.website}}

                    {{#profile.linkedin}}
                    <div class="info-group">
                        <label>LinkedIn</label>
                        <p><a href="{{profile.linkedin}}" target="_blank" class="link-primary">Ver perfil</a></p>
                    </div>
                    {{/profile.linkedin}}

                    {{#profile.twitter}}
                    <div class="info-group">
                        <label>Twitter</label>
                        <p><a href="https://twitter.com/{{profile.twitter}}" target="_blank" class="link-primary">@{{profile.twitter}}</a></p>
                    </div>
                    {{/profile.twitter}}

                    {{#profile.institution}}
                    <div class="info-group">
                        <label>Institución</label>
                        <p>{{profile.institution}}</p>
                    </div>
                    {{/profile.institution}}

                    {{#profile.department}}
                    <div class="info-group">
                        <label>Departamento</label>
                        <p>{{profile.department}}</p>
                    </div>
                    {{/profile.department}}

                    {{#profile.position}}
                    <div class="info-group">
                        <label>Cargo</label>
                        <p>{{profile.position}}</p>
                    </div>
                    {{/profile.position}}
                </div>
            </div>
        </div>

        <!-- Roles & Dates Card -->
        <div class="profile-card">
            <div class="card-header">
                <h3><i class="bi bi-shield-check"></i> {{trans.roles}} & Fechas</h3>
            </div>
            <div class="card-body">
                <div class="profile-info">
                    <div class="info-group">
                        <label>{{trans.roles}}</label>
                        <p>
                            {{#roles}}
                            <span class="role-badge">{{name}}</span>
                            {{/roles}}
                            {{^roles}}
                            <span class="text-muted">Sin roles asignados</span>
                            {{/roles}}
                        </p>
                    </div>

                    <div class="info-group">
                        <label>{{trans.member_since}}</label>
                        <p>{{user.created_at_formatted}}</p>
                    </div>

                    {{#profile.timemodified_formatted}}
                    <div class="info-group">
                        <label>{{trans.last_updated}}</label>
                        <p>{{profile.timemodified_formatted}}</p>
                    </div>
                    {{/profile.timemodified_formatted}}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.admin-container {
    padding: 20px 0;
    max-width: 1400px;
    margin: 0 auto;
}

.admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 2px solid var(--border-color);
}

.admin-header h2 {
    color: var(--text-primary);
    margin: 0 0 5px 0;
}

.text-muted {
    color: var(--text-secondary);
    margin: 0;
}

.user-actions {
    display: flex;
    gap: 10px;
}

.btn-sm {
    padding: 8px 16px;
    font-size: 0.875rem;
}

/* Alert */
.alert {
    padding: 15px 20px;
    border-radius: 8px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 12px;
}

.alert-success {
    background: #d4edda;
    color: #155724;
    border-left: 4px solid #28a745;
}

.alert-danger {
    background: #f8d7da;
    color: #721c24;
    border-left: 4px solid #dc3545;
}

/* Profile Grid */
.profile-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
    gap: 20px;
}

.profile-card {
    background: var(--bg-secondary);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.profile-card .card-header {
    background: var(--bg-primary);
    padding: 20px;
    border-bottom: 2px solid var(--border-color);
}

.profile-card .card-header h3 {
    color: var(--text-primary);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 1.1rem;
}

.profile-card .card-header h3 i {
    color: var(--iser-red);
}

.profile-card .card-body {
    padding: 20px;
}

.profile-info {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.info-group {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.info-group label {
    color: var(--text-secondary);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.info-group p {
    color: var(--text-primary);
    margin: 0;
    font-size: 1rem;
}

.bio-text {
    white-space: pre-wrap;
    line-height: 1.6;
}

.link-primary {
    color: var(--iser-blue);
    text-decoration: none;
}

.link-primary:hover {
    text-decoration: underline;
}

/* Badge */
.badge {
    display: inline-block;
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: capitalize;
}

.badge-active {
    background: #28a745;
    color: white;
}

.badge-suspended {
    background: #dc3545;
    color: white;
}

.role-badge {
    display: inline-block;
    background: var(--iser-blue);
    color: white;
    padding: 4px 10px;
    border-radius: 4px;
    font-size: 0.85rem;
    font-weight: 500;
    margin-right: 5px;
    margin-bottom: 5px;
}

/* Buttons */
.btn {
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.2s;
}

.btn-primary {
    background: var(--iser-red);
    color: white;
}

.btn-primary:hover {
    background: #c82333;
}

.btn-secondary {
    background: var(--bg-secondary);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
}

.btn-secondary:hover {
    background: var(--border-color);
}

/* Responsive */
@media (max-width: 768px) {
    .profile-grid {
        grid-template-columns: 1fr;
    }

    .admin-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
    }
}
</style>
