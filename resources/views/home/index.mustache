<!-- Landing Page -->
<div class="landing-hero">
    <div class="welcome-section">
        <h2>{{#__}}common.welcome{{/__}}</h2>
        <p class="lead">Sistema integral de autenticación y gestión para ISER</p>

        <div class="action-buttons">
            <a href="{{login_url}}" class="btn btn-primary">
                {{#__}}auth.login{{/__}}
            </a>
            <a href="{{admin_url}}" class="btn btn-secondary">
                {{#__}}common.admin_panel{{/__}}
            </a>
        </div>
    </div>

    <!-- Features Grid -->
    <div class="features-section">
        <h3>Características Principales</h3>
        <div class="features-grid">
            {{#features}}
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-{{icon}}"></i>
                </div>
                <h4>{{title}}</h4>
                <p>{{description}}</p>
            </div>
            {{/features}}
        </div>
    </div>
</div>

<style>
.landing-hero {
    padding: 40px 0;
}

.welcome-section {
    text-align: center;
    margin-bottom: 60px;
}

