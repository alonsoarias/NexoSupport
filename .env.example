# =========================================
# NEXOSUPPORT - CONFIGURATION
# =========================================
# Copy this file to .env and configure with your settings
# IMPORTANT: Never commit .env file to version control

# -----------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------
APP_ENV=development
APP_DEBUG=true
APP_NAME="NexoSupport"
APP_URL=http://localhost
APP_TIMEZONE=America/Bogota
APP_LANG=es

# -----------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------
# Supported: mysql, pgsql
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=nexosupport
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=nxs_

# -----------------------------------------
# SESSION CONFIGURATION
# -----------------------------------------
SESSION_LIFETIME=7200
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax

# -----------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------
# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# -----------------------------------------
# EMAIL CONFIGURATION
# -----------------------------------------
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_PATH=var/logs/nexosupport.log
LOG_MAX_FILES=14

# -----------------------------------------
# CACHE CONFIGURATION
# -----------------------------------------
CACHE_DRIVER=file
CACHE_PATH=var/cache
CACHE_TTL=3600

# -----------------------------------------
# MULTI-FACTOR AUTHENTICATION (MFA)
# -----------------------------------------
MFA_ENABLED=false
MFA_REQUIRED_FOR_ADMIN=false
MFA_GRACE_PERIOD=7

# MFA Factors
MFA_TOTP_ENABLED=true
MFA_EMAIL_ENABLED=true
MFA_BACKUP_ENABLED=true

# Email Code Settings
MFA_EMAIL_CODE_LENGTH=6
MFA_EMAIL_CODE_EXPIRY=600
MFA_EMAIL_MAX_ATTEMPTS=3

# -----------------------------------------
# RATE LIMITING
# -----------------------------------------
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_DECAY_MINUTES=15

# -----------------------------------------
# USER MANAGEMENT
# -----------------------------------------
# Pagination
USERS_PER_PAGE=20
DEFAULT_ITEMS_PER_PAGE=50

# -----------------------------------------
# ROLES AND PERMISSIONS (RBAC)
# -----------------------------------------
# Permission caching
PERMISSION_CACHE_ENABLED=true
PERMISSION_CACHE_TTL=3600

# Role management
ROLE_ALLOW_DUPLICATE_ASSIGNMENTS=false
ROLE_STRICT_MODE=true

# Default roles
DEFAULT_USER_ROLE=user
DEFAULT_GUEST_ROLE=guest

# -----------------------------------------
# DEVELOPMENT & DEBUGGING SETTINGS
# -----------------------------------------
# Debug level: 0=NONE, 1=MINIMAL, 2=NORMAL, 3=DEVELOPER, 4=ALL
# Production should use 0 or 1, Development can use 2 or 3
DEBUG_LEVEL=0
DEBUG_DISPLAY=false
DEBUG_SHOW_ERRORS=false

# Developer Mode Features (disable in production!)
DEVELOPER_MODE=false
SHOW_SQL_QUERIES=false
ENABLE_QUERY_LOG=false
SHOW_PERFORMANCE_INFO=false
SHOW_TEMPLATE_HINTS=false
ENABLE_PROFILER=false

# Cache Control for Development
CACHE_ENABLED_DEV=true
FORCE_CACHE_REFRESH=false
TEMPLATE_CACHE_ENABLED=true
STRING_CACHE_ENABLED=true

# Database Development
DB_LOG_QUERIES=false
DB_LOG_SLOW_QUERIES=true
DB_SLOW_QUERY_TIME=5.0
