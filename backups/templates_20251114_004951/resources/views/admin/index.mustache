<!-- Admin Dashboard -->
<div class="admin-container">
    <div class="admin-header">
        <div>
            <h2>Panel de Administración</h2>
            <p class="text-muted">Vista general del sistema</p>
        </div>
        <div class="admin-user-info">
            <span><i class="bi bi-person-circle"></i> {{current_user.full_name}}</span>
            <a href="/dashboard" class="btn btn-sm btn-neutral">
                <i class="bi bi-arrow-left"></i> Dashboard
            </a>
            <a href="/logout" class="btn btn-sm btn-danger">
                <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
            </a>
        </div>
    </div>

    <!-- Estadísticas del Sistema (DATOS REALES) -->
    <div class="stats-grid">
        <div class="stat-card stat-primary">
            <div class="stat-icon">
                <i class="bi bi-people-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{stats.total_users}}</div>
                <div class="stat-label">Usuarios Totales</div>
                <div class="stat-sublabel">{{stats.active_users}} activos</div>
            </div>
        </div>

        <div class="stat-card stat-success">
            <div class="stat-icon">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{stats.successful_logins_today}}</div>
                <div class="stat-label">Logins Exitosos Hoy</div>
                <div class="stat-sublabel">De {{stats.login_attempts_today}} intentos</div>
            </div>
        </div>

        <div class="stat-card stat-warning">
            <div class="stat-icon">
                <i class="bi bi-shield-exclamation"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{stats.login_attempts_today}}</div>
                <div class="stat-label">Intentos de Login Hoy</div>
                <div class="stat-sublabel">Total del día</div>
            </div>
        </div>

        <div class="stat-card stat-info">
            <div class="stat-icon">
                <i class="bi bi-activity"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">{{stats.active_users}}</div>
                <div class="stat-label">Usuarios Activos</div>
                <div class="stat-sublabel">Estado activo</div>
            </div>
        </div>
    </div>

    <!-- Menú de Administración -->
    <div class="admin-menu-section">
        <h3>Módulos de Administración</h3>
        <div class="admin-menu-grid">
            {{#menu_items}}
            <a href="{{url}}" class="admin-menu-item">
                <div class="menu-icon">
                    <i class="bi bi-{{icon}}"></i>
                </div>
                <div class="menu-content">
                    <div class="menu-title">{{title}}</div>
                    {{#count}}
                    <div class="menu-badge">{{count}}</div>
                    {{/count}}
                </div>
            </a>
            {{/menu_items}}
        </div>
    </div>

    <!-- Actividad Reciente (DATOS REALES) -->
    <div class="activity-section">
        <h3>Actividad Reciente de Login</h3>
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>IP</th>
                        <th>Estado</th>
                        <th>Fecha/Hora</th>
                    </tr>
                </thead>
                <tbody>
                    {{#recent_activity}}
                    <tr class="{{#success}}success{{/success}}{{^success}}failed{{/success}}">
                        <td>{{username}}</td>
                        <td><code>{{ip_address}}</code></td>
                        <td>
                            {{#success}}
                            <span class="badge badge-success">
                                <i class="bi bi-check-circle"></i> {{success_label}}
                            </span>
                            {{/success}}
                            {{^success}}
                            <span class="badge badge-danger">
                                <i class="bi bi-x-circle"></i> {{success_label}}
                            </span>
                            {{/success}}
                        </td>
                        <td>{{attempted_at}}</td>
                    </tr>
                    {{/recent_activity}}
                    {{^recent_activity}}
                    <tr>
                        <td colspan="4" class="text-center text-muted">
                            No hay actividad reciente
                        </td>
                    </tr>
                    {{/recent_activity}}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Usuarios Recientes (DATOS REALES) -->
    <div class="users-section">
        <h3>Usuarios Recientes</h3>
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Email</th>
                        <th>Nombre</th>
                        <th>Estado</th>
                        <th>Registrado</th>
                    </tr>
                </thead>
                <tbody>
                    {{#recent_users}}
                    <tr>
                        <td><strong>{{username}}</strong></td>
                        <td>{{email}}</td>
                        <td>{{full_name}}</td>
                        <td>
                            <span class="badge badge-{{status}}">{{status}}</span>
                        </td>
                        <td>{{created_at}}</td>
                    </tr>
                    {{/recent_users}}
                    {{^recent_users}}
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            No hay usuarios recientes
                        </td>
                    </tr>
                    {{/recent_users}}
                </tbody>
            </table>
        </div>
    </div>
</div>
