<div class="row">
    {{#tools}}
    <div class="col-md-6 mb-4">
        <div class="stat-card h-100">
            <div class="d-flex align-items-start mb-3">
                <div class="stat-icon bg-primary bg-opacity-10 text-primary me-3">
                    <i class="bi {{icon}}"></i>
                </div>
                <div class="flex-grow-1">
                    <h5 class="mb-1">{{name}}</h5>
                    <p class="text-muted small mb-3">{{description}}</p>
                    {{#enabled}}
                    <a href="{{url}}" class="btn btn-primary btn-sm">
                        <i class="bi bi-arrow-right-circle"></i> Abrir Herramienta
                    </a>
                    {{/enabled}}
                    {{^enabled}}
                    <span class="badge bg-secondary">No disponible</span>
                    {{/enabled}}
                </div>
            </div>
        </div>
    </div>
    {{/tools}}
</div>

<div class="settings-section mt-4">
    <h3><i class="bi bi-info-circle"></i> Información del Sistema</h3>
    <div class="row">
        <div class="col-md-6">
            <h5>Base de Datos</h5>
            <table class="table table-sm">
                <tr>
                    <td><strong>Tamaño:</strong></td>
                    <td>{{db_size_mb}} MB</td>
                </tr>
                <tr>
                    <td><strong>Tablas:</strong></td>
                    <td>{{db_table_count}}</td>
                </tr>
            </table>
        </div>
        <div class="col-md-6">
            <h5>Caché</h5>
            <table class="table table-sm">
                <tr>
                    <td><strong>Total Items:</strong></td>
                    <td>{{cache_total}}</td>
                </tr>
                <tr>
                    <td><strong>Expirados:</strong></td>
                    <td>{{cache_expired}}</td>
                </tr>
            </table>
            <form method="POST" action="/admin/tools.php">
                <input type="hidden" name="action" value="clearcache">
                <button type="submit" class="btn btn-warning btn-sm">
                    <i class="bi bi-trash"></i> Limpiar Caché
                </button>
            </form>
        </div>
    </div>
</div>
