# NexoSupport - Apache Configuration
#
# NOTA: Este archivo es necesario para desarrollo.
# En producción, esta configuración debe estar en el VirtualHost.

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Si el archivo o directorio existe, servir directamente
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Todas las demás peticiones van a index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Prevenir listado de directorios
Options -Indexes

# Proteger archivos sensibles
<FilesMatch "^\.">
    Require all denied
</FilesMatch>
