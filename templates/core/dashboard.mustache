{{!
    Dashboard Template

    Context:
    * user - Current user object
    * showadmin - Show admin menu
    * fullname - User's full name
    * totalusers - Total users count
    * activeusers - Active users count
    * totalroles - Total roles count
    * activesessions - Active sessions count
    * showquickactions - Show quick actions section
    * canmanageusers - Can manage users
    * canmanageroles - Can manage roles
    * canmanageconfig - Can manage config
    * recentlogins - Array of recent login users
    * hasrecentlogins - Boolean for recent logins
}}
{{> core/header}}

<style>
    .dashboard-header {
        margin-bottom: 2rem;
    }

    .dashboard-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        margin: 0 0 0.5rem 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .welcome-msg {
        color: var(--text-secondary);
        font-size: 1rem;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: var(--bg-primary);
        border-radius: 0.75rem;
        padding: 1.5rem;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        transition: all var(--transition-fast);
    }

    .stat-card:hover {
        box-shadow: var(--shadow-md);
        border-color: var(--primary-light);
    }

    .stat-icon {
        width: 56px;
        height: 56px;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .stat-icon.users {
        background: rgba(99, 102, 241, 0.1);
        color: var(--primary-color);
    }

    .stat-icon.active {
        background: rgba(16, 185, 129, 0.1);
        color: var(--success);
    }

    .stat-icon.roles {
        background: rgba(245, 158, 11, 0.1);
        color: var(--warning);
    }

    .stat-icon.sessions {
        background: rgba(59, 130, 246, 0.1);
        color: var(--info);
    }

    .stat-content {
        flex: 1;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        line-height: 1;
        margin-bottom: 0.25rem;
    }

    .stat-label {
        color: var(--text-secondary);
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.025em;
        font-weight: 500;
    }

    .section-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 1.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.25rem;
        margin-bottom: 2rem;
    }

    .action-card {
        background: var(--bg-primary);
        border-radius: 0.75rem;
        padding: 1.5rem;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        text-decoration: none;
        transition: all var(--transition-fast);
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }

    .action-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-md);
        border-color: var(--primary-light);
    }

    .action-icon {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, var(--primary-gradient-start), var(--primary-gradient-end));
        border-radius: 0.625rem;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .action-content h3 {
        color: var(--primary-color);
        font-size: 1rem;
        font-weight: 600;
        margin: 0 0 0.25rem 0;
    }

    .action-content p {
        margin: 0;
        color: var(--text-secondary);
        font-size: 0.875rem;
        line-height: 1.5;
    }

    .recent-activity {
        background: var(--bg-primary);
        border-radius: 0.75rem;
        padding: 1.5rem;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
    }

    .recent-activity h2 {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0 0 1rem 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .activity-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .activity-item {
        padding: 1rem 0;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .activity-item:last-child {
        border-bottom: none;
        padding-bottom: 0;
    }

    .activity-item:first-child {
        padding-top: 0;
    }

    .activity-user {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary-gradient-start), var(--primary-gradient-end));
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .user-info strong {
        display: block;
        color: var(--text-primary);
        font-size: 0.9375rem;
    }

    .user-info span {
        color: var(--text-muted);
        font-size: 0.8125rem;
    }

    .activity-time {
        color: var(--text-muted);
        font-size: 0.8125rem;
        text-align: right;
    }

    .empty-state {
        text-align: center;
        padding: 2rem;
        color: var(--text-muted);
    }

    .empty-state i {
        font-size: 2.5rem;
        margin-bottom: 0.75rem;
        opacity: 0.5;
    }
</style>

<div class="dashboard-header">
    <h1><i class="fas fa-home"></i> {{#str}}dashboard,core{{/str}}</h1>
    <p class="welcome-msg">{{#str}}welcomeback,core{{/str}}, <strong>{{fullname}}</strong></p>
</div>

<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon users">
            <i class="fas fa-users"></i>
        </div>
        <div class="stat-content">
            <div class="stat-value">{{totalusers}}</div>
            <div class="stat-label">{{#str}}totalusers,core{{/str}}</div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon active">
            <i class="fas fa-user-check"></i>
        </div>
        <div class="stat-content">
            <div class="stat-value">{{activeusers}}</div>
            <div class="stat-label">{{#str}}activeusers,core{{/str}}</div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon roles">
            <i class="fas fa-shield-alt"></i>
        </div>
        <div class="stat-content">
            <div class="stat-value">{{totalroles}}</div>
            <div class="stat-label">{{#str}}totalroles,core{{/str}}</div>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon sessions">
            <i class="fas fa-clock"></i>
        </div>
        <div class="stat-content">
            <div class="stat-value">{{activesessions}}</div>
            <div class="stat-label">{{#str}}activesessions,core{{/str}}</div>
        </div>
    </div>
</div>

{{#showquickactions}}
<h2 class="section-title"><i class="fas fa-bolt"></i> {{#str}}quickactions,core{{/str}}</h2>
<div class="actions-grid">
    {{#canmanageusers}}
    <a href="/admin/user/" class="action-card">
        <div class="action-icon">
            <i class="fas fa-users-cog"></i>
        </div>
        <div class="action-content">
            <h3>{{#str}}manageusers,core{{/str}}</h3>
            <p>{{#str}}manageusers_desc,core{{/str}}</p>
        </div>
    </a>
    {{/canmanageusers}}

    {{#canmanageroles}}
    <a href="/admin/roles/" class="action-card">
        <div class="action-icon">
            <i class="fas fa-shield-alt"></i>
        </div>
        <div class="action-content">
            <h3>{{#str}}manageroles,core{{/str}}</h3>
            <p>{{#str}}manageroles_desc,core{{/str}}</p>
        </div>
    </a>
    {{/canmanageroles}}

    {{#canmanageconfig}}
    <a href="/admin/settings/" class="action-card">
        <div class="action-icon">
            <i class="fas fa-cog"></i>
        </div>
        <div class="action-content">
            <h3>{{#str}}settings,core{{/str}}</h3>
            <p>{{#str}}managesettings_desc,core{{/str}}</p>
        </div>
    </a>
    {{/canmanageconfig}}

    <a href="/user/profile" class="action-card">
        <div class="action-icon">
            <i class="fas fa-user-circle"></i>
        </div>
        <div class="action-content">
            <h3>{{#str}}profile,core{{/str}}</h3>
            <p>{{#str}}myprofile_desc,core{{/str}}</p>
        </div>
    </a>
</div>
{{/showquickactions}}

<div class="recent-activity">
    <h2><i class="fas fa-history"></i> {{#str}}recentactivity,core{{/str}}</h2>

    {{^hasrecentlogins}}
    <div class="empty-state">
        <i class="fas fa-inbox"></i>
        <p>{{#str}}norecentactivity,core{{/str}}</p>
    </div>
    {{/hasrecentlogins}}

    {{#hasrecentlogins}}
    <ul class="activity-list">
        {{#recentlogins}}
        <li class="activity-item">
            <div class="activity-user">
                <div class="user-avatar">
                    {{initials}}
                </div>
                <div class="user-info">
                    <strong>{{{fullname}}}</strong>
                    <span>{{{username}}}</span>
                </div>
            </div>
            <div class="activity-time">
                {{#str}}lastlogin,core{{/str}}<br>
                {{{lastloginformatted}}}
            </div>
        </li>
        {{/recentlogins}}
    </ul>
    {{/hasrecentlogins}}
</div>

{{> core/footer}}
