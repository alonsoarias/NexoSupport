{{> core/header}}

<style>
    .report-container { max-width: 900px; margin: 0 auto; }
    .report-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; }
    .report-header h1 { font-size: 1.75rem; font-weight: 700; color: var(--text-primary); margin: 0; }
    .summary-cards { display: flex; gap: 1rem; margin-bottom: 1.5rem; }
    .summary-card { flex: 1; padding: 1.25rem; border-radius: 0.75rem; text-align: center; }
    .summary-card.ok { background: rgba(16, 185, 129, 0.15); color: var(--success); }
    .summary-card.warning { background: rgba(245, 158, 11, 0.15); color: #b45309; }
    .summary-card.critical { background: rgba(239, 68, 68, 0.15); color: var(--error); }
    .summary-card .count { font-size: 2rem; font-weight: 700; }
    .summary-card .label { font-size: 0.875rem; }
    .checks-list { background: var(--bg-primary); border-radius: 0.75rem; border: 1px solid var(--border-color); overflow: hidden; }
    .check-item { display: flex; justify-content: space-between; align-items: center; padding: 1rem 1.25rem; border-bottom: 1px solid var(--border-color); }
    .check-item:last-child { border-bottom: none; }
    .check-item:hover { background: var(--bg-secondary); }
    .check-name { font-weight: 600; color: var(--text-primary); }
    .check-message { font-size: 0.875rem; color: var(--text-secondary); }
    .check-status { padding: 0.375rem 0.75rem; border-radius: 0.5rem; font-size: 0.75rem; font-weight: 600; }
    .check-status.ok { background: var(--success); color: white; }
    .check-status.warning { background: var(--warning); color: #1f2937; }
    .check-status.critical { background: var(--error); color: white; }
    .breadcrumb { display: flex; gap: 0.5rem; margin-bottom: 1rem; font-size: 0.875rem; color: var(--text-muted); }
    .breadcrumb a { color: var(--primary-color); text-decoration: none; }
</style>

<div class="report-container">
    <div class="breadcrumb">
        <a href="/admin">{{#str}}administration,core{{/str}}</a>
        <span>/</span>
        <span>{{#str}}securityreport,core{{/str}}</span>
    </div>

    <div class="report-header">
        <h1><i class="fas fa-shield-alt"></i> {{#str}}securityreport,core{{/str}}</h1>
    </div>

    <div class="summary-cards">
        <div class="summary-card ok">
            <div class="count">{{okcount}}</div>
            <div class="label"><i class="fas fa-check-circle"></i> OK</div>
        </div>
        <div class="summary-card warning">
            <div class="count">{{warningcount}}</div>
            <div class="label"><i class="fas fa-exclamation-triangle"></i> {{#str}}warnings,core{{/str}}</div>
        </div>
        <div class="summary-card critical">
            <div class="count">{{criticalcount}}</div>
            <div class="label"><i class="fas fa-times-circle"></i> {{#str}}critical,core{{/str}}</div>
        </div>
    </div>

    {{#haschecks}}
    <div class="checks-list">
        {{#checks}}
        <div class="check-item">
            <div>
                <div class="check-name">{{name}}</div>
                <div class="check-message">{{message}}</div>
            </div>
            <span class="check-status {{status}}">
                {{#status_ok}}<i class="fas fa-check"></i> OK{{/status_ok}}
                {{#status_warning}}<i class="fas fa-exclamation-triangle"></i> Warning{{/status_warning}}
                {{#status_critical}}<i class="fas fa-times"></i> Critical{{/status_critical}}
            </span>
        </div>
        {{/checks}}
    </div>
    {{/haschecks}}
</div>

{{> core/footer}}
