{{!
    System Paths Settings Template
}}
{{> core/header}}

<style>
    .settings-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .settings-header h1 {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .settings-card {
        background: var(--bg-primary);
        border-radius: 0.75rem;
        padding: 1.5rem;
        border: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .form-group .description {
        font-size: 0.8125rem;
        color: var(--text-muted);
        margin-bottom: 0.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.625rem 0.875rem;
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        background: var(--bg-secondary);
        color: var(--text-primary);
        font-size: 0.875rem;
        font-family: monospace;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
    }

    .path-status {
        display: flex;
        gap: 1rem;
        margin-top: 0.5rem;
        font-size: 0.8125rem;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
    }

    .status-success {
        background: rgba(16, 185, 129, 0.15);
        color: var(--success);
    }

    .status-danger {
        background: rgba(239, 68, 68, 0.15);
        color: var(--error);
    }

    .btn-primary {
        background: var(--primary-color);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
    }

    .btn-primary:hover {
        background: var(--primary-hover);
    }

    .breadcrumb {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1rem;
        font-size: 0.875rem;
        color: var(--text-muted);
    }

    .breadcrumb a {
        color: var(--primary-color);
        text-decoration: none;
    }

    .alert {
        padding: 1rem;
        border-radius: 0.5rem;
        margin-bottom: 1rem;
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.15);
        color: var(--success);
        border: 1px solid rgba(16, 185, 129, 0.3);
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.15);
        color: var(--error);
        border: 1px solid rgba(239, 68, 68, 0.3);
    }
</style>

<div class="settings-container">
    <div class="breadcrumb">
        <a href="/admin">{{#str}}administration,core{{/str}}</a>
        <span>/</span>
        <a href="/admin/settings">{{#str}}settings,core{{/str}}</a>
        <span>/</span>
        <span>{{#str}}systempaths,admin{{/str}}</span>
    </div>

    <div class="settings-header">
        <h1><i class="fas fa-folder-open"></i> {{#str}}systempaths,admin{{/str}}</h1>
    </div>

    {{#success}}
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i> {{success}}
    </div>
    {{/success}}

    {{#haserrors}}
    <div class="alert alert-danger">
        {{#errors}}
        <p><i class="fas fa-exclamation-circle"></i> {{.}}</p>
        {{/errors}}
    </div>
    {{/haserrors}}

    <form method="POST" class="settings-card">
        <input type="hidden" name="sesskey" value="{{sesskey}}">

        <div class="form-group">
            <label for="dataroot">Data Root</label>
            <p class="description">{{#str}}configdataroot,admin{{/str}}</p>
            <input type="text" id="dataroot" name="dataroot" class="form-control" value="{{dataroot}}">
            <div class="path-status">
                {{#dataroot_exists}}
                <span class="status-badge status-success"><i class="fas fa-check"></i> {{#str}}exists,core{{/str}}</span>
                {{/dataroot_exists}}
                {{^dataroot_exists}}
                <span class="status-badge status-danger"><i class="fas fa-times"></i> {{#str}}notexists,core{{/str}}</span>
                {{/dataroot_exists}}
                {{#dataroot_writable}}
                <span class="status-badge status-success"><i class="fas fa-check"></i> {{#str}}writable,core{{/str}}</span>
                {{/dataroot_writable}}
                {{^dataroot_writable}}
                <span class="status-badge status-danger"><i class="fas fa-times"></i> {{#str}}notwritable,core{{/str}}</span>
                {{/dataroot_writable}}
            </div>
        </div>

        <div class="form-group">
            <label for="tempdir">Temp Directory</label>
            <p class="description">{{#str}}configtempdir,admin{{/str}}</p>
            <input type="text" id="tempdir" name="tempdir" class="form-control" value="{{tempdir}}">
            <div class="path-status">
                {{#tempdir_exists}}
                <span class="status-badge status-success"><i class="fas fa-check"></i> {{#str}}exists,core{{/str}}</span>
                {{/tempdir_exists}}
                {{^tempdir_exists}}
                <span class="status-badge status-danger"><i class="fas fa-times"></i> {{#str}}notexists,core{{/str}}</span>
                {{/tempdir_exists}}
                {{#tempdir_writable}}
                <span class="status-badge status-success"><i class="fas fa-check"></i> {{#str}}writable,core{{/str}}</span>
                {{/tempdir_writable}}
                {{^tempdir_writable}}
                <span class="status-badge status-danger"><i class="fas fa-times"></i> {{#str}}notwritable,core{{/str}}</span>
                {{/tempdir_writable}}
            </div>
        </div>

        <div class="form-group">
            <label for="cachedir">Cache Directory</label>
            <p class="description">{{#str}}configcachedir,admin{{/str}}</p>
            <input type="text" id="cachedir" name="cachedir" class="form-control" value="{{cachedir}}">
            <div class="path-status">
                {{#cachedir_exists}}
                <span class="status-badge status-success"><i class="fas fa-check"></i> {{#str}}exists,core{{/str}}</span>
                {{/cachedir_exists}}
                {{^cachedir_exists}}
                <span class="status-badge status-danger"><i class="fas fa-times"></i> {{#str}}notexists,core{{/str}}</span>
                {{/cachedir_exists}}
                {{#cachedir_writable}}
                <span class="status-badge status-success"><i class="fas fa-check"></i> {{#str}}writable,core{{/str}}</span>
                {{/cachedir_writable}}
                {{^cachedir_writable}}
                <span class="status-badge status-danger"><i class="fas fa-times"></i> {{#str}}notwritable,core{{/str}}</span>
                {{/cachedir_writable}}
            </div>
        </div>

        <button type="submit" class="btn-primary">
            <i class="fas fa-save"></i> {{#str}}savechanges,core{{/str}}
        </button>
    </form>
</div>

{{> core/footer}}
