{{> core/header }}

<div class="main-layout">
    {{#has_navigation}}
    <nav class="sidebar-navigation">
        {{{navigation_html}}}
    </nav>
    {{/has_navigation}}

    <main class="content-area">
        <div class="container-fluid">
            <h1>ğŸ—‘ï¸ {{#str}}cache_purge,admin{{/str}}</h1>

            {{#success}}
            <div class="alert alert-success">
                <strong>âœ“ {{#str}}cache_purge_success,admin{{/str}}:</strong> {{success}}
            </div>
            {{/success}}

            {{#haserrors}}
            <div class="alert alert-danger">
                <strong>âœ— {{#str}}error_occurred,admin{{/str}}:</strong>
                <ul>
                    {{#errors}}
                    <li>{{.}}</li>
                    {{/errors}}
                </ul>
            </div>
            {{/haserrors}}

            {{#has_purge_results}}
            <div class="card mb-4">
                <div class="card-header">
                    <h3>{{#str}}cache_purge_results,admin{{/str}}</h3>
                </div>
                <div class="card-body">
                    {{#purge_results.opcache}}
                    <div class="purge-result {{#success}}text-success{{/success}}{{^success}}text-danger{{/success}}">
                        {{#success}}âœ“{{/success}}{{^success}}âœ—{{/success}} <strong>OPcache:</strong> {{message}}
                    </div>
                    {{/purge_results.opcache}}

                    {{#purge_results.mustache}}
                    <div class="purge-result {{#success}}text-success{{/success}}{{^success}}text-danger{{/success}}">
                        {{#success}}âœ“{{/success}}{{^success}}âœ—{{/success}} <strong>{{#str}}cache_purge_mustache,admin{{/str}}:</strong> {{message}}
                    </div>
                    {{/purge_results.mustache}}

                    {{#purge_results.i18n}}
                    <div class="purge-result {{#success}}text-success{{/success}}{{^success}}text-danger{{/success}}">
                        {{#success}}âœ“{{/success}}{{^success}}âœ—{{/success}} <strong>{{#str}}cache_purge_i18n,admin{{/str}}:</strong> {{message}}
                    </div>
                    {{/purge_results.i18n}}

                    {{#purge_results.application}}
                    <div class="purge-result {{#success}}text-success{{/success}}{{^success}}text-danger{{/success}}">
                        {{#success}}âœ“{{/success}}{{^success}}âœ—{{/success}} <strong>{{#str}}cache_purge_app,admin{{/str}}:</strong> {{message}}
                    </div>
                    {{/purge_results.application}}

                    {{#purge_results.rbac}}
                    <div class="purge-result {{#success}}text-success{{/success}}{{^success}}text-danger{{/success}}">
                        {{#success}}âœ“{{/success}}{{^success}}âœ—{{/success}} <strong>{{#str}}cache_purge_rbac,admin{{/str}}:</strong> {{message}}
                    </div>
                    {{/purge_results.rbac}}
                </div>
            </div>
            {{/has_purge_results}}

            <div class="row">
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3>OPcache {{#str}}cache_status,admin{{/str}}</h3>
                        </div>
                        <div class="card-body">
                            {{#opcache_enabled}}
                            <table class="table table-sm">
                                <tr>
                                    <th>{{#str}}cache_status,admin{{/str}}</th>
                                    <td><span class="badge badge-success">{{#str}}cache_enabled,admin{{/str}}</span></td>
                                </tr>
                                <tr>
                                    <th>{{#str}}cache_memory_used,admin{{/str}}</th>
                                    <td>{{opcache_memory_used}}</td>
                                </tr>
                                <tr>
                                    <th>{{#str}}cache_memory_free,admin{{/str}}</th>
                                    <td>{{opcache_memory_free}}</td>
                                </tr>
                                <tr>
                                    <th>{{#str}}cache_memory_wasted,admin{{/str}}</th>
                                    <td>{{opcache_memory_wasted}}</td>
                                </tr>
                                <tr>
                                    <th>{{#str}}cache_scripts,admin{{/str}}</th>
                                    <td>{{opcache_scripts}}</td>
                                </tr>
                                <tr>
                                    <th>{{#str}}cache_hits,admin{{/str}}</th>
                                    <td>{{opcache_hits}}</td>
                                </tr>
                                <tr>
                                    <th>{{#str}}cache_misses,admin{{/str}}</th>
                                    <td>{{opcache_misses}}</td>
                                </tr>
                                {{#opcache_hit_rate}}
                                <tr>
                                    <th>{{#str}}cache_hit_rate,admin{{/str}}</th>
                                    <td><strong>{{opcache_hit_rate}}</strong></td>
                                </tr>
                                {{/opcache_hit_rate}}
                            </table>
                            {{/opcache_enabled}}
                            {{^opcache_enabled}}
                            <p class="text-muted">{{#str}}cache_opcache_disabled,admin{{/str}}</p>
                            {{/opcache_enabled}}
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3>{{#str}}cache_purge_mustache,admin{{/str}} {{#str}}cache_status,admin{{/str}}</h3>
                        </div>
                        <div class="card-body">
                            {{#mustache_enabled}}
                            <table class="table table-sm">
                                <tr>
                                    <th>{{#str}}cache_status,admin{{/str}}</th>
                                    <td><span class="badge badge-success">{{#str}}cache_enabled,admin{{/str}}</span></td>
                                </tr>
                                <tr>
                                    <th>{{#str}}cache_templates,admin{{/str}}</th>
                                    <td>{{mustache_templates}}</td>
                                </tr>
                                <tr>
                                    <th>{{#str}}cache_size,admin{{/str}}</th>
                                    <td>{{mustache_cache_size}}</td>
                                </tr>
                            </table>
                            {{/mustache_enabled}}
                            {{^mustache_enabled}}
                            <p class="text-muted">{{#str}}cache_mustache_disabled,admin{{/str}}</p>
                            {{/mustache_enabled}}
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3>{{#str}}cache_purge,admin{{/str}}</h3>
                        </div>
                        <div class="card-body">
                            <p>{{#str}}cache_purge_help,admin{{/str}}</p>

                            <form method="POST" action="" class="mb-3">
                                <input type="hidden" name="sesskey" value="{{sesskey}}">
                                <input type="hidden" name="purge_type" value="all">
                                <button type="submit" class="btn btn-danger btn-block">
                                    ğŸ—‘ï¸ {{#str}}cache_purge_all,admin{{/str}}
                                </button>
                            </form>

                            {{#opcache_enabled}}
                            <form method="POST" action="" class="mb-3">
                                <input type="hidden" name="sesskey" value="{{sesskey}}">
                                <input type="hidden" name="purge_type" value="opcache">
                                <button type="submit" class="btn btn-warning btn-block">
                                    ğŸ”„ {{#str}}cache_purge_opcache,admin{{/str}}
                                </button>
                            </form>
                            {{/opcache_enabled}}

                            {{#mustache_enabled}}
                            <form method="POST" action="" class="mb-3">
                                <input type="hidden" name="sesskey" value="{{sesskey}}">
                                <input type="hidden" name="purge_type" value="mustache">
                                <button type="submit" class="btn btn-warning btn-block">
                                    ğŸ”„ {{#str}}cache_purge_mustache,admin{{/str}}
                                </button>
                            </form>
                            {{/mustache_enabled}}

                            <form method="POST" action="" class="mb-3">
                                <input type="hidden" name="sesskey" value="{{sesskey}}">
                                <input type="hidden" name="purge_type" value="i18n">
                                <button type="submit" class="btn btn-warning btn-block">
                                    ğŸ”„ {{#str}}cache_purge_i18n,admin{{/str}}
                                </button>
                            </form>

                            <form method="POST" action="" class="mb-3">
                                <input type="hidden" name="sesskey" value="{{sesskey}}">
                                <input type="hidden" name="purge_type" value="application">
                                <button type="submit" class="btn btn-warning btn-block">
                                    ğŸ”„ {{#str}}cache_purge_app,admin{{/str}}
                                </button>
                            </form>

                            <form method="POST" action="" class="mb-3">
                                <input type="hidden" name="sesskey" value="{{sesskey}}">
                                <input type="hidden" name="purge_type" value="rbac">
                                <button type="submit" class="btn btn-warning btn-block">
                                    ğŸ”„ {{#str}}cache_purge_rbac,admin{{/str}}
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info">
                <h4>â„¹ï¸ {{#str}}cache_about,admin{{/str}}</h4>
                <ul>
                    <li><strong>OPcache:</strong> {{#str}}cache_opcache_help,admin{{/str}}</li>
                    <li><strong>{{#str}}cache_purge_mustache,admin{{/str}}:</strong> {{#str}}cache_mustache_help,admin{{/str}}</li>
                    <li><strong>{{#str}}cache_purge_i18n,admin{{/str}}:</strong> {{#str}}cache_i18n_help,admin{{/str}}</li>
                    <li><strong>{{#str}}cache_purge_app,admin{{/str}}:</strong> {{#str}}cache_app_help,admin{{/str}}</li>
                    <li><strong>{{#str}}cache_purge_rbac,admin{{/str}}:</strong> {{#str}}cache_rbac_help,admin{{/str}}</li>
                </ul>
            </div>
        </div>
    </main>
</div>

{{> core/footer }}
