{{!
    HTTP Settings Template
}}
{{> core/header}}

<style>
    .settings-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .settings-header h1 {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .settings-card {
        background: var(--bg-primary);
        border-radius: 0.75rem;
        padding: 1.5rem;
        border: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
    }

    .settings-card h3 {
        font-size: 1.125rem;
        color: var(--primary-color);
        margin: 0 0 1rem 0;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid var(--border-color);
    }

    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .form-group .description {
        font-size: 0.8125rem;
        color: var(--text-muted);
        margin-bottom: 0.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.625rem 0.875rem;
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        background: var(--bg-secondary);
        color: var(--text-primary);
        font-size: 0.875rem;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
    }

    .form-control-sm {
        max-width: 200px;
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-check input[type="checkbox"] {
        width: 1.125rem;
        height: 1.125rem;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .btn-primary {
        background: var(--primary-color);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
    }

    .btn-primary:hover {
        background: var(--primary-hover);
    }

    .breadcrumb {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1rem;
        font-size: 0.875rem;
        color: var(--text-muted);
    }

    .breadcrumb a {
        color: var(--primary-color);
        text-decoration: none;
    }

    .alert {
        padding: 1rem;
        border-radius: 0.5rem;
        margin-bottom: 1rem;
    }

    .alert-success {
        background: rgba(16, 185, 129, 0.15);
        color: var(--success);
        border: 1px solid rgba(16, 185, 129, 0.3);
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.15);
        color: var(--error);
        border: 1px solid rgba(239, 68, 68, 0.3);
    }

    .info-badge {
        display: inline-block;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        font-size: 0.75rem;
        font-weight: 600;
        margin-left: 0.5rem;
    }

    .badge-success {
        background: rgba(16, 185, 129, 0.15);
        color: var(--success);
    }

    .badge-warning {
        background: rgba(245, 158, 11, 0.15);
        color: var(--warning);
    }
</style>

<div class="settings-container">
    <div class="breadcrumb">
        <a href="/admin">{{#str}}administration,core{{/str}}</a>
        <span>/</span>
        <a href="/admin/settings">{{#str}}settings,core{{/str}}</a>
        <span>/</span>
        <span>{{#str}}http,admin{{/str}}</span>
    </div>

    <div class="settings-header">
        <h1><i class="fas fa-globe"></i> {{#str}}http,admin{{/str}}</h1>
    </div>

    {{#success}}
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i> {{success}}
    </div>
    {{/success}}

    {{#haserrors}}
    <div class="alert alert-danger">
        {{#errors}}
        <p><i class="fas fa-exclamation-circle"></i> {{.}}</p>
        {{/errors}}
    </div>
    {{/haserrors}}

    <form method="POST">
        <input type="hidden" name="sesskey" value="{{sesskey}}">

        <div class="settings-card">
            <h3><i class="fas fa-link"></i> {{#str}}wwwsettings,admin{{/str}}</h3>

            <div class="form-group">
                <label for="wwwroot">{{#str}}wwwroot,admin{{/str}}</label>
                <p class="description">{{#str}}configwwwroot,admin{{/str}}</p>
                <input type="url" id="wwwroot" name="wwwroot" class="form-control" value="{{wwwroot}}" required>
                <small style="color: var(--text-muted);">
                    {{#str}}currentserver,admin{{/str}}:
                    {{#server_https}}<span class="info-badge badge-success">HTTPS</span>{{/server_https}}
                    {{^server_https}}<span class="info-badge badge-warning">HTTP</span>{{/server_https}}
                    {{server_host}}
                </small>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input type="checkbox" id="sslproxy" name="sslproxy" value="1" {{#sslproxy_checked}}checked{{/sslproxy_checked}}>
                    <label for="sslproxy">{{#str}}sslproxy,admin{{/str}}</label>
                </div>
                <p class="description">{{#str}}configsslproxy,admin{{/str}}</p>
            </div>
        </div>

        <div class="settings-card">
            <h3><i class="fas fa-server"></i> {{#str}}proxysettings,admin{{/str}}</h3>

            <div class="form-row">
                <div class="form-group">
                    <label for="proxyhost">{{#str}}proxyhost,admin{{/str}}</label>
                    <input type="text" id="proxyhost" name="proxyhost" class="form-control" value="{{proxyhost}}"
                           placeholder="proxy.example.com">
                </div>

                <div class="form-group">
                    <label for="proxyport">{{#str}}proxyport,admin{{/str}}</label>
                    <input type="number" id="proxyport" name="proxyport" class="form-control form-control-sm"
                           value="{{proxyport}}" placeholder="8080">
                </div>
            </div>

            <div class="form-group">
                <label for="proxytype">{{#str}}proxytype,admin{{/str}}</label>
                <select id="proxytype" name="proxytype" class="form-control form-control-sm">
                    <option value="HTTP" {{#proxytype_http}}selected{{/proxytype_http}}>HTTP</option>
                    <option value="SOCKS5" {{#proxytype_socks5}}selected{{/proxytype_socks5}}>SOCKS5</option>
                </select>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="proxyuser">{{#str}}proxyuser,admin{{/str}}</label>
                    <input type="text" id="proxyuser" name="proxyuser" class="form-control" value="{{proxyuser}}">
                </div>

                <div class="form-group">
                    <label for="proxypassword">{{#str}}proxypassword,admin{{/str}}</label>
                    <input type="password" id="proxypassword" name="proxypassword" class="form-control"
                           placeholder="{{#str}}leaveemptytokeep,admin{{/str}}">
                </div>
            </div>

            <div class="form-group">
                <label for="proxybypass">{{#str}}proxybypass,admin{{/str}}</label>
                <p class="description">{{#str}}configproxybypass,admin{{/str}}</p>
                <input type="text" id="proxybypass" name="proxybypass" class="form-control" value="{{proxybypass}}"
                       placeholder="localhost, 127.0.0.1">
            </div>
        </div>

        <button type="submit" class="btn-primary">
            <i class="fas fa-save"></i> {{#str}}savechanges,core{{/str}}
        </button>
    </form>
</div>

{{> core/footer}}
