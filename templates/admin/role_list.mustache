{{!
    Role List Template

    Context:
    * roles - Array of roles
    * hasroles - Boolean for roles
    * canmanageroles - Can manage roles
    * sesskey - Session key
}}
{{> core/header}}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin: 0;
    }

    .roles-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: 1.5rem;
        margin-top: 1.5rem;
    }

    .role-card {
        background: var(--bg-primary);
        border-radius: 0.75rem;
        padding: 1.5rem;
        border: 1px solid var(--border-color);
        transition: all var(--transition-fast);
    }

    .role-card:hover {
        box-shadow: var(--shadow-md);
        border-color: var(--primary-light);
    }

    .role-card h3 {
        margin: 0 0 0.5rem 0;
        color: var(--primary-color);
        font-size: 1.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .role-card .shortname {
        color: var(--text-muted);
        font-size: 0.875rem;
        margin-bottom: 1rem;
        font-family: monospace;
    }

    .role-card .description {
        color: var(--text-secondary);
        line-height: 1.6;
        margin-bottom: 1rem;
        font-size: 0.9375rem;
    }

    .capability-list {
        background: var(--bg-tertiary);
        padding: 1rem;
        border-radius: 0.5rem;
        max-height: 200px;
        overflow-y: auto;
    }

    .capability-item {
        padding: 0.5rem;
        border-bottom: 1px solid var(--border-color);
        font-size: 0.8125rem;
        font-family: monospace;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .capability-item:last-child {
        border-bottom: none;
    }

    .permission {
        padding: 0.125rem 0.5rem;
        border-radius: 0.25rem;
        font-size: 0.6875rem;
        font-weight: 600;
    }

    .permission-allow {
        background: var(--success);
        color: white;
    }

    .permission-prevent {
        background: var(--error);
        color: white;
    }

    .user-count {
        background: rgba(99, 102, 241, 0.1);
        padding: 0.75rem;
        border-radius: 0.5rem;
        margin-top: 1rem;
        text-align: center;
        color: var(--primary-color);
        font-weight: 500;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: linear-gradient(135deg, var(--primary-gradient-start), var(--primary-gradient-end));
        color: white;
        text-decoration: none;
        border-radius: 0.5rem;
        font-size: 0.875rem;
        font-weight: 500;
        transition: all var(--transition-fast);
    }

    .btn:hover {
        transform: translateY(-1px);
        box-shadow: var(--shadow-md);
    }

    .btn-sm {
        padding: 0.375rem 0.75rem;
        font-size: 0.8125rem;
    }

    .btn-danger { background: var(--error); }
    .btn-secondary { background: var(--text-secondary); }

    .action-buttons {
        display: flex;
        gap: 0.375rem;
        flex-wrap: wrap;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--border-color);
    }

    .system-role-badge {
        background: var(--warning);
        color: #1f2937;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        font-size: 0.6875rem;
        font-weight: 700;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: var(--bg-primary);
        border-radius: 0.75rem;
        border: 2px dashed var(--border-color);
    }

    .empty-state i {
        font-size: 3rem;
        color: var(--text-muted);
        margin-bottom: 1rem;
    }
</style>

<div class="page-header">
    <h1><i class="fas fa-shield-alt"></i> {{#str}}rolemanagement,core{{/str}}</h1>
    {{#canmanageroles}}
    <a href="/admin/roles/edit.php?id=0" class="btn">
        <i class="fas fa-plus"></i> {{#str}}createrole,core{{/str}}
    </a>
    {{/canmanageroles}}
</div>

{{#hasroles}}
<div class="roles-grid">
    {{#roles}}
        <div class="role-card">
            <h3>
                <i class="fas fa-user-shield"></i>
                {{{name}}}
                {{#issystemrole}}
                    <span class="system-role-badge">{{#str}}systemrole,core{{/str}}</span>
                {{/issystemrole}}
            </h3>
            <div class="shortname">{{#str}}code,core{{/str}}: {{{shortname}}}</div>

            {{#hasdescription}}
            <div class="description">{{{description}}}</div>
            {{/hasdescription}}

            <h4 style="font-size: 0.875rem; margin-bottom: 0.5rem;">
                <i class="fas fa-key"></i> {{#str}}capabilities,core{{/str}}:
            </h4>
            <div class="capability-list">
                {{^hascapabilities}}
                    <p style="color: var(--text-muted); text-align: center; margin: 0.5rem 0;">
                        {{#str}}nocapabilities,core{{/str}}
                    </p>
                {{/hascapabilities}}
                {{#hascapabilities}}
                    {{#capabilities}}
                        <div class="capability-item">
                            <span>{{{name}}}</span>
                            <span class="permission permission-{{permissionclass}}">{{{permissiontext}}}</span>
                        </div>
                    {{/capabilities}}
                {{/hascapabilities}}
            </div>

            <div class="user-count">
                <i class="fas fa-users"></i> {{#str}}usercount,core{{/str}} {{usercount}}
            </div>

            {{#canmanageroles}}
            <div class="action-buttons">
                <a href="/admin/roles/edit.php?id={{id}}" class="btn btn-sm" title="{{#str}}edit,core{{/str}}">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="/admin/roles/define.php?roleid={{id}}" class="btn btn-sm" title="{{#str}}capabilities,core{{/str}}">
                    <i class="fas fa-key"></i>
                </a>
                <a href="/admin/roles/assign.php?roleid={{id}}" class="btn btn-sm" title="{{#str}}users,core{{/str}}">
                    <i class="fas fa-users"></i>
                </a>

                {{#canmoveup}}
                    <a href="/admin/roles/?moveup={{id}}&sesskey={{sesskey}}" class="btn btn-sm btn-secondary" title="{{#str}}moveup,core{{/str}}">
                        <i class="fas fa-arrow-up"></i>
                    </a>
                {{/canmoveup}}

                {{#canmovedown}}
                    <a href="/admin/roles/?movedown={{id}}&sesskey={{sesskey}}" class="btn btn-sm btn-secondary" title="{{#str}}movedown,core{{/str}}">
                        <i class="fas fa-arrow-down"></i>
                    </a>
                {{/canmovedown}}

                {{#candelete}}
                    <a href="/admin/roles/?delete={{id}}&sesskey={{sesskey}}" class="btn btn-sm btn-danger" onclick="return confirm('{{#str}}confirmdeleterole,core{{/str}}');" title="{{#str}}delete,core{{/str}}">
                        <i class="fas fa-trash"></i>
                    </a>
                {{/candelete}}
            </div>
            {{/canmanageroles}}
        </div>
    {{/roles}}
</div>
{{/hasroles}}

{{^hasroles}}
    <div class="empty-state">
        <i class="fas fa-shield-alt"></i>
        <h3>{{#str}}noroles,core{{/str}}</h3>
        <p style="color: var(--text-secondary); margin-bottom: 1rem;">No hay roles definidos en el sistema.</p>
        <a href="/admin/roles/edit.php?id=0" class="btn">
            <i class="fas fa-plus"></i> {{#str}}createfirstrole,core{{/str}}
        </a>
    </div>
{{/hasroles}}

{{> core/footer}}
