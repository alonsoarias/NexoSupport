{{!
    User List Template

    Context:
    * totalusers - Total users count
    * search - Search query
    * users - Array of users
    * hasusers - Boolean for users
    * sesskey - Session key
}}
{{> core/header}}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin: 0;
    }

    .page-header p {
        color: var(--text-secondary);
        margin-top: 0.5rem;
    }

    .actions-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .search-box {
        display: flex;
        gap: 0.5rem;
        flex: 1;
        max-width: 500px;
    }

    .search-box input {
        flex: 1;
        padding: 0.625rem 1rem;
        border: 2px solid var(--border-color);
        border-radius: 0.5rem;
        font-size: 0.9375rem;
        transition: border-color var(--transition-fast);
    }

    .search-box input:focus {
        outline: none;
        border-color: var(--primary-color);
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1.25rem;
        background: linear-gradient(135deg, var(--primary-gradient-start), var(--primary-gradient-end));
        color: white;
        text-decoration: none;
        border-radius: 0.5rem;
        border: none;
        cursor: pointer;
        font-size: 0.9375rem;
        font-weight: 500;
        transition: all var(--transition-fast);
        white-space: nowrap;
    }

    .btn:hover {
        transform: translateY(-1px);
        box-shadow: var(--shadow-md);
    }

    .btn-secondary {
        background: var(--text-secondary);
    }

    .btn-sm {
        padding: 0.375rem 0.75rem;
        font-size: 0.8125rem;
    }

    .btn-danger {
        background: var(--error);
    }

    .btn-warning {
        background: var(--warning);
        color: #1f2937;
    }

    .btn-success {
        background: var(--success);
    }

    .btn-info {
        background: var(--info);
    }

    .action-buttons {
        display: flex;
        gap: 0.25rem;
        flex-wrap: wrap;
    }

    .data-table {
        width: 100%;
        border-collapse: collapse;
        background: var(--bg-primary);
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
    }

    .data-table thead {
        background: var(--bg-tertiary);
    }

    .data-table th,
    .data-table td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid var(--border-color);
    }

    .data-table th {
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.025em;
    }

    .data-table tbody tr:hover {
        background: var(--bg-secondary);
    }

    .data-table tbody tr:last-child td {
        border-bottom: none;
    }

    .badge {
        display: inline-flex;
        align-items: center;
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .badge-success {
        background: #ecfdf5;
        color: #065f46;
    }

    .badge-warning {
        background: #fffbeb;
        color: #92400e;
    }

    .badge-danger {
        background: #fef2f2;
        color: #991b1b;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: var(--bg-primary);
        border-radius: 0.75rem;
        border: 2px dashed var(--border-color);
    }

    .empty-state i {
        font-size: 3rem;
        color: var(--text-muted);
        margin-bottom: 1rem;
    }

    .empty-state h3 {
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .empty-state p {
        color: var(--text-secondary);
    }

    .stats-badge {
        background: var(--bg-tertiary);
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        font-size: 0.875rem;
        color: var(--text-secondary);
    }

    .stats-badge strong {
        color: var(--primary-color);
    }
</style>

<div class="page-header">
    <div>
        <h1><i class="fas fa-users"></i> {{#str}}usermanagement,core{{/str}}</h1>
        <p class="stats-badge">{{#str}}totalusers,core{{/str}}: <strong>{{totalusers}}</strong></p>
    </div>
    <a href="/admin/user/edit.php?id=0" class="btn">
        <i class="fas fa-plus"></i> {{#str}}newuser,core{{/str}}
    </a>
</div>

<div class="actions-bar">
    <form method="GET" class="search-box">
        <input type="text" name="search" placeholder="{{#str}}searchbyname,core{{/str}}" value="{{{search}}}">
        <button type="submit" class="btn">
            <i class="fas fa-search"></i> {{#str}}search,core{{/str}}
        </button>
        {{#search}}
            <a href="/admin/user/" class="btn btn-secondary">{{#str}}cancel,core{{/str}}</a>
        {{/search}}
    </form>
</div>

{{^hasusers}}
    <div class="empty-state">
        <i class="fas fa-users-slash"></i>
        <h3>{{#str}}nousersfound,core{{/str}}</h3>
        <p>{{#str}}pleaseselectcriteria,core{{/str}}</p>
    </div>
{{/hasusers}}

{{#hasusers}}
    <table class="data-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>{{#str}}username,core{{/str}}</th>
                <th>{{#str}}name,core{{/str}}</th>
                <th>{{#str}}email,core{{/str}}</th>
                <th>{{#str}}status,core{{/str}}</th>
                <th>{{#str}}lastlogin,core{{/str}}</th>
                <th>{{#str}}actions,core{{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#users}}
                <tr>
                    <td><strong>{{id}}</strong></td>
                    <td>{{{username}}}</td>
                    <td>{{{fullname}}}</td>
                    <td>{{{email}}}</td>
                    <td>
                        {{#issuspended}}
                            <span class="badge badge-warning">
                                <i class="fas fa-pause-circle"></i> {{#str}}suspended,core{{/str}}
                            </span>
                        {{/issuspended}}
                        {{^issuspended}}
                            <span class="badge badge-success">
                                <i class="fas fa-check-circle"></i> {{#str}}active,core{{/str}}
                            </span>
                        {{/issuspended}}
                    </td>
                    <td>{{{lastloginformatted}}}</td>
                    <td>
                        <div class="action-buttons">
                            <a href="/admin/user/edit.php?id={{id}}" class="btn btn-sm" title="{{#str}}edit,core{{/str}}">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/admin/roles/assign.php?userid={{id}}" class="btn btn-sm btn-secondary" title="{{#str}}roles,core{{/str}}">
                                <i class="fas fa-shield-alt"></i>
                            </a>

                            {{#canconfirm}}
                                <a href="/admin/user/?confirmuser={{id}}&sesskey={{sesskey}}" class="btn btn-sm btn-success" onclick="return confirm('{{#str}}confirm,core{{/str}}?');" title="{{#str}}confirm,core{{/str}}">
                                    <i class="fas fa-check"></i>
                                </a>
                            {{/canconfirm}}

                            {{#cansuspend}}
                                <a href="/admin/user/?suspend={{id}}&sesskey={{sesskey}}" class="btn btn-sm btn-warning" onclick="return confirm('{{#str}}confirm,core{{/str}}?');" title="{{#str}}suspenduser,core{{/str}}">
                                    <i class="fas fa-pause"></i>
                                </a>
                            {{/cansuspend}}

                            {{#canunsuspend}}
                                <a href="/admin/user/?unsuspend={{id}}&sesskey={{sesskey}}" class="btn btn-sm btn-success" onclick="return confirm('{{#str}}confirm,core{{/str}}?');" title="{{#str}}active,core{{/str}}">
                                    <i class="fas fa-play"></i>
                                </a>
                            {{/canunsuspend}}

                            {{#candelete}}
                                <a href="/admin/user/?delete={{id}}&sesskey={{sesskey}}" class="btn btn-sm btn-danger" onclick="return confirm('{{#str}}confirmdeleteuser,core{{/str}}');" title="{{#str}}delete,core{{/str}}">
                                    <i class="fas fa-trash"></i>
                                </a>
                            {{/candelete}}
                        </div>
                    </td>
                </tr>
            {{/users}}
        </tbody>
    </table>
{{/hasusers}}

{{> core/footer}}
