{{!
    Admin Dashboard Template

    Context:
    * user - Current user object (auto-injected)
    * firstname - User first name
    * has_navigation - Has sidebar navigation
    * navigation_html - Navigation HTML
}}
{{> core/header}}

<div class="nexo-page-header">
    <h1><i class="fas fa-tachometer-alt"></i> {{#str}}administration,admin{{/str}}</h1>
    <p class="nexo-page-description">{{#str}}admin_welcome,admin{{/str}}, {{user.firstname}}</p>
</div>

<style>
    .nexo-page-header {
        margin-bottom: 2rem;
    }

    .nexo-page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .nexo-page-description {
        font-size: 1.125rem;
        color: var(--text-secondary);
    }

    .admin-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .admin-card {
        background: var(--bg-primary);
        border: 2px solid var(--border-color);
        border-radius: 0.75rem;
        padding: 1.75rem;
        text-decoration: none;
        color: var(--text-primary);
        transition: all var(--transition-fast);
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        position: relative;
        overflow: hidden;
    }

    .admin-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-gradient-start), var(--primary-gradient-end));
        transform: scaleX(0);
        transition: transform var(--transition-normal);
    }

    .admin-card:hover::before {
        transform: scaleX(1);
    }

    .admin-card:hover {
        border-color: var(--primary-color);
        box-shadow: var(--shadow-lg);
        transform: translateY(-2px);
    }

    .admin-card.disabled {
        opacity: 0.5;
        cursor: not-allowed;
        pointer-events: none;
    }

    .admin-card-icon {
        font-size: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }

    .admin-card h3 {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .admin-card p {
        color: var(--text-secondary);
        font-size: 0.9375rem;
        line-height: 1.6;
        margin: 0;
    }

    .admin-card-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: var(--primary-color);
        color: white;
        border-radius: 1rem;
        font-size: 0.75rem;
        font-weight: 600;
        margin-top: 0.5rem;
    }

    .admin-card-badge.badge-warning {
        background: var(--warning);
        color: #1f2937;
    }

    .admin-card-badge.badge-info {
        background: var(--info);
    }

    .nexo-stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .nexo-stat-card {
        background: var(--bg-primary);
        border: 1px solid var(--border-color);
        border-radius: 0.75rem;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .nexo-stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        background: linear-gradient(135deg, var(--primary-gradient-start), var(--primary-gradient-end));
        color: white;
    }

    .nexo-stat-content {
        flex: 1;
    }

    .nexo-stat-label {
        font-size: 0.875rem;
        color: var(--text-secondary);
        margin-bottom: 0.25rem;
    }

    .nexo-stat-value {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--text-primary);
    }
</style>

<!-- System Stats -->
<div class="nexo-stats-grid">
    <div class="nexo-stat-card">
        <div class="nexo-stat-icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="nexo-stat-content">
            <div class="nexo-stat-label">{{#str}}total_users,admin{{/str}}</div>
            <div class="nexo-stat-value">{{total_users}}</div>
        </div>
    </div>

    <div class="nexo-stat-card">
        <div class="nexo-stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
            <i class="fas fa-shield-alt"></i>
        </div>
        <div class="nexo-stat-content">
            <div class="nexo-stat-label">{{#str}}total_roles,admin{{/str}}</div>
            <div class="nexo-stat-value">{{total_roles}}</div>
        </div>
    </div>

    <div class="nexo-stat-card">
        <div class="nexo-stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
            <i class="fas fa-cog"></i>
        </div>
        <div class="nexo-stat-content">
            <div class="nexo-stat-label">{{#str}}system_version,admin{{/str}}</div>
            <div class="nexo-stat-value">{{version}}</div>
        </div>
    </div>
</div>

<!-- Admin Cards Grid -->
<div class="admin-grid">
    <a href="/admin/user/" class="admin-card">
        <div class="admin-card-icon">
            <i class="fas fa-users"></i>
        </div>
        <h3>{{#str}}users,admin{{/str}}</h3>
        <p>{{#str}}manage_users_description,admin{{/str}}</p>
        <span class="admin-card-badge">{{total_users}} {{#str}}users,admin{{/str}}</span>
    </a>

    <a href="/admin/roles/" class="admin-card">
        <div class="admin-card-icon">
            <i class="fas fa-shield-alt"></i>
        </div>
        <h3>{{#str}}roles,admin{{/str}}</h3>
        <p>{{#str}}manage_roles_description,admin{{/str}}</p>
        <span class="admin-card-badge">{{total_roles}} {{#str}}roles,admin{{/str}}</span>
    </a>

    <a href="/admin/settings/" class="admin-card">
        <div class="admin-card-icon">
            <i class="fas fa-cog"></i>
        </div>
        <h3>{{#str}}settings,admin{{/str}}</h3>
        <p>{{#str}}manage_settings_description,admin{{/str}}</p>
    </a>

    <a href="/admin/cache/purge.php" class="admin-card">
        <div class="admin-card-icon">
            <i class="fas fa-broom"></i>
        </div>
        <h3>{{#str}}cache,admin{{/str}}</h3>
        <p>{{#str}}cache_description,admin{{/str}}</p>
    </a>

    <a href="/admin/upgrade.php" class="admin-card">
        <div class="admin-card-icon">
            <i class="fas fa-sync-alt"></i>
        </div>
        <h3>{{#str}}upgrade,admin{{/str}}</h3>
        <p>{{#str}}upgrade_description,admin{{/str}}</p>
    </a>

    <div class="admin-card disabled">
        <div class="admin-card-icon">
            <i class="fas fa-plug"></i>
        </div>
        <h3>{{#str}}plugins,admin{{/str}}</h3>
        <p>{{#str}}plugins_description,admin{{/str}}</p>
        <span class="admin-card-badge badge-warning">{{#str}}coming_soon,core{{/str}}</span>
    </div>

    <div class="admin-card disabled">
        <div class="admin-card-icon">
            <i class="fas fa-palette"></i>
        </div>
        <h3>{{#str}}themes,admin{{/str}}</h3>
        <p>{{#str}}themes_description,admin{{/str}}</p>
        <span class="admin-card-badge badge-warning">{{#str}}coming_soon,core{{/str}}</span>
    </div>

    <div class="admin-card disabled">
        <div class="admin-card-icon">
            <i class="fas fa-chart-bar"></i>
        </div>
        <h3>{{#str}}reports,admin{{/str}}</h3>
        <p>{{#str}}reports_description,admin{{/str}}</p>
        <span class="admin-card-badge badge-warning">{{#str}}coming_soon,core{{/str}}</span>
    </div>
</div>

{{> core/footer}}
