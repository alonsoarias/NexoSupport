<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h2 mb-0">{{heading}}</h1>
                {{#has_entries}}
                <a href="{{export_url}}" class="btn btn-success">
                    <i class="bi bi-download"></i> {{strings.exportcsv}}
                </a>
                {{/has_entries}}
            </div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    {{>report_log/partials/filters}}
                </div>
            </div>
        </div>
    </div>

    <!-- Content Section -->
    <div class="row">
        <div class="col-12">
            {{#has_entries}}
                <!-- Log Entries Table -->
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        {{>report_log/partials/table}}
                    </div>
                </div>

                <!-- Pagination -->
                {{#pagination.total}}
                <div class="mt-3">
                    {{>report_log/partials/pagination}}
                </div>
                {{/pagination.total}}
            {{/has_entries}}

            {{^has_entries}}
                <!-- Empty State -->
                {{>report_log/partials/empty}}
            {{/has_entries}}
        </div>
    </div>
</div>
