<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th scope="col" class="text-center" style="width: 80px;">{{strings.id}}</th>
                <th scope="col" style="width: 150px;">{{strings.user}}</th>
                <th scope="col" style="width: 150px;">{{strings.action}}</th>
                <th scope="col" style="width: 120px;">{{strings.ipaddress}}</th>
                <th scope="col">{{strings.details}}</th>
                <th scope="col" style="width: 180px;">{{strings.date}}</th>
            </tr>
        </thead>
        <tbody>
            {{#entries}}
            <tr>
                <td class="text-center">
                    <span class="badge bg-secondary">{{id}}</span>
                </td>
                <td>
                    <strong>{{username}}</strong>
                </td>
                <td>
                    <code class="text-primary">{{action}}</code>
                </td>
                <td>
                    <span class="font-monospace small">{{ip_address}}</span>
                </td>
                <td>
                    {{#details}}
                    <span class="text-muted small">{{details}}</span>
                    {{/details}}
                    {{^details}}
                    <span class="text-muted fst-italic">-</span>
                    {{/details}}
                </td>
                <td>
                    <span class="font-monospace small">{{created_at}}</span>
                </td>
            </tr>
            {{/entries}}
        </tbody>
    </table>
</div>
