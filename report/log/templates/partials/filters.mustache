<form method="get" action="" class="audit-log-filters">
    <div class="row g-3">
        <!-- User ID Filter -->
        <div class="col-md-3">
            <label for="userid" class="form-label">{{strings.user}}</label>
            <input
                type="number"
                class="form-control"
                id="userid"
                name="userid"
                value="{{filters.userid}}"
                min="0"
                placeholder="{{strings.allusers}}"
                aria-label="{{strings.user}}"
            >
            <small class="form-text text-muted">{{strings.allusers}}</small>
        </div>

        <!-- Action Filter -->
        <div class="col-md-3">
            <label for="action" class="form-label">{{strings.action}}</label>
            <input
                type="text"
                class="form-control"
                id="action"
                name="action"
                value="{{filters.action}}"
                placeholder="{{strings.allactions}}"
                aria-label="{{strings.action}}"
            >
            <small class="form-text text-muted">{{strings.allactions}}</small>
        </div>

        <!-- Date From Filter -->
        <div class="col-md-2">
            <label for="datefrom" class="form-label">{{strings.from}}</label>
            <input
                type="date"
                class="form-control"
                id="datefrom"
                name="datefrom"
                value="{{filters.datefrom}}"
                aria-label="{{strings.from}}"
            >
        </div>

        <!-- Date To Filter -->
        <div class="col-md-2">
            <label for="dateto" class="form-label">{{strings.to}}</label>
            <input
                type="date"
                class="form-control"
                id="dateto"
                name="dateto"
                value="{{filters.dateto}}"
                aria-label="{{strings.to}}"
            >
        </div>

        <!-- Filter Button -->
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-funnel"></i> {{strings.filter}}
            </button>
        </div>
    </div>
</form>
