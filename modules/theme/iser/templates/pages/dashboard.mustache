<div class="dashboard-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-0">Dashboard</h1>
            <p class="text-muted mb-0">Bienvenido, {{user.name}}</p>
        </div>
        <div>
            <span class="badge bg-success">
                <i class="fas fa-circle me-1" style="font-size: 0.5rem;"></i>
                En línea
            </span>
        </div>
    </div>
</div>

<!-- Estadísticas -->
<div class="row mb-4">
    {{#stats}}
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-primary bg-opacity-10 text-primary me-3">
                        <i class="fas fa-book"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase mb-1 small">Mis Cursos</h6>
                        <h2 class="mb-0 fw-bold">{{stats.courses}}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-success bg-opacity-10 text-success me-3">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase mb-1 small">Completados</h6>
                        <h2 class="mb-0 fw-bold">{{stats.completed}}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-warning bg-opacity-10 text-warning me-3">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase mb-1 small">Tareas Pendientes</h6>
                        <h2 class="mb-0 fw-bold">{{stats.pending}}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stat-icon bg-info bg-opacity-10 text-info me-3">
                        <i class="fas fa-certificate"></i>
                    </div>
                    <div>
                        <h6 class="text-muted text-uppercase mb-1 small">Certificados</h6>
                        <h2 class="mb-0 fw-bold">{{stats.certificates}}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/stats}}
</div>

<!-- Cursos Recientes y Actividad -->
<div class="row">
    <!-- Cursos Recientes -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-book me-2 text-primary"></i>
                        Mis Cursos
                    </h5>
                    <a href="/courses" class="btn btn-sm btn-outline-primary">
                        Ver todos
                    </a>
                </div>
            </div>
            <div class="card-body">
                {{#courses}}
                <div class="course-item d-flex align-items-center mb-3 pb-3 border-bottom">
                    <div class="course-icon bg-primary bg-opacity-10 text-primary rounded me-3 p-3">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-1">{{name}}</h6>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: {{progress}}%" aria-valuenow="{{progress}}" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <small class="text-muted">{{progress}}% completado</small>
                    </div>
                    <div>
                        <a href="/course/{{id}}" class="btn btn-sm btn-outline-primary">
                            Continuar
                        </a>
                    </div>
                </div>
                {{/courses}}

                {{^courses}}
                <div class="text-center text-muted py-5">
                    <i class="fas fa-inbox fa-3x mb-3"></i>
                    <p class="mb-0">No tienes cursos inscritos aún</p>
                    <a href="/courses/browse" class="btn btn-primary mt-3">
                        Explorar Cursos
                    </a>
                </div>
                {{/courses}}
            </div>
        </div>
    </div>

    <!-- Actividad Reciente -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-clock me-2 text-info"></i>
                    Actividad Reciente
                </h5>
            </div>
            <div class="card-body">
                {{#activities}}
                <div class="activity-item d-flex mb-3">
                    <div class="activity-icon bg-{{type}} bg-opacity-10 text-{{type}} rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                        <i class="{{icon}}"></i>
                    </div>
                    <div class="flex-grow-1">
                        <p class="mb-1 small">{{message}}</p>
                        <small class="text-muted">{{time}}</small>
                    </div>
                </div>
                {{/activities}}

                {{^activities}}
                <div class="text-center text-muted py-4">
                    <i class="fas fa-history fa-2x mb-2"></i>
                    <p class="mb-0 small">No hay actividad reciente</p>
                </div>
                {{/activities}}
            </div>
        </div>

        <!-- Calendario -->
        <div class="card mt-4">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-calendar me-2 text-warning"></i>
                    Próximas Fechas
                </h5>
            </div>
            <div class="card-body">
                {{#upcoming}}
                <div class="upcoming-item mb-3 pb-3 border-bottom">
                    <div class="d-flex justify-content-between mb-1">
                        <strong class="small">{{title}}</strong>
                        <span class="badge bg-{{type}}">{{type_label}}</span>
                    </div>
                    <small class="text-muted">
                        <i class="fas fa-calendar-day me-1"></i>
                        {{date}}
                    </small>
                </div>
                {{/upcoming}}

                {{^upcoming}}
                <div class="text-center text-muted py-3">
                    <i class="fas fa-calendar-check fa-2x mb-2"></i>
                    <p class="mb-0 small">No hay eventos próximos</p>
                </div>
                {{/upcoming}}
            </div>
        </div>
    </div>
</div>
