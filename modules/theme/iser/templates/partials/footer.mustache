<footer class="site-footer bg-dark text-white mt-5 py-4">
    <div class="container-fluid">
        <div class="row">
            <!-- Información del sitio -->
            <div class="col-md-4 mb-3 mb-md-0">
                <h5 class="fw-bold">{{site_name}}</h5>
                <p class="text-muted small">{{site_description}}</p>
                <div class="social-links mt-3">
                    {{#social_links}}
                    <a href="{{url}}" class="text-white me-3" target="_blank" rel="noopener noreferrer" title="{{name}}">
                        <i class="fab fa-{{icon}} fa-lg"></i>
                    </a>
                    {{/social_links}}
                </div>
            </div>

            <!-- Enlaces rápidos -->
            <div class="col-md-4 mb-3 mb-md-0">
                <h6 class="fw-bold">Enlaces Rápidos</h6>
                <ul class="list-unstyled">
                    {{#footer_links}}
                    <li><a href="{{url}}" class="text-muted text-decoration-none small">{{title}}</a></li>
                    {{/footer_links}}
                    {{^footer_links}}
                    <li><a href="/about" class="text-muted text-decoration-none small">Acerca de</a></li>
                    <li><a href="/contact" class="text-muted text-decoration-none small">Contacto</a></li>
                    <li><a href="/help" class="text-muted text-decoration-none small">Ayuda</a></li>
                    <li><a href="/privacy" class="text-muted text-decoration-none small">Política de Privacidad</a></li>
                    <li><a href="/terms" class="text-muted text-decoration-none small">Términos de Uso</a></li>
                    {{/footer_links}}
                </ul>
            </div>

            <!-- Información de contacto -->
            <div class="col-md-4">
                <h6 class="fw-bold">Contacto</h6>
                {{#contact_email}}
                <p class="text-muted small mb-2">
                    <i class="fas fa-envelope me-2"></i>
                    <a href="mailto:{{contact_email}}" class="text-muted text-decoration-none">{{contact_email}}</a>
                </p>
                {{/contact_email}}
                {{#contact_phone}}
                <p class="text-muted small mb-2">
                    <i class="fas fa-phone me-2"></i>
                    {{contact_phone}}
                </p>
                {{/contact_phone}}
                {{#contact_address}}
                <p class="text-muted small mb-0">
                    <i class="fas fa-map-marker-alt me-2"></i>
                    {{contact_address}}
                </p>
                {{/contact_address}}
            </div>
        </div>

        <hr class="border-secondary my-4">

        <!-- Copyright -->
        <div class="row">
            <div class="col-12 text-center">
                <p class="text-muted small mb-0">
                    &copy; {{current_year}} {{site_name}}. Todos los derechos reservados.
                    {{#version}}
                    <span class="ms-2">v{{version}}</span>
                    {{/version}}
                </p>
            </div>
        </div>
    </div>
</footer>
