<div class="sidebar-inner">
    <nav class="nav flex-column">
        {{#sections}}
        <div class="nav-section {{#is_active}}active{{/is_active}}">
            {{#subsections}}
            <!-- Item con subsecciones -->
            <a class="nav-link d-flex align-items-center {{#is_active}}active{{/is_active}}" data-bs-toggle="collapse" href="#collapse{{name}}" role="button" aria-expanded="{{#is_active}}true{{/is_active}}{{^is_active}}false{{/is_active}}" aria-controls="collapse{{name}}">
                {{#icon}}<i class="{{icon}} me-2"></i>{{/icon}}
                <span class="flex-grow-1">{{title}}</span>
                {{#badge}}<span class="badge bg-primary ms-auto">{{badge}}</span>{{/badge}}
                <i class="fas fa-chevron-down ms-2 small"></i>
            </a>
            <div class="collapse {{#is_active}}show{{/is_active}}" id="collapse{{name}}">
                <nav class="nav flex-column ms-3">
                    {{#subsections}}
                    <a class="nav-link {{#is_active}}active{{/is_active}}" href="{{url}}">
                        {{title}}
                    </a>
                    {{/subsections}}
                </nav>
            </div>
            {{/subsections}}

            {{^subsections}}
            <!-- Item simple -->
            <a class="nav-link d-flex align-items-center {{#is_active}}active{{/is_active}}" href="{{url}}">
                {{#icon}}<i class="{{icon}} me-2"></i>{{/icon}}
                <span class="flex-grow-1">{{title}}</span>
                {{#badge}}<span class="badge bg-primary ms-auto">{{badge}}</span>{{/badge}}
            </a>
            {{/subsections}}
        </div>
        {{/sections}}
    </nav>
</div>
