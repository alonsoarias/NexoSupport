<div class="mb-3">
    {{#label}}
    <label class="form-label">
        {{label}}
        {{#required}}<span class="text-danger">*</span>{{/required}}
    </label>
    {{/label}}

    {{#options}}
    <div class="form-check {{#inline}}form-check-inline{{/inline}} {{#switch}}form-switch{{/switch}}">
        <input
            class="form-check-input"
            type="{{type}}"
            name="{{name}}"
            id="{{id}}"
            value="{{value}}"
            {{#checked}}checked{{/checked}}
            {{#disabled}}disabled{{/disabled}}
            {{#required}}required{{/required}}
        >
        <label class="form-check-label" for="{{id}}">
            {{text}}
        </label>
    </div>
    {{/options}}

    {{#help}}
    <div class="form-text">{{help}}</div>
    {{/help}}

    {{#error}}
    <div class="invalid-feedback d-block">{{error}}</div>
    {{/error}}
</div>
