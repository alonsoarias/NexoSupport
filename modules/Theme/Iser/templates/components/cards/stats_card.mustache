<div class="card stat-card h-100">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <div class="stat-icon bg-{{type}} bg-opacity-10 text-{{type}} me-3">
                <i class="{{icon}}"></i>
            </div>
            <div class="flex-grow-1">
                <h6 class="text-muted text-uppercase mb-1 small">{{title}}</h6>
                <h2 class="mb-0 fw-bold">{{value}}</h2>
                {{#subtitle}}
                <p class="text-muted small mb-0">{{subtitle}}</p>
                {{/subtitle}}
            </div>
        </div>

        {{#trend}}
        <div class="mt-3 pt-3 border-top">
            <span class="badge bg-{{trend_type}} bg-opacity-10 text-{{trend_type}}">
                <i class="fas fa-{{trend_icon}} me-1"></i>
                {{trend_value}}%
            </span>
            <span class="text-muted small ms-2">{{trend_label}}</span>
        </div>
        {{/trend}}

        {{#link}}
        <div class="mt-3">
            <a href="{{link}}" class="btn btn-sm btn-outline-{{type}} w-100">
                {{link_text}}
                <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
        {{/link}}
    </div>
</div>
