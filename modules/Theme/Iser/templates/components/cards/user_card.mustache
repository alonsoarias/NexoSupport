<div class="card user-card {{#featured}}user-card-featured{{/featured}} h-100">
    <div class="card-header bg-{{type}} text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="fas fa-user me-2"></i>{{name}}
            </h5>
            <span class="badge bg-light text-dark">{{role}}</span>
        </div>
    </div>
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-auto">
                <img src="{{avatar}}" alt="{{name}}" class="user-avatar rounded-circle" width="80" height="80" onerror="this.src='{{theme_url}}/assets/images/avatars/default/user.png'">
            </div>
            <div class="col">
                <p class="card-text mb-2">
                    <i class="fas fa-envelope me-2 text-muted"></i>
                    <a href="mailto:{{email}}" class="text-decoration-none">{{email}}</a>
                </p>
                {{#phone}}
                <p class="card-text mb-2">
                    <i class="fas fa-phone me-2 text-muted"></i>
                    {{phone}}
                </p>
                {{/phone}}
                <p class="card-text mb-2">
                    <i class="fas fa-calendar me-2 text-muted"></i>
                    Registrado: {{join_date}}
                </p>
                {{#last_login}}
                <p class="card-text mb-2">
                    <i class="fas fa-clock me-2 text-muted"></i>
                    Ãšltimo acceso: {{last_login}}
                </p>
                {{/last_login}}
                {{#department}}
                <p class="card-text mb-0">
                    <i class="fas fa-building me-2 text-muted"></i>
                    {{department}}
                </p>
                {{/department}}
            </div>
        </div>

        {{#stats}}
        <hr class="my-3">
        <div class="row text-center">
            {{#courses}}
            <div class="col-4">
                <div class="fw-bold text-primary">{{courses}}</div>
                <small class="text-muted">Cursos</small>
            </div>
            {{/courses}}
            {{#badges}}
            <div class="col-4">
                <div class="fw-bold text-success">{{badges}}</div>
                <small class="text-muted">Insignias</small>
            </div>
            {{/badges}}
            {{#points}}
            <div class="col-4">
                <div class="fw-bold text-warning">{{points}}</div>
                <small class="text-muted">Puntos</small>
            </div>
            {{/points}}
        </div>
        {{/stats}}
    </div>
    <div class="card-footer bg-transparent">
        <div class="btn-group w-100" role="group">
            <button type="button" class="btn btn-outline-primary btn-sm" data-action="view-profile" data-userid="{{id}}">
                <i class="fas fa-eye me-1"></i>Ver
            </button>
            {{#can_edit}}
            <button type="button" class="btn btn-outline-secondary btn-sm" data-action="edit-user" data-userid="{{id}}">
                <i class="fas fa-edit me-1"></i>Editar
            </button>
            {{/can_edit}}
            {{#can_delete}}
            <button type="button" class="btn btn-outline-danger btn-sm" data-action="delete-user" data-userid="{{id}}">
                <i class="fas fa-trash me-1"></i>Eliminar
            </button>
            {{/can_delete}}
        </div>
    </div>
</div>
