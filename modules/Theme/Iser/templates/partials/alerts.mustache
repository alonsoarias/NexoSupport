{{#alerts}}
<div class="alert alert-{{type}} alert-dismissible fade show" role="alert">
    {{#icon}}
    <i class="fas fa-{{icon}} me-2"></i>
    {{/icon}}
    {{^icon}}
    {{#type_success}}<i class="fas fa-check-circle me-2"></i>{{/type_success}}
    {{#type_danger}}<i class="fas fa-exclamation-circle me-2"></i>{{/type_danger}}
    {{#type_warning}}<i class="fas fa-exclamation-triangle me-2"></i>{{/type_warning}}
    {{#type_info}}<i class="fas fa-info-circle me-2"></i>{{/type_info}}
    {{/icon}}

    <strong>{{#title}}{{title}}{{/title}}{{^title}}{{#type_success}}Éxito{{/type_success}}{{#type_danger}}Error{{/type_danger}}{{#type_warning}}Advertencia{{/type_warning}}{{#type_info}}Información{{/type_info}}{{/title}}:</strong>
    {{message}}

    {{#dismissible}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    {{/dismissible}}
</div>
{{/alerts}}
