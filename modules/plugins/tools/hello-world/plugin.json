{
  "slug": "hello-world",
  "name": "Hello World Tool",
  "type": "tools",
  "version": "1.0.0",
  "description": "Example plugin demonstrating the NexoSupport plugin system. This is a simple tool that displays a 'Hello World' message.",
  "author": "NexoSupport Team",
  "author_url": "https://nexosupport.com",
  "plugin_url": "https://nexosupport.com/plugins/hello-world",
  "requires": "1.0.0",
  "namespace": "HelloWorld",
  "main_class": "HelloWorld\\Plugin",
  "dependencies": [],
  "hooks": [
    {
      "name": "admin.tools.menu",
      "callback": "HelloWorld\\Plugin::registerMenuItem",
      "priority": 10
    }
  ],
  "permissions": [
    {
      "name": "tools.helloworld.view",
      "description": "View Hello World tool"
    },
    {
      "name": "tools.helloworld.configure",
      "description": "Configure Hello World tool"
    }
  ],
  "assets": {
    "css": [
      "assets/css/hello-world.css"
    ],
    "js": [
      "assets/js/hello-world.js"
    ]
  },
  "config_schema": [
    {
      "name": "greeting_message",
      "type": "text",
      "label": "Greeting Message",
      "description": "The message to display to users",
      "default": "Hello, World!"
    },
    {
      "name": "show_icon",
      "type": "boolean",
      "label": "Show Icon",
      "description": "Display an icon next to the greeting",
      "default": true
    },
    {
      "name": "icon_color",
      "type": "select",
      "label": "Icon Color",
      "description": "Color of the icon",
      "default": "green",
      "options": [
        {"value": "green", "label": "Green"},
        {"value": "blue", "label": "Blue"},
        {"value": "red", "label": "Red"},
        {"value": "yellow", "label": "Yellow"}
      ]
    }
  ]
}
