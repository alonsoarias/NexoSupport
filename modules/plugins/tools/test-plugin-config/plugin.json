{
  "name": "Test Plugin Config",
  "slug": "test-plugin-config",
  "version": "1.5.0",
  "type": "tool",
  "description": "Comprehensive test plugin demonstrating the configuration system with all supported field types, validation rules, and schema capabilities.",
  "author": "ISER Development Team",
  "author_email": "dev@iser.com",
  "license": "Proprietary",
  "requires": {
    "php": ">=8.0",
    "iser": ">=1.0.0"
  },
  "config_schema": {
    "api_key": {
      "type": "string",
      "required": true,
      "label": "API Key",
      "description": "Your service API key for authentication",
      "placeholder": "Enter your API key",
      "min": 32,
      "max": 128,
      "pattern": "^[A-Za-z0-9_-]+$"
    },
    "api_endpoint": {
      "type": "url",
      "required": true,
      "label": "API Endpoint URL",
      "description": "The base URL for API requests",
      "default": "https://api.example.com",
      "placeholder": "https://api.example.com"
    },
    "admin_email": {
      "type": "email",
      "required": true,
      "label": "Administrator Email",
      "description": "Email address for admin notifications",
      "placeholder": "admin@example.com"
    },
    "enable_feature": {
      "type": "bool",
      "default": true,
      "label": "Enable Advanced Features",
      "description": "Activate advanced functionality (requires API key)"
    },
    "enable_logging": {
      "type": "checkbox",
      "default": false,
      "label": "Enable Debug Logging",
      "description": "Log all API requests for debugging (not recommended for production)"
    },
    "max_items": {
      "type": "int",
      "default": 10,
      "min": 1,
      "max": 100,
      "label": "Maximum Items Per Page",
      "description": "Number of items to display per page in lists"
    },
    "cache_timeout": {
      "type": "number",
      "default": 3600,
      "min": 60,
      "max": 86400,
      "label": "Cache Timeout (seconds)",
      "description": "How long to cache API responses (60-86400 seconds)"
    },
    "theme_color": {
      "type": "select",
      "default": "blue",
      "options": ["blue", "red", "green", "purple", "orange"],
      "label": "Theme Color",
      "description": "Primary color for plugin interface"
    },
    "notification_type": {
      "type": "radio",
      "default": "email",
      "options": ["email", "sms", "webhook"],
      "label": "Notification Method",
      "description": "How to send notifications"
    },
    "custom_css": {
      "type": "textarea",
      "required": false,
      "label": "Custom CSS",
      "description": "Optional custom CSS styles for plugin interface",
      "placeholder": "/* Your custom CSS here */",
      "rows": 6,
      "max": 5000
    },
    "welcome_message": {
      "type": "text",
      "default": "Welcome to Test Plugin Config!",
      "label": "Welcome Message",
      "description": "Message shown on plugin dashboard",
      "max": 200
    },
    "api_secret": {
      "type": "password",
      "required": false,
      "label": "API Secret Key",
      "description": "Optional secret key for webhook signatures",
      "min": 16,
      "max": 64
    }
  },
  "hooks": {
    "init": "TestPluginConfig::init",
    "admin_menu": "TestPluginConfig::addAdminMenu"
  },
  "permissions": [
    {
      "name": "test_plugin_config.configure",
      "description": "Configure plugin settings"
    }
  ]
}
